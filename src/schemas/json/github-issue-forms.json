    "bodyItem": {
      "type": "object",
      "properties": {
        "type": {
          "$ref": "#/definitions/type"
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "type": {
                "const": "markdown"
              }
            }
          },
          "then": {
            "$comment": "For additionalProperties to work 'type' must also be present here.",
            "type": "object",
            "properties": {
              "type": {
                "$ref": "#/definitions/type"
              },
              "attributes": {
                "type": "object",
                "properties": {
                  "value": {
                    "description": "The text that is rendered. Markdown formatting is supported.",
                    "type": "string",
                    "minLength": 1,
                    "examples": ["Sample value"]
                  }
                },
                "required": [
                  "value"
                ],
                "additionalProperties": false
              }
            },
            "required": [
              "type",
              "attributes"
            ],
            "additionalProperties": false
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "const": "textarea"
              }
            }
          },
          "then": {
            "$comment": "For additionalProperties to work 'type' must also be present here.",
            "type": "object",
            "properties": {
              "type": {
                "$ref": "#/definitions/type"
              },
              "attributes": {
                "type": "object",
                "properties": {
                  "label": {
                    "$ref": "#/definitions/label"
                  },
                  "description": {
                    "$ref": "#/definitions/description"
                  },
                  "placeholder": {
                    "$ref": "#/definitions/placeholder"
                  },
                  "value": {
                    "$ref": "#/definitions/value"
                  },
                  "render": {
                    "$ref": "#/definitions/render"
                  }
                },
                "required": [
                  "label"
                ],
                "additionalProperties": false
              },
              "id": {
                "$ref": "#/definitions/id"
              },
              "validations": {
                "$ref": "#/definitions/validations"
              }
            },
            "required": [
              "type",
              "attributes"
            ],
            "additionalProperties": false
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "const": "input"
              }
            }
          },
          "then": {
            "$comment": "For additionalProperties to work 'type' must also be present here.",
            "type": "object",
            "properties": {
              "type": {
                "$ref": "#/definitions/type"
              },
              "attributes": {
                "type": "object",
                "properties": {
                  "label": {
                    "$ref": "#/definitions/label"
                  },
                  "description": {
                    "$ref": "#/definitions/description"
                  },
                  "placeholder": {
                    "$ref": "#/definitions/placeholder"
                  },
                  "value": {
                    "$ref": "#/definitions/value"
                  }
                },
                "required": [
                  "label"
                ],
                "additionalProperties": false

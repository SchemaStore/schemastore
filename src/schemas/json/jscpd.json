{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://json.schemastore.org/jscpd.json",
  "type": "object",
  "properties": {
    "minLines": {
      "type": "number"
    },
    "maxLines": {
      "type": "string"
    },
    "maxSize": {
      "type": "string"
    },
    "minTokens": {
      "type": "number"
    },
    "output": {
      "type": "string"
    },
    "reporters": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "ignore": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "threshold": {
      "type": "number"
    },
    "exitCode": {
      "type": "number"
    },
    "absolute": {
      "type": "boolean"
    }
  }
}

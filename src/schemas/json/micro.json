{
  "$comment": "https://github.com/zyedidia/micro",
  "$schema": "http://json-schema.org/draft-07/schema",
  "additionalProperties": false,
  "properties": {
    "autoindent": {
      "default": "true"
    },
    "autosave": {
      "default": "0"
    },
    "autosu": {
      "default": "false"
    },
    "backup": {
      "default": "true"
    },
    "backupdir": {
      "default": "\"\""
    },
    "basename": {
      "default": "false"
    },
    "clipboard": {
      "default": "external"
    },
    "colorcolumn": {
      "default": "0"
    },
    "colorscheme": {
      "default": "default"
    },
    "cursorline": {
      "default": "true"
    },
    "diffgutter": {
      "default": "false"
    },
    "divchars": {
      "default": "|-"
    },
    "divreverse": {
      "default": "true"
    },
    "encoding": {
      "default": "utf-8"
    },
    "eofnewline": {
      "default": "true"
    },
    "fastdirty": {
      "default": "false"
    },
    "fileformat": {
      "default": "unix"
    },
    "filetype": {
      "default": "unknown"
    },
    "hlsearch": {
      "default": "false"
    },
    "incsearch": {
      "default": "true"
    },
    "ignorecase": {
      "default": "true"
    },
    "indentchar": {
      "default": " "
    },
    "infobar": {
      "default": "true"
    },
    "keepautoindent": {
      "default": "false"
    },
    "keymenu": {
      "default": "false"
    },
    "matchbrace": {
      "default": "true"
    },
    "mkparents": {
      "default": "false"
    },
    "mouse": {
      "default": "true"
    },
    "paste": {
      "default": "false"
    },
    "parsecursor": {
      "default": "false"
    },
    "permbackup": {
      "default": "false"
    },
    "pluginchannels": {
      "default": "https://raw.githubusercontent.com/micro-editor/plugin-channel/master/channel.json"
    },
    "pluginrepos": {
      "default": ""
    },
    "readonly": {
      "default": "false"
    },
    "rmtrailingws": {
      "default": "false"
    },
    "ruler": {
      "default": "true"
    },
    "relativeruler": {
      "default": "false"
    },
    "savecursor": {
      "default": "false"
    },
    "savehistory": {
      "default": "true"
    },
    "saveundo": {
      "default": "false"
    },
    "scrollbar": {
      "default": "false"
    },
    "scrollmargin": {
      "default": "3"
    },
    "scrollspeed": {
      "default": "2"
    },
    "smartpaste": {
      "default": "true"
    },
    "softwrap": {
      "default": "false"
    },
    "splitbottom": {
      "default": "true"
    },
    "splitright": {
      "default": "true"
    },
    "statusformatl": {
      "default": "$(bind:ToggleKeyMenu): bindings, $(bind:ToggleHelp): help"
    },
    "statusformatr": {
      "default": "true"
    },
    "statusline": {
      "default": "sudo"
    },
    "sucmd": {
      "default": "true"
    },
    "syntax": {
      "default": "false"
    },
    "tabmovement": {
      "default": "4"
    },
    "tabhighlight": {
      "default": "false"
    },
    "tabreverse": {
      "default": "true"
    },
    "tabsize": {
      "default": "false"
    }
  },
  "title": "A micro editor config schema",
  "type": "object"
}

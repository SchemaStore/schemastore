    "legacy": {
      "properties": {
        "max-depth": { "$ref": "#/definitions/rule" },
        "max-len": { "$ref": "#/definitions/rule" },
        "max-params": { "$ref": "#/definitions/rule" },
        "max-statements": { "$ref": "#/definitions/rule" },

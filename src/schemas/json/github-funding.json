{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "GitHub funding config file schema",
  "type": "object",
  "definitions": {
    "github_username": {
      "type": "string",
      "maxLength": 39,
      "pattern": "^[a-zA-Z0-9](-?[a-zA-Z0-9])*$",
      "examples": [
        "SampleUserName"
      ]
    }
  },
  "properties": {
    "community_bridge": {
      "description": "A CommunityBridge project\nhttps://docs.github.com/en/repositories/managing-your-repositorys-settings-and-features/customizing-your-repository/displaying-a-sponsor-button-in-your-repository#about-funding-files",
      "$ref": "https://json.schemastore.org/base.json#/definitions/string?",
      "minLength": 1
    },
    "github": {
      "oneOf": [
        {
          "description": "A GitHub username\nhttps://docs.github.com/en/repositories/managing-your-repositorys-settings-and-features/customizing-your-repository/displaying-a-sponsor-button-in-your-repository#about-funding-files",
          "$ref": "#/definitions/github_username"
        },
        {
          "description": "GitHub usernames\nhttps://docs.github.com/en/repositories/managing-your-repositorys-settings-and-features/customizing-your-repository/displaying-a-sponsor-button-in-your-repository#about-funding-files",
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "$ref": "#/definitions/github_username"
          }
        }
      ]
    },
    "issuehunt": {
      "description": "An IssueHunt username\nhttps://docs.github.com/en/repositories/managing-your-repositorys-settings-and-features/customizing-your-repository/displaying-a-sponsor-button-in-your-repository#about-funding-files",
      "$ref": "https://json.schemastore.org/base.json#/definitions/string?",
      "minLength": 1
    },
    "ko_fi": {
      "description": "A Ko-fi username\nhttps://docs.github.com/en/repositories/managing-your-repositorys-settings-and-features/customizing-your-repository/displaying-a-sponsor-button-in-your-repository#about-funding-files",
      "$ref": "https://json.schemastore.org/base.json#/definitions/string?",
      "minLength": 1
    },
    "liberapay": {
      "description": "A Liberapay username\nhttps://docs.github.com/en/repositories/managing-your-repositorys-settings-and-features/customizing-your-repository/displaying-a-sponsor-button-in-your-repository#about-funding-files",
      "$ref": "https://json.schemastore.org/base.json#/definitions/string?",
      "minLength": 1
    },
    "open_collective": {
      "description": "An Open Collective username\nhttps://docs.github.com/en/repositories/managing-your-repositorys-settings-and-features/customizing-your-repository/displaying-a-sponsor-button-in-your-repository#about-funding-files",
      "$ref": "https://json.schemastore.org/base.json#/definitions/string?",
      "minLength": 1
    },
    "otechie": {
      "description": "An Otechie username\nhttps://docs.github.com/en/repositories/managing-your-repositorys-settings-and-features/customizing-your-repository/displaying-a-sponsor-button-in-your-repository#about-funding-files",
      "$ref": "https://json.schemastore.org/base.json#/definitions/string?",
      "minLength": 1
    },
    "patreon": {
      "description": "A Pateron username\nhttps://docs.github.com/en/repositories/managing-your-repositorys-settings-and-features/customizing-your-repository/displaying-a-sponsor-button-in-your-repository#about-funding-files",
      "$ref": "https://json.schemastore.org/base.json#/definitions/string?",
      "minLength": 1,
      "maxLength": 100
    },
    "tidelift": {
      "description": "Platform and A Tidelift package\nhttps://docs.github.com/en/repositories/managing-your-repositorys-settings-and-features/customizing-your-repository/displaying-a-sponsor-button-in-your-repository#about-funding-files",
      "$ref": "https://json.schemastore.org/base.json#/definitions/string?",
      "pattern": "^(npm|pypi|rubygems|maven|packagist|nuget)\/.+$"
    },
    "custom": {
      "oneOf": [
        {
          "description": "A custom URL\nhttps://docs.github.com/en/repositories/managing-your-repositorys-settings-and-features/customizing-your-repository/displaying-a-sponsor-button-in-your-repository#about-funding-files",
          "type": "null"
        },
        {
          "description": "A custom URL\nhttps://docs.github.com/en/repositories/managing-your-repositorys-settings-and-features/customizing-your-repository/displaying-a-sponsor-button-in-your-repository#about-funding-files",
          "type": "string",
          "format": "uri-reference"
        },
        {
          "description": "A custom URLs\nhttps://docs.github.com/en/repositories/managing-your-repositorys-settings-and-features/customizing-your-repository/displaying-a-sponsor-button-in-your-repository#about-funding-files",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Link",
            "description": "Link to an external location.",
            "type": "string",
            "format": "uri-reference"
          }
        }
      ]
    }
  },
  "additionalProperties": false
}

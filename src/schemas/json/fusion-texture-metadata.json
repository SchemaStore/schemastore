{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://json.schemastore.org/fusion-texture-metadata.json",
  "description": "A mcmeta file for an animated texture for a Minecraft resource pack config schema",
  "oneOf": [
    {
      "properties": {
        "animation": {
          "description": "Animation",
          "type": "object",
          "properties": {
            "interpolate": {
              "type": "boolean",
              "default": false
            },
            "width": {
              "type": "integer"
            },
            "height": {
              "type": "integer"
            },
            "frametime": {
              "type": "integer",
              "default": 1
            },
            "frames": {
              "type": "array",
              "items": {
                "oneOf": [
                  {
                    "type": "integer"
                  },
                  {
                    "type": "object",
                    "properties": {
                      "index": {
                        "type": "integer"
                      },
                      "time": {
                        "type": "integer"
                      }
                    }
                  }
                ]
              }
            }
          }
        }
      }
    },
    {
      "properties": {
        "fusion": {
          "$ref": "./fusion-texture-metadata.json#/",
          "$comment": "Properties for"
        }
      }
    }
  ],
  "required": [
    "animation"
  ],
  "title": "Minecraft Resource Pack Texture Mcmeta",
  "type": "object"
}

{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/filecoin-project/bacalhau/pkg/model/job",
  "$ref": "#/$defs/Job",
  "$defs": {
    "Deal": {
      "properties": {
        "Concurrency": {
          "type": "integer"
        },
        "Confidence": {
          "type": "integer"
        },
        "MinBids": {
          "type": "integer"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "Job": {
      "properties": {
        "APIVersion": {
          "type": "string"
        },
        "Metadata": {
          "$ref": "#/$defs/Metadata"
        },
        "Spec": {
          "$ref": "#/$defs/Spec"
        },
        "Status": {
          "$ref": "#/$defs/JobStatus"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "APIVersion"
      ]
    },
    "JobEvent": {
      "properties": {
        "APIVersion": {
          "type": "string"
        },
        "JobID": {
          "type": "string"
        },
        "ShardIndex": {
          "type": "integer"
        },
        "ClientID": {
          "type": "string"
        },
        "SourceNodeID": {
          "type": "string"
        },
        "TargetNodeID": {
          "type": "string"
        },
        "EventName": {
          "type": "integer"
        },
        "Spec": {
          "$ref": "#/$defs/Spec"
        },
        "JobExecutionPlan": {
          "$ref": "#/$defs/JobExecutionPlan"
        },
        "Deal": {
          "$ref": "#/$defs/Deal"
        },
        "Status": {
          "type": "string"
        },
        "VerificationProposal": {
          "type": "string",
          "contentEncoding": "base64"
        },
        "VerificationResult": {
          "$ref": "#/$defs/VerificationResult"
        },
        "PublishedResult": {
          "$ref": "#/$defs/StorageSpec"
        },
        "EventTime": {
          "type": "string",
          "format": "date-time"
        },
        "SenderPublicKey": {
          "$ref": "#/$defs/PublicKey"
        },
        "RunOutput": {
          "$ref": "#/$defs/RunCommandResult"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "JobExecutionPlan": {
      "properties": {
        "ShardsTotal": {
          "type": "integer"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "JobLocalEvent": {
      "properties": {
        "EventName": {
          "type": "integer"
        },
        "JobID": {
          "type": "string"
        },
        "ShardIndex": {
          "type": "integer"
        },
        "TargetNodeID": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "JobNodeState": {
      "properties": {
        "Shards": {
          "patternProperties": {
            "^[0-9]+$": {
              "$ref": "#/$defs/JobShardState"
            }
          },
          "additionalProperties": false,
          "type": "object"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "JobRequester": {
      "properties": {
        "RequesterNodeID": {
          "type": "string"
        },
        "RequesterPublicKey": {
          "$ref": "#/$defs/PublicKey"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "JobShardState": {
      "properties": {
        "NodeId": {
          "type": "string"
        },
        "ShardIndex": {
          "type": "integer"
        },
        "State": {
          "type": "integer"
        },
        "Status": {
          "type": "string"
        },
        "VerificationProposal": {
          "type": "string",
          "contentEncoding": "base64"
        },
        "VerificationResult": {
          "$ref": "#/$defs/VerificationResult"
        },
        "PublishedResults": {
          "$ref": "#/$defs/StorageSpec"
        },
        "RunOutput": {
          "$ref": "#/$defs/RunCommandResult"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "JobShardingConfig": {
      "properties": {
        "GlobPattern": {
          "type": "string"
        },
        "BatchSize": {
          "type": "integer"
        },
        "GlobPatternBasePath": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "JobSpecDocker": {
      "properties": {
        "Image": {
          "type": "string"
        },
        "Entrypoint": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "EnvironmentVariables": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "WorkingDirectory": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "JobSpecLanguage": {
      "properties": {
        "Language": {
          "type": "string"
        },
        "LanguageVersion": {
          "type": "string"
        },
        "DeterministicExecution": {
          "type": "boolean"
        },
        "JobContext": {
          "$ref": "#/$defs/StorageSpec"
        },
        "Command": {
          "type": "string"
        },
        "ProgramPath": {
          "type": "string"
        },
        "RequirementsPath": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "JobSpecWasm": {
      "properties": {
        "EntryPoint": {
          "type": "string"
        },
        "Parameters": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "EnvironmentVariables": {
          "patternProperties": {
            ".*": {
              "type": "string"
            }
          },
          "type": "object"
        },
        "ImportModules": {
          "items": {
            "$ref": "#/$defs/StorageSpec"
          },
          "type": "array"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "JobState": {
      "properties": {
        "Nodes": {
          "patternProperties": {
            ".*": {
              "$ref": "#/$defs/JobNodeState"
            }
          },
          "type": "object"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "JobStatus": {
      "properties": {
        "JobState": {
          "$ref": "#/$defs/JobState"
        },
        "JobEvents": {
          "items": {
            "$ref": "#/$defs/JobEvent"
          },
          "type": "array"
        },
        "LocalJobEvents": {
          "items": {
            "$ref": "#/$defs/JobLocalEvent"
          },
          "type": "array"
        },
        "Requester": {
          "$ref": "#/$defs/JobRequester"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "Metadata": {
      "properties": {
        "ID": {
          "type": "string"
        },
        "CreatedAt": {
          "type": "string",
          "format": "date-time"
        },
        "ClientID": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "PublicKey": {
      "type": "string",
      "contentEncoding": "base64"
    },
    "ResourceUsageConfig": {
      "properties": {
        "CPU": {
          "type": "string"
        },
        "Memory": {
          "type": "string"
        },
        "Disk": {
          "type": "string"
        },
        "GPU": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "GPU"
      ]
    },
    "RunCommandResult": {
      "properties": {
        "stdout": {
          "type": "string"
        },
        "stdouttruncated": {
          "type": "boolean"
        },
        "stderr": {
          "type": "string"
        },
        "stderrtruncated": {
          "type": "boolean"
        },
        "exitCode": {
          "type": "integer"
        },
        "runnerError": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "stdout",
        "stdouttruncated",
        "stderr",
        "stderrtruncated",
        "exitCode",
        "runnerError"
      ]
    },
    "Spec": {
      "properties": {
        "Engine": {
          "type": "string"
        ,"enum":["Noop","Docker","Wasm","Language","PythonWasm"]},
        "Verifier": {
          "type": "string"
        ,"enum":["Noop","Deterministic"]},
        "Publisher": {
          "type": "string"
        ,"enum":["Noop","Ipfs","Filecoin","Estuary"]},
        "Docker": {
          "$ref": "#/$defs/JobSpecDocker"
        },
        "Language": {
          "$ref": "#/$defs/JobSpecLanguage"
        },
        "Wasm": {
          "$ref": "#/$defs/JobSpecWasm"
        },
        "Resources": {
          "$ref": "#/$defs/ResourceUsageConfig"
        },
        "Timeout": {
          "type": "number"
        },
        "inputs": {
          "items": {
            "$ref": "#/$defs/StorageSpec"
          },
          "type": "array"
        },
        "Contexts": {
          "items": {
            "$ref": "#/$defs/StorageSpec"
          },
          "type": "array"
        },
        "outputs": {
          "items": {
            "$ref": "#/$defs/StorageSpec"
          },
          "type": "array"
        },
        "Annotations": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "Sharding": {
          "$ref": "#/$defs/JobShardingConfig"
        },
        "DoNotTrack": {
          "type": "boolean"
        },
        "ExecutionPlan": {
          "$ref": "#/$defs/JobExecutionPlan"
        },
        "Deal": {
          "$ref": "#/$defs/Deal"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "StorageSpec": {
      "properties": {
        "StorageSource": {
          "type": "string"
        ,"enum":["IPFS","URLDownload","FilecoinUnsealed","Filecoin","Estuary"]},
        "Name": {
          "type": "string"
        },
        "CID": {
          "type": "string"
        },
        "URL": {
          "type": "string"
        },
        "path": {
          "type": "string"
        },
        "Metadata": {
          "patternProperties": {
            ".*": {
              "type": "string"
            }
          },
          "type": "object"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "VerificationResult": {
      "properties": {
        "Complete": {
          "type": "boolean"
        },
        "Result": {
          "type": "boolean"
        }
      },
      "additionalProperties": false,
      "type": "object"
    }
  }
}
{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "additionalProperties": true,
  "definitions": {
    "behavior": {
      "enum": ["block", "allow", "noAuth"],
      "type": "string"
    },
    "rule": {
      "properties": {
        "allowData": {
          "description": "Determines if data is allowed at this path.",
          "type": "boolean"
        },
        "path": {
          "description": "Relative path to resource.",
          "type": "string"
        },
        "regex": {
          "description": "A regular expression for identifying paths to resources.",
          "type": "string"
        },
        "types": {
          "items": {
            "enum": [
              "navigation",
              "image",
              "stylesheet",
              "script",
              "xhr",
              "other"
            ],
            "type": "string"
          },
          "type": "array"
        }
      },
      "type": "object"
    }
  },
  "properties": {
    "defaultNavBehavior": {
      "$ref": "#/definitions/behavior"
    },
    "defaultResBehavior": {
      "$ref": "#/definitions/behavior"
    },
    "maxAge": {
      "description": "Set the max age HTTP cache expiration.",
      "type": "integer"
    },
    "reportUrl": {
      "format": "uri",
      "type": "string"
    },
    "rules": {
      "items": {
        "$ref": "#/definitions/rule"
      },
      "type": "array"
    },
    "site": {
      "description": "A fully qualified URL of your website.",
      "format": "uri",
      "type": "string"
    }
  },
  "required": ["rules"],
  "title": "JSON schema for Entry Point Regulation manifest files",
  "type": "object"
}

{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "additionalProperties": false,
  "id": "https://json.schemastore.org/markdown-link-check.json",
  "properties": {
    "ignorePatterns": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["pattern"],
        "properties": {
          "pattern": {
            "type": "string"
          }
        }
      }
    },
    "replacementPatterns": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["pattern", "replacement"],
        "properties": {
          "pattern": {
            "type": "string"
          },
          "replacement": {
            "type": "string"
          }
        }
      }
    },
    "httpHeaders": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "urls": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "headers": {
            "type": "object",
            "additionalProperties": {
              "type": "string"
            }
          }
        }
      }
    },
    "timeout": {
      "type": "string"
    },
    "retryOn429": {
      "type": "boolean"
    },
    "retryCount": {
      "type": "number"
    },
    "fallbackRetryDelay": {
      "type": "string"
    },
    "aliveStatusCodes": {
      "type": "array",
      "items": {
        "type": "number"
      }
    }
  },
  "type": "object"
}

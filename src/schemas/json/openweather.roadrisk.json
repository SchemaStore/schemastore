{
  "$id": "https://json.schemastore.org/openweather.roadrisk",
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "API responses from the OpenWeather Road Risk API from https://openweathermap.org/api/road-risk",
  "items": {
    "additionalProperties": false,
    "properties": {
      "alerts": {
        "items": {
          "additionalProperties": false,
          "properties": {
            "event": {
              "type": "string"
            },
            "event_level": {
              "type": "integer"
            },
            "sender_name": {
              "type": "string"
            }
          },
          "required": ["sender_name", "event", "event_level"],
          "type": "object"
        },
        "type": "array"
      },
      "coord": {
        "items": {
          "type": "number"
        },
        "type": "array"
      },
      "dt": {
        "type": "integer"
      },
      "weather": {
        "additionalProperties": false,
        "properties": {
          "dew_point": {
            "type": "number"
          },
          "precipitation_intensity": {
            "type": "number"
          },
          "temp": {
            "type": "number"
          },
          "wind_deg": {
            "type": "number"
          },
          "wind_speed": {
            "type": "number"
          }
        },
        "type": "object"
      }
    },
    "required": ["dt", "coord", "weather", "alerts"],
    "type": "object"
  },
  "title": "OpenWeather Road Risk API",
  "type": "array"
}

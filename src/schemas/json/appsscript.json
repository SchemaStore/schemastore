{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Google Apps Script config file schema",
  "type": "object",
  "definitions": {
    "color": {
      "type": "string",
      "pattern": "^#[0-9a-fA-F]{6}$",
      "examples": [
        "#000000",
        "#FF0000",
        "#00FF00",
        "#0000FF",
        "#FFFF00",
        "#FF00FF",
        "#00FFFF",
        "#FFFFFF"
      ]
    },
    "homepageTrigger": {
      "description": "The Google Workspace add-on manifest configuration for homepage triggers.",
      "type": "object",
      "properties": {
        "enabled": {
          "description": "Whether or not homepage (non-contextual) cards are enabled in Calendar. Defaults to true.",
          "type": "boolean"
        },
        "runFunction": {
          "description": "The name of the function to run when this trigger fires. You must implement this function in your add-on project. This function must build and return an array of Card objects.",
          "type": "string"
        }
      }
    }
  },
  "properties": {
    "addOns": {
      "title": "G Suite add-on's options",
      "description": "G Suite add-on's options\nhttps://developers.google.com/apps-script/manifest/addons",
      "type": "object",
      "properties": {
        "common": {
          "title": "common G Suite add-on properties",
          "description": "Common G Suite add-on properties\nhttps://developers.google.com/apps-script/manifest/addons#common",
          "type": "object",
          "required": [
            "logoUrl",
            "name"
          ],
          "properties": {
            "homepageTrigger": {
              "title": "add-on homepage trigger options",
              "description": "An add-on homepage trigger options\nhttps://developers.google.com/apps-script/manifest/homepage-trigger",
              "type": "object",
              "properties": {
                "enabled": {
                  "description": "Specify whether enable cards\nhttps://developers.google.com/apps-script/manifest/homepage-trigger#homepagetrigger",
                  "type": "boolean",
                  "default": true
                },
                "runFunctions": {
                  "description": "The name of the function to run\nhttps://developers.google.com/apps-script/manifest/homepage-trigger#homepagetrigger",
                  "type": "string"
                }
              }
            },
            "layoutProperties": {
              "title": "add-on layout options",
              "description": "An add-on layout options\nhttps://developers.google.com/apps-script/manifest/addons#layoutproperties",
              "type": "object",
              "properties": {
                "primaryColor": {
                  "description": "A toolbar color\nhttps://developers.google.com/apps-script/manifest/addons#layoutproperties",
                  "type": "string",
                  "default": "#424242",
                  "$ref": "#definitions/color"
                },
                "secondaryColor": {
                  "description": "A button color\nhttps://developers.google.com/apps-script/manifest/addons#layoutproperties",
                  "type": "string",
                  "default": "#2196f3",
                  "$ref": "#definitions/color"
                }
              }
            },
            "logoUrl": {
              "description": "An add-on logo URL\nhttps://developers.google.com/apps-script/manifest/addons#layoutproperties",
              "type": "string",
              "format": "uri",
              "minLength": 1
            },
            "name": {
              "description": "An add-on name\nhttps://developers.google.com/apps-script/manifest/addons#layoutproperties",
              "type": "string",
              "minLength": 1
            },
            "openLinkUrlPrefixes": {
              "description": "An add-on link prefixes\nhttps://developers.google.com/apps-script/manifest/addons#common",
              "type": "array",
              "uniqueItems": true,
              "items": {
                "description": "A link prefix.",
                "type": "string"
              }
            },
            "universalActions": {
              "description": "An add-on universal actions\nhttps://developers.google.com/apps-script/manifest/addons#universalaction",
              "type": "array",
              "items": {
                "title": "universal action",
                "description": "Universal action\nhttps://developers.google.com/apps-script/manifest/addons#universalaction",
                "type": "object",
                "required": [
                  "label"
                ],
                "properties": {
                  "label": {
                    "description": "An action label\nhttps://developers.google.com/apps-script/manifest/addons#universalaction",
                    "type": "string",
                    "minLength": 1
                  },
                  "openLink": {
                    "description": "An action link's URL\nhttps://developers.google.com/apps-script/manifest/addons#universalaction",
                    "type": "string",
                    "format": "hostname",
                    "minLength": 1
                  },
                  "runFunction": {
                    "description": "An action's Apps Script function\nhttps://developers.google.com/apps-script/manifest/addons#universalaction",
                    "type": "string",
                    "minLength": 1
                  }
                }
              }
            },
            "useLocaleFromApp": {
              "description": "Specify whether use a host application local\nhttps://developers.google.com/apps-script/manifest/addons#common",
              "type": "boolean",
              "default": false
            }
          }
        },
        "calendar": {
          "description": "Calendar add-on metadata.",
          "type": "object",
          "properties": {
            "homepageTrigger": {
              "description": "The trigger function specification for creating the add-on homepage in the Calendar host.",
              "type": "object",
              "properties": {
                "enabled": {
                  "description": "Whether or not homepage (non-contextual) cards are enabled in Calendar. Defaults to true.",
                  "type": "boolean"
                },
                "runFunction": {
                  "description": "The name of the function to run when this trigger fires. You must implement this function in your add-on project. This function must build and return an array of Card objects.",
                  "type": "string"
                }
              }
            },
            "eventOpenTrigger": {
              "description": "When a Calendar event is opened",
              "type": "object",
              "properties": {
                "runFunction": {
                  "description": "Event hander function",
                  "type": "string"
                }
              }
            },
            "eventUpdateTrigger": {
              "description": "When a Calendar event is updated",
              "type": "object",
              "properties": {
                "runFunction": {
                  "description": "Event hander function",
                  "type": "string"
                }
              }
            },
            "eventAccess": {
              "description": "Handler access to Calendar event",
              "type": "string",
              "enum": [
                "METADATA",
                "READ",
                "WRITE",
                "READ_WRITE"
              ]
            }
          }
        },
        "drive": {},
        "gmail": {
          "description": "Gmail add-on metadata.",
          "type": "object",
          "properties": {
            "contextualTriggers": {
              "description": "Contextual triggers.",
              "type": "array",
              "items": {
                "description": "A contextual trigger.",
                "type": "object",
                "properties": {
                  "onTriggerFunction": {
                    "description": "The name of the Apps Script function that executes when this contextual trigger fires (that is, when a message is opened in Gmail). The function specified here must build and return an array of Card objects.",
                    "type": "string"
                  },
                  "unconditional": {
                    "description": "Used to specify that the contextual trigger is fired for all Gmail messages. This is currently the only option, so this should always be an empty object.",
                    "type": "object"
                  }
                }
              }
            },
            "homepageTrigger": {
              "description": "The trigger function specification for creating the add-on homepage in the Gmail host.",
              "type": "object",
              "properties": {
                "enabled": {
                  "description": "Whether or not homepage (non-contextual) cards are enabled in Gmail. Defaults to true.",
                  "type": "boolean"
                },
                "runFunction": {
                  "description": "The name of the function to run when this trigger fires. You must implement this function in your add-on project. This function must build and return an array of Card objects.",
                  "type": "string"
                }
              }
            }
          }
        },
        "docs": {},
        "sheets": {
          "description": "Configurations for the Google Workspace Add-on's appearance and behavior within the Sheets host application.",
          "type": "object",
          "properties": {
            "homepageTrigger": {
              "$ref": "#/definitions/homepageTrigger"
            },
            "onFileScopeGrantedTrigger": {
              "description": "A configuration for a contextual trigger that fires when the add-on presents the request file scope dialog.",
              "type": "object",
              "properties": {
                "runFunction": {
                  "type": "string"
                }
              }
            }
          },
          "additionalProperties": false
        },
        "slides": {}
      }
    },
    "dependencies": {
      "title": "advanced services and libraries list",
      "description": "Advanced services and libraries list\nhttps://developers.google.com/apps-script/manifest/dependencies",
      "type": "object",
      "properties": {
        "enabledAdvancedServices": {
          "description": "Enabled advanced services and libraries list\nhttps://developers.google.com/apps-script/manifest/dependencies#dependencies",
          "type": "array",
          "items": {
            "title": "advanced service",
            "description": "An advanced service\nhttps://developers.google.com/apps-script/manifest/dependencies#dependencies",
            "type": "object",
            "required": [
              "userSymbol",
              "serviceId",
              "version"
            ],
            "properties": {
              "serviceId": {
                "description": "An advanced service id\nhttps://developers.google.com/apps-script/manifest/dependencies#enabledadvancedservice",
                "type": "string",
                "enum": [
                  "AdSense",
                  "AdminDirectory",
                  "AnalyticsReporting",
                  "Area120Tables",
                  "BigQuery",
                  "DoubleClickCampaigns",
                  "ShoppingContent",
                  "Drive",
                  "DriveActivity",
                  "AdminLicenseManager",
                  "Gmail",
                  "Analytics",
                  "AnalyticsAdmin",
                  "AnalyticsData",
                  "Calendar",
                  "Classroom",
                  "Docs",
                  "Sheets",
                  "Slides",
                  "AdminReseller",
                  "AdminGroupsMigration",
                  "AdminGroupsSettings",
                  "People",
                  "TagManager",
                  "Tasks",
                  "YouTubeAnalytics",
                  "YouTube",
                  "YouTubeContentId"
                ]
              },
              "userSymbol": {
                "description": "An advanced service symbol in code\nhttps://developers.google.com/apps-script/manifest/dependencies#enabledadvancedservice",
                "type": "string",
                "minLength": 1
              },
              "version": {
                "description": "An advanced service version\nhttps://developers.google.com/apps-script/manifest/dependencies#enabledadvancedservice",
                "type": "string",
                "pattern": "^v."
              }
            },
            "additionalProperties": false
          }
        },
        "libraries": {
          "description": "Libraries list\nhttps://developers.google.com/apps-script/manifest/dependencies#library",
          "type": "array",
          "items": {
            "title": "library",
            "description": "A library\nhttps://developers.google.com/apps-script/manifest/dependencies#library",
            "type": "object",
            "required": [
              "userSymbol",
              "libraryId",
              "version"
            ],
            "properties": {
              "developmentMode": {
                "description": "Specify whether use a development version\nhttps://developers.google.com/apps-script/manifest/dependencies#library",
                "type": "boolean"
              },
              "libraryId": {
                "description": "An library id\nhttps://developers.google.com/apps-script/manifest/dependencies#library",
                "type": "string",
                "maxLength": 58,
                "minLength": 58
              },
              "userSymbol": {
                "description": "A library symbol in code\nhttps://developers.google.com/apps-script/manifest/dependencies#library",
                "type": "string",
                "minLength": 1
              },
              "version": {
                "description": "A library version\nhttps://developers.google.com/apps-script/manifest/dependencies#library",
                "type": "string",
                "pattern": "^v."
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "exceptionLogging": {
      "description": "The location where exceptions are logged.",
      "type": "string",
      "enum": [
        "NONE",
        "STACKDRIVER"
      ]
    },
    "executionApi": {
      "description": "The script project's API executable configuration. Only used if the project is deployed for API execution.",
      "type": "object",
      "properties": {
        "access": {
          "description": "Determines who has permission to run the script from the API.",
          "type": "string",
          "enum": [
            "MYSELF",
            "DOMAIN",
            "ANYONE",
            "ANYONE_ANONYMOUS"
          ]
        }
      }
    },
    "oauthScopes": {
      "description": "The definition of authorization scopes used by the script project.",
      "type": "array",
      "items": {
        "type": "string",
        "format": "uri"
      }
    },
    "runtimeVersion": {
      "description": "Version of the server to use when executing this project.",
      "type": "string",
      "default": "STABLE",
      "enum": [
        "STABLE",
        "V8",
        "DEPRECATED_ES5"
      ]
    },
    "sheets": {
      "description": "Defines manifest values specific to Sheets.",
      "type": "object",
      "properties": {
        "macros": {
          "description": "A list of defined macros and their associated properties.",
          "type": "array",
          "items": {
            "description": "A defined macros and it's associated properties.",
            "type": "object",
            "required": [
              "menuName",
              "functionName",
              "defaultShortcut"
            ],
            "properties": {
              "menuName": {
                "description": "The name of the macro as it appears in the Google Sheets UI.",
                "type": "string",
                "default": "My Macro"
              },
              "functionName": {
                "description": "The name of the Apps Script function that executes the macro. By default this matches the menuName for functions automatically created, but this is not a requirement.",
                "type": "string",
                "default": "myFunction"
              },
              "defaultShortcut": {
                "description": "Defines the keyboard shortcut that executes the macro. This must be of the form Ctrl+Alt+Shift+Number, where Number is a single-digit. Macros without shortcuts can only be executed from the Tools > Macros menu.",
                "type": "string",
                "default": "Ctrl+Alt+Shift+1"
              }
            }
          }
        }
      }
    },
    "timeZone": {
      "description": "The script time zone in one of the available ZoneId values such as \"America/Denver\".",
      "type": "string",
      "default": "America/New_York"
    },
    "urlFetchWhitelist": {
      "description": "A list of HTTPS URL prefixes. If present, any URL endpoint fetched must match one of the prefixes in this list. This can help to protect user data.",
      "type": "array",
      "items": {
        "type": "string",
        "format": "hostname"
      }
    },
    "webapp": {
      "description": "The script project's web app configuration. Only used if the project is deployed as a web app.",
      "type": "object",
      "properties": {
        "access": {
          "description": "The levels of permission for running the web app.",
          "type": "string",
          "default": "MYSELF",
          "enum": [
            "MYSELF",
            "DOMAIN",
            "ANYONE",
            "ANYONE_ANONYMOUS"
          ]
        },
        "executeAs": {
          "description": "The identity under which the web app executes.",
          "type": "string",
          "default": "USER_DEPLOYING",
          "enum": [
            "USER_ACCESSING",
            "USER_DEPLOYING"
          ]
        }
      }
    },
    "dataStudio": {
      "description": "Data Studio add-on manifest.",
      "type": "object",
      "required": [
        "name",
        "logoUrl",
        "company",
        "supportUrl",
        "description"
      ],
      "properties": {
        "name": {
          "description": "Display name for add-on.",
          "type": "string"
        },
        "logoUrl": {
          "description": "URL for logo image of add-on.",
          "type": "string",
          "format": "hostname"
        },
        "company": {
          "description": "Company name for the add-on.",
          "type": "string"
        },
        "addonUrl": {
          "type": "string",
          "format": "hostname"
        },
        "companyUrl": {
          "type": "string",
          "format": "hostname"
        },
        "supportUrl": {
          "description": "URL for support information of the add-on.",
          "type": "string",
          "format": "hostname"
        },
        "description": {
          "description": "Short description about the add-on.",
          "type": "string"
        },
        "sources": {
          "description": "List of sources or services that can be accessed with this add-on.",
          "type": "array",
          "items": {
            "description": "A single source type.",
            "type": "string"
          }
        },
        "templates": {
          "description": "Map of template name to report ID.",
          "type": "object"
        },
        "shortDescription": {
          "description": "Even shorter description used in gallery cards. Only a maximum of 114 characters will be shown on the card.",
          "type": "string"
        },
        "authType": {
          "description": "List of AuthTypes supported.",
          "type": "array",
          "items": {
            "description": "Types of Authorization supported by the add-on.",
            "type": "string",
            "enum": [
              "NONE",
              "KEY",
              "USER_PASS",
              "OAUTH2"
            ]
          }
        },
        "privacyPolicyUrl": {
          "description": "Url for privacy policy information about the add-on.",
          "type": "string",
          "format": "hostname"
        },
        "termsOfServiceUrl": {
          "description": "Url for terms of service information about the add-on.",
          "type": "string",
          "format": "hostname"
        }
      }
    }
  }
}

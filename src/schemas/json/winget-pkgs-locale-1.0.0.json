{
  "$id": "https://aka.ms/winget-manifest.locale.1.0.0.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Tag": {
      "description": "Package moniker or tag",
      "maxLength": 40,
      "minLength": 1,
      "type": ["string", "null"]
    },
    "Url": {
      "description": "Optional Url type",
      "maxLength": 2000,
      "pattern": "^([Hh][Tt][Tt][Pp][Ss]?)://.+$",
      "type": ["string", "null"]
    }
  },
  "description": "A representation of a multiple-file manifest representing app metadata in other locale in the OWC. v1.0.0",
  "properties": {
    "Author": {
      "description": "The package author",
      "maxLength": 256,
      "minLength": 2,
      "type": ["string", "null"]
    },
    "Copyright": {
      "description": "The package copyright",
      "maxLength": 512,
      "minLength": 3,
      "type": ["string", "null"]
    },
    "CopyrightUrl": {
      "$ref": "#/definitions/Url",
      "description": "The package copyright page"
    },
    "Description": {
      "description": "The full package description",
      "maxLength": 10000,
      "minLength": 3,
      "type": ["string", "null"]
    },
    "License": {
      "description": "The package license",
      "maxLength": 512,
      "minLength": 3,
      "type": ["string", "null"]
    },
    "LicenseUrl": {
      "$ref": "#/definitions/Url",
      "description": "The license page"
    },
    "ManifestType": {
      "const": "locale",
      "default": "locale",
      "description": "The manifest type",
      "type": "string"
    },
    "ManifestVersion": {
      "default": "1.0.0",
      "description": "The manifest syntax version",
      "pattern": "^(0|[1-9][0-9]{0,3}|[1-5][0-9]{4}|6[0-4][0-9]{3}|65[0-4][0-9]{2}|655[0-2][0-9]|6553[0-5])(\\.(0|[1-9][0-9]{0,3}|[1-5][0-9]{4}|6[0-4][0-9]{3}|65[0-4][0-9]{2}|655[0-2][0-9]|6553[0-5])){2}$",
      "type": "string"
    },
    "Moniker": {
      "$ref": "#/definitions/Tag",
      "description": "The most common package term"
    },
    "PackageIdentifier": {
      "description": "The package unique identifier",
      "maxLength": 128,
      "pattern": "^[^\\.\\s\\\\/:\\*\\?\"<>\\|\\x01-\\x1f]{1,32}(\\.[^\\.\\s\\\\/:\\*\\?\"<>\\|\\x01-\\x1f]{1,32}){1,3}$",
      "type": "string"
    },
    "PackageLocale": {
      "description": "The package meta-data locale",
      "maxLength": 20,
      "pattern": "^([a-zA-Z]{2}|[iI]-[a-zA-Z]+|[xX]-[a-zA-Z]{1,8})(-[a-zA-Z]{1,8})*$",
      "type": "string"
    },
    "PackageName": {
      "description": "The package name",
      "maxLength": 256,
      "minLength": 2,
      "type": ["string", "null"]
    },
    "PackageUrl": {
      "$ref": "#/definitions/Url",
      "description": "The package home page"
    },
    "PackageVersion": {
      "description": "The package version",
      "maxLength": 128,
      "pattern": "^[^\\\\/:\\*\\?\"<>\\|\\x01-\\x1f]+$",
      "type": "string"
    },
    "PrivacyUrl": {
      "$ref": "#/definitions/Url",
      "description": "The publisher privacy page or the package privacy page"
    },
    "Publisher": {
      "description": "The publisher name",
      "maxLength": 256,
      "minLength": 2,
      "type": ["string", "null"]
    },
    "PublisherSupportUrl": {
      "$ref": "#/definitions/Url",
      "description": "The publisher support page"
    },
    "PublisherUrl": {
      "$ref": "#/definitions/Url",
      "description": "The publisher home page"
    },
    "ShortDescription": {
      "description": "The short package description",
      "maxLength": 256,
      "minLength": 3,
      "type": ["string", "null"]
    },
    "Tags": {
      "description": "List of additional package search terms",
      "items": {
        "$ref": "#/definitions/Tag"
      },
      "maxItems": 16,
      "type": ["array", "null"],
      "uniqueItems": true
    }
  },
  "required": [
    "PackageIdentifier",
    "PackageVersion",
    "PackageLocale",
    "ManifestType",
    "ManifestVersion"
  ],
  "type": "object"
}

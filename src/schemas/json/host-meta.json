{
	"title": "JSON schema for host-meta files",
	"$schema": "http://json-schema.org/draft-04/schema#",

	"type": "object",
	"additionalProperties": true,
	"required": [ "subject" ],

	"definitions": {
		"property": {
			"type": "object",
			"additionalProperties": {
				"type": [ "null", "string" ]
			}
		},
		"link": {
			"type": "object",
			"properties": {
				"rel": {
					"type": "string"
				},
				"type": {
					"type": "string"
				},
				"href": {
					"type": "string"
				},
				"template": {
					"type": "string",
					"format": "uri"
				},
				"titles": {
					"type": "object",
					"properties": {
						"default": {
							"type": "string"
						}
					},
					"additionalProperties": {
						"type": "string"
					}
				},
				"properties": {
					"$ref": "#/definitions/property"
				}
			}
		}
	},

	"properties": {
		"subject": {
			"type": "string",
			"format": "uri"
		},
		"expires": {
			"type": "string",
			"format": "date-time"
		},
		"aliases": {
			"type": "array",
			"items": {
				"type": "string"
			}
		},
		"properties": {
			"$ref": "#/definitions/property"
		},
		"links": {
			"type": "array",
			"items": {
				"$ref": "#/definitions/link"
			}
		}
	}
}

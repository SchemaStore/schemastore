{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/helmwave/helmwave/pkg/plan/plan-body",
  "properties": {
    "project": {
      "type": "string",
      "title": "the project name",
      "description": "reserved for future",
      "examples": [
        "my-awesome-project"
      ]
    },
    "version": {
      "type": "string",
      "title": "version of helmwave",
      "description": "will check current version and project version",
      "examples": [
        "0.23.0",
        "0.22.1"
      ]
    },
    "repositories": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "$defs": {
        "Repository": {
          "properties": {
            "name": {
              "type": "string",
              "title": "repository name",
              "description": "The name of a repository",
              "examples": [
                "bitnami",
                "stable"
              ]
            },
            "url": {
              "type": "string"
            },
            "username": {
              "type": "string"
            },
            "password": {
              "type": "string"
            },
            "cert_file": {
              "type": "string"
            },
            "key_file": {
              "type": "string"
            },
            "ca_file": {
              "type": "string"
            },
            "insecure_skip_tls_verify": {
              "type": "boolean"
            },
            "pass_credentials_all": {
              "type": "boolean"
            },
            "force": {
              "type": "boolean",
              "title": "force flag",
              "description": "force update helm repo list and download dependencies",
              "default": false
            }
          },
          "additionalProperties": false,
          "type": "object",
          "required": [
            "name",
            "url"
          ]
        }
      },
      "items": {
        "$ref": "#/$defs/Repository"
      },
      "type": "array",
      "title": "repositories list",
      "description": "helm repositories"
    },
    "registries": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "$defs": {
        "Registry": {
          "properties": {
            "host": {
              "type": "string"
            },
            "username": {
              "type": "string"
            },
            "password": {
              "type": "string"
            },
            "insecure": {
              "type": "boolean"
            }
          },
          "additionalProperties": false,
          "type": "object",
          "required": [
            "host"
          ]
        }
      },
      "items": {
        "$ref": "#/$defs/Registry"
      },
      "type": "array",
      "title": "registries list",
      "description": "helm OCI registries"
    },
    "releases": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "$defs": {
        "Chart": {
          "properties": {
            "version": {
              "type": "string",
              "title": "the version",
              "description": "The version of a chart",
              "examples": [
                "0.1.0"
              ]
            },
            "name": {
              "type": "string",
              "title": "the name",
              "description": "The name of a chart",
              "examples": [
                "bitnami/nginx",
                "oci://ghcr.io/helmwave/unit-test-oci"
              ]
            }
          },
          "additionalProperties": false,
          "type": "object",
          "required": [
            "name"
          ]
        },
        "Release": {
          "properties": {
            "store": {
              "type": "object",
              "title": "The Store",
              "description": "It allows to pass your custom fields from helmwave.yml to values"
            },
            "chart": {
              "$ref": "#/$defs/Chart",
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "object"
                }
              ]
            },
            "name": {
              "type": "string",
              "title": "release name"
            },
            "namespace": {
              "type": "string",
              "title": "kubernetes namespace"
            },
            "description": {
              "type": "string"
            },
            "pending_release_strategy": {
              "type": "string",
              "description": "Strategy to handle releases in pending statuses (pending-install"
            },
            "depends_on": {
              "items": {
                "type": "string"
              },
              "type": "array",
              "title": "Needs",
              "description": "dependencies"
            },
            "values": {
              "items": {
                "$ref": "#/$defs/ValuesReference"
              },
              "type": "array",
              "title": "values of a release"
            },
            "tags": {
              "items": {
                "type": "string"
              },
              "type": "array",
              "description": "tags allows you choose releases for build"
            },
            "timeout": {
              "type": "integer"
            },
            "max_history": {
              "type": "integer"
            },
            "allow_failure": {
              "type": "boolean"
            },
            "atomic": {
              "type": "boolean"
            },
            "cleanup_on_fail": {
              "type": "boolean"
            },
            "create_namespace": {
              "type": "boolean",
              "description": "will create namespace if it doesnt exits",
              "default": false
            },
            "devel": {
              "type": "boolean"
            },
            "disable_hooks": {
              "type": "boolean"
            },
            "disable_open_api_validation": {
              "type": "boolean"
            },
            "force": {
              "type": "boolean"
            },
            "recreate": {
              "type": "boolean"
            },
            "reset_values": {
              "type": "boolean"
            },
            "reuse_values": {
              "type": "boolean"
            },
            "skip_crds": {
              "type": "boolean"
            },
            "sub_notes": {
              "type": "boolean"
            },
            "wait": {
              "type": "boolean",
              "description": "prefer use true"
            },
            "wait_for_jobs": {
              "type": "boolean",
              "description": "prefer use true"
            }
          },
          "additionalProperties": false,
          "type": "object",
          "required": [
            "chart",
            "name",
            "namespace"
          ]
        },
        "ValuesReference": {
          "properties": {
            "src": {
              "type": "string"
            },
            "dst": {
              "type": "string"
            },
            "strict": {
              "type": "boolean"
            },
            "render": {
              "type": "boolean"
            }
          },
          "additionalProperties": false,
          "type": "object",
          "required": [
            "src",
            "strict",
            "render"
          ]
        }
      },
      "items": {
        "$ref": "#/$defs/Release"
      },
      "type": "array",
      "title": "helm releases",
      "description": "what you wanna deploy"
    }
  },
  "additionalProperties": false,
  "type": "object"
}

{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/helmwave/helmwave/pkg/plan/plan-body-fake",
  "$ref": "#/$defs/planBodyFake",
  "$defs": {
    "Chart": {
      "properties": {
        "version": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "name"
      ]
    },
    "Registry": {
      "properties": {
        "host": {
          "type": "string"
        },
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "insecure": {
          "type": "boolean"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "host"
      ]
    },
    "Release": {
      "properties": {
        "store": {
          "type": "object"
        },
        "chart": {
          "$ref": "#/$defs/Chart",
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "object"
            }
          ]
        },
        "name": {
          "type": "string"
        },
        "namespace": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "pending_release_strategy": {
          "type": "string"
        },
        "depends_on": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "values": {
          "items": {
            "$ref": "#/$defs/ValuesReference"
          },
          "type": "array"
        },
        "tags": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "timeout": {
          "type": "integer"
        },
        "max_history": {
          "type": "integer"
        },
        "allow_failure": {
          "type": "boolean"
        },
        "atomic": {
          "type": "boolean"
        },
        "cleanup_on_fail": {
          "type": "boolean"
        },
        "create_namespace": {
          "type": "boolean"
        },
        "devel": {
          "type": "boolean"
        },
        "disable_hooks": {
          "type": "boolean"
        },
        "disable_open_api_validation": {
          "type": "boolean"
        },
        "force": {
          "type": "boolean"
        },
        "recreate": {
          "type": "boolean"
        },
        "reset_values": {
          "type": "boolean"
        },
        "reuse_values": {
          "type": "boolean"
        },
        "skip_crds": {
          "type": "boolean"
        },
        "sub_notes": {
          "type": "boolean"
        },
        "wait": {
          "type": "boolean"
        },
        "wait_for_jobs": {
          "type": "boolean"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "chart",
        "name",
        "namespace"
      ]
    },
    "Repository": {
      "properties": {
        "name": {
          "type": "string"
        },
        "url": {
          "type": "string"
        },
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "cert_file": {
          "type": "string"
        },
        "key_file": {
          "type": "string"
        },
        "ca_file": {
          "type": "string"
        },
        "insecure_skip_tls_verify": {
          "type": "boolean"
        },
        "pass_credentials_all": {
          "type": "boolean"
        },
        "force": {
          "type": "boolean"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "name",
        "url"
      ]
    },
    "ValuesReference": {
      "properties": {
        "src": {
          "type": "string"
        },
        "dst": {
          "type": "string"
        },
        "strict": {
          "type": "boolean"
        },
        "render": {
          "type": "boolean"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "src",
        "strict",
        "render"
      ]
    },
    "planBodyFake": {
      "properties": {
        "project": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "repositories": {
          "items": {
            "$ref": "#/$defs/Repository"
          },
          "type": "array"
        },
        "registries": {
          "items": {
            "$ref": "#/$defs/Registry"
          },
          "type": "array"
        },
        "releases": {
          "items": {
            "$ref": "#/$defs/Release"
          },
          "type": "array"
        }
      },
      "additionalProperties": false,
      "type": "object"
    }
  }
}

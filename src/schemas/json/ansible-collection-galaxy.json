{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Ansible Collection Galaxy metadata",
  "description": "Root schema of Ansible Collection Galaxy configuration",
  "properties": {
    "authors": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "string"
          }
        ]
      }
    },
    "dependencies": {
      "type": "object"
    },
    "description": {
      "type": "string"
    },
    "documentation": {
      "type": "string"
    },
    "homepage": {
      "type": "string"
    },
    "issues": {
      "type": "string"
    },
    "license_file": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "namespace": {
      "type": "string"
    },
    "readme": {
      "type": "string"
    },
    "repository": {
      "type": "string"
    },
    "tags": {
      "type": "array",
      "items": {
        "$id": "#/properties/tags/items",
        "anyOf": [
          {
            "type": "string"
          }
        ]
      }
    },
    "version": {
      "$id": "#/properties/version",
      "type": "string"
    },
    "build_ignore": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "string"
          }
        ]
      }
    }
  },
  "required": ["name", "namespace", "version"]
}

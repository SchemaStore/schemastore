{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Cheatsheets config file schema",
    "type": "object",
    "properties": {
        "cheatpaths": {
            "description": "Cheat paths",
            "type": "array",
            "items": {
                "description": "Cheat path entry",
                "type": "object",
                "properties": {
                  "name": {
                    "description": "Name",
                    "type": "string",
                    "minLength": 1
                  },
                  "path": {
                    "description": "Path",
                    "type": "string",
                    "minLength": 1
                  },
                  "tags": {
                    "description": "Tags",
                    "type": "array",
                    "uniqueItems": true,
                    "items": {
                      "type": "string",
                      "minLength": 1
                    }
                  },
                  "readonly": {
                    "description": "Allow/restrict creating cheatsheets",
                    "type": "boolean"
                  }
                },
                "additionalProperties": false
            }
        }
    },
    "additionalProperties": false
}

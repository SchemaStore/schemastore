                "BuiltinGlobalWrite.enabled": { "type": "boolean" },
                "PlaceholderRead.enabled": { "type": "boolean" },
                "UnreachableCode.enabled": { "type": "boolean" },
                "UnknownType.enabled": { "type": "boolean" },
                "ForRange.enabled": { "type": "boolean" },
                "UnbalancedAssignment.enabled": { "type": "boolean" },
                "ImplicitReturn.enabled": { "type": "boolean" },
                "DuplicateLocal.enabled": { "type": "boolean" },
                "FormatString.enabled": { "type": "boolean" },
                "TableLiteral.enabled": { "type": "boolean" },
                "UninitializedLocal.enabled": { "type": "boolean" },
                "DuplicateFunction.enabled": { "type": "boolean" },
                "DeprecatedApi.enabled": { "type": "boolean" },
                "TableOperations.enabled": { "type": "boolean" },
                "DuplicateCondition.enabled": { "type": "boolean" },
                "MisleadingAndOr.enabled": { "type": "boolean" },

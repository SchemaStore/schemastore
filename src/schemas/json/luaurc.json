                "LocalShadow.disabled": { "type": "boolean" },
                "SameLineStatement.disabled": { "type": "boolean" },
                "MultiLineStatement.disabled": { "type": "boolean" },
                "LocalUnused.disabled": { "type": "boolean" },
                "FunctionUnused.disabled": { "type": "boolean" },
                "ImportUnused.disabled": { "type": "boolean" },
                "BuiltinGlobalWrite.disabled": { "type": "boolean" },
                "PlaceholderRead.disabled": { "type": "boolean" },

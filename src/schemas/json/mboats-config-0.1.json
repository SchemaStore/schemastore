{
  "$ref": "#/definitions/Main",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Application": {
      "additionalProperties": true,
      "properties": {
        "appId": {
          "default": "MBOAPPL",
          "type": "string"
        },
        "appName": {
          "default": "MBO Application",
          "type": "string"
        }
      },
      "required": ["appId", "appName"],
      "title": "Application Properties",
      "type": "object"
    },
    "MBOATS": {
      "additionalProperties": false,
      "definitions": {
        "AWSEC2": {
          "additionalProperties": false,
          "properties": {
            "publicName": {
              "type": "string"
            },
            "serverPort": {
              "type": "integer"
            }
          },
          "required": ["publicName", "serverPort"],
          "title": "AWS EC2 Configuration",
          "type": "object"
        },
        "AWSS3": {
          "additionalProperties": false,
          "properties": {
            "accessKeyId": {
              "type": "string"
            },
            "bucket": {
              "type": "string"
            },
            "enabled": {
              "type": "boolean"
            },
            "identityPoolId": {
              "type": "string"
            },
            "region": {
              "type": "string"
            },
            "secretAccessKey": {
              "type": "string"
            }
          },
          "required": [
            "accessKeyId",
            "bucket",
            "enabled",
            "identityPoolId",
            "region",
            "secretAccessKey"
          ],
          "title": "AWS S3 Configuration",
          "type": "object"
        },
        "CucumberOptions": {
          "additionalProperties": false,
          "properties": {
            "featuresPath": {
              "type": "string"
            },
            "stepdefsPackage": {
              "type": "string"
            },
            "tagExpression": {
              "type": "string"
            }
          },
          "required": ["featuresPath", "stepdefsPackage", "tagExpression"],
          "title": "CucumberOptions",
          "type": "object"
        },
        "Email": {
          "additionalProperties": false,
          "definitions": {
            "Auth": {
              "additionalProperties": false,
              "properties": {
                "$clientId": {
                  "type": "string"
                },
                "$clientSecret": {
                  "type": "string"
                },
                "$refreshToken": {
                  "type": "string"
                },
                "$refreshUrl": {
                  "format": "uri",
                  "type": "string"
                }
              },
              "required": [
                "$clientId",
                "$clientSecret",
                "$refreshToken",
                "$refreshUrl"
              ],
              "title": "Auth",
              "type": "object"
            }
          },
          "properties": {
            "auth": {
              "$ref": "#/definitions/MBOATS/definitions/Email/definitions/Auth"
            },
            "invitationLinkRegex": {
              "type": "string"
            },
            "oktaTokenRegex": {
              "type": "string"
            }
          },
          "required": ["auth", "invitationLinkRegex", "oktaTokenRegex"],
          "title": "Email Configuration",
          "type": "object"
        },
        "MongoDB": {
          "additionalProperties": false,
          "definitions": {
            "Collection": {
              "additionalProperties": false,
              "properties": {
                "report": {
                  "type": "string"
                }
              },
              "required": ["report"],
              "title": "Collection",
              "type": "object"
            }
          },
          "properties": {
            "collection": {
              "$ref": "#/definitions/MBOATS/definitions/MongoDB/definitions/Collection"
            },
            "connectionString": {
              "type": "string"
            },
            "database": {
              "type": "string"
            },
            "enabled": {
              "type": "boolean"
            },
            "password": {
              "type": "string"
            },
            "username": {
              "type": "string"
            }
          },
          "required": [
            "collection",
            "connectionString",
            "database",
            "enabled",
            "password",
            "username"
          ],
          "title": "MongoDB Configuration",
          "type": "object"
        },
        "NetworkLogs": {
          "additionalProperties": false,
          "definitions": {
            "Request": {
              "additionalProperties": false,
              "properties": {
                "body": {
                  "type": "boolean"
                },
                "cookies": {
                  "type": "boolean"
                },
                "headers": {
                  "type": "boolean"
                }
              },
              "required": ["body", "cookies", "headers"],
              "title": "Request",
              "type": "object"
            }
          },
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "request": {
              "$ref": "#/definitions/MBOATS/definitions/NetworkLogs/definitions/Request"
            },
            "response": {
              "$ref": "#/definitions/MBOATS/definitions/NetworkLogs/definitions/Request"
            }
          },
          "required": ["enabled", "request", "response"],
          "title": "NetworkLogs",
          "type": "object"
        },
        "Threadbare": {
          "additionalProperties": false,
          "properties": {
            "server": {
              "type": "null"
            }
          },
          "required": ["server"],
          "title": "Threadbare Configuration",
          "type": "object"
        },
        "Video": {
          "additionalProperties": false,
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "format": {
              "type": "string"
            },
            "location": {
              "type": "string"
            },
            "prefix": {
              "type": "string"
            }
          },
          "required": ["enabled", "format", "location", "prefix"],
          "title": "Video",
          "type": "object"
        }
      },
      "properties": {
        "awsec2": {
          "$ref": "#/definitions/MBOATS/definitions/AWSEC2"
        },
        "awss3": {
          "$ref": "#/definitions/MBOATS/definitions/AWSS3"
        },
        "clientParallelism": {
          "default": "stacked",
          "enum": ["stacked", "interleaved"],
          "type": "string"
        },
        "clients": {
          "default": "chrome",
          "enum": ["chrome", "firefox", "edge"],
          "type": "string"
        },
        "elementFindTimeout": {
          "default": 8,
          "maximum": 15,
          "minimum": 3,
          "type": "integer"
        },
        "email": {
          "$ref": "#/definitions/MBOATS/definitions/Email"
        },
        "headless": {
          "default": false,
          "type": "boolean"
        },
        "invocationCount": {
          "default": 1,
          "maximum": 5,
          "minimum": 1,
          "type": "integer"
        },
        "mode": {
          "default": "local",
          "enum": ["local", "remote"],
          "type": "string"
        },
        "mongodb": {
          "$ref": "#/definitions/MBOATS/definitions/MongoDB"
        },
        "networkLogs": {
          "$ref": "#/definitions/MBOATS/definitions/NetworkLogs"
        },
        "pageLoadTimeout": {
          "default": 60,
          "maximum": 120,
          "minimum": 30,
          "type": "integer"
        },
        "runnerParallelism": {
          "default": "feature",
          "enum": ["feature", "scenario"],
          "type": "string"
        },
        "soundfx": {
          "default": false,
          "type": "boolean"
        },
        "threadCount": {
          "default": 1,
          "maximum": 5,
          "minimum": 1,
          "type": "integer"
        },
        "threadbare": {
          "$ref": "#/definitions/MBOATS/definitions/Threadbare"
        },
        "video": {
          "$ref": "#/definitions/MBOATS/definitions/Video"
        }
      },
      "required": [],
      "title": "MBOATS Properties",
      "type": "object"
    },
    "Main": {
      "additionalProperties": true,
      "properties": {
        "app": {
          "$ref": "#/definitions/Application"
        },
        "mboats": {
          "$ref": "#/definitions/MBOATS"
        }
      },
      "required": ["mboats", "app"],
      "title": "Properties",
      "type": "object"
    }
  }
}

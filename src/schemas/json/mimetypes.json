{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "JSON Schema for mime type collections",

  "type": "object",
  "additionalProperties": false,

  "patternProperties": {
    "^\\..+": {
      "description": "A file extension mapping.",
      "pattern": "^[\\w-_.]+/[\\w-_.]+$"
    }
  }
}

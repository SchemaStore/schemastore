{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "additionalProperties": false,
  "id": "https://json.schemastore.org/azure-iot-edgehub-deployment-1.1.json",
  "properties": {
    "$edgeHub": {
      "additionalProperties": false,
      "properties": {
        "properties.desired": {
          "additionalProperties": false,
          "properties": {
            "routes": {
              "additionalProperties": false,
              "patternProperties": {
                "^[^\\.\\$# ]+$": {
                  "anyOf": [
                    {
                      "additionalProperties": false,
                      "properties": {
                        "priority": {
                          "maximum": 9,
                          "minimum": 0,
                          "type": "integer"
                        },
                        "route": {
                          "examples": ["FROM /* INTO $upstream"],
                          "pattern": "^.+$",
                          "type": "string"
                        },
                        "timeToLiveSecs": {
                          "maximum": 4294967295,
                          "minimum": 0,
                          "type": "integer"
                        }
                      },
                      "required": ["route"],
                      "type": "object"
                    },
                    {
                      "examples": ["FROM /* INTO $upstream"],
                      "pattern": "^.+$",
                      "type": "string"
                    }
                  ]
                }
              },
              "type": "object"
            },
            "schemaVersion": {
              "pattern": "1.1",
              "type": "string"
            },
            "storeAndForwardConfiguration": {
              "additionalProperties": false,
              "properties": {
                "timeToLiveSecs": {
                  "examples": [7200],
                  "type": "integer"
                }
              },
              "required": ["timeToLiveSecs"],
              "type": "object"
            }
          },
          "required": ["schemaVersion", "routes"],
          "type": "object"
        }
      },
      "required": ["properties.desired"],
      "title": "Configuration for the edgeHub module",
      "type": "object"
    }
  },
  "required": ["$edgeHub"],
  "title": "JSON schema for Azure IoT EdgeHub Deployment version 1.1",
  "type": "object"
}

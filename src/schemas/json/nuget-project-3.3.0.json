{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "configType": {
      "type": "object",
      "properties": {
        "dependencies": {
          "$ref": "#/definitions/dependencies"
        },
        "imports": {
          "type": "string"
        }
      }
    },
    "dependencies": {
      "description": "A list of dependencies.",
      "type": "object",
      "additionalProperties": {
        "type": ["string", "object"],
        "properties": {
          "version": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "default": "default",
            "enum": ["default", "build"]
          }
        }
      }
    }
  },
  "properties": {
    "dependencies": {
      "$ref": "#/definitions/dependencies"
    },
    "frameworks": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/configType"
      }
    },
    "runtimes": {
      "type": "object",
      "description": "A list of supported runtime platforms.",
      "properties": {
        "win10-arm": {
          "type": "object"
        },
        "win10-arm-aot": {
          "type": "object"
        },
        "win10-x86": {
          "type": "object"
        },
        "win10-x86-aot": {
          "type": "object"
        },
        "win10-x64": {
          "type": "object"
        },
        "win10-x64-aot": {
          "type": "object"
        }
      }
    },
    "supports": {
      "type": "object",
      "description": "A list of supported target frameworks.",
      "additionalProperties": {
        "type": "object",
        "description": "A supported target framework."
      }
    }
  },
  "title": "JSON schema for NuGet project.json files",
  "type": "object"
}

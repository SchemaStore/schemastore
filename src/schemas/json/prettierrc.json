{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Schema for .prettierrc",

  "definitions": {
    "optionsDefinition": {
      "properties": {
        "bracketSpacing": {
          "default": true,
          "type": "boolean"
        },
        "jsxBracketSameLine": {
          "default": false,
          "type": "boolean"
        },
        "parser": {
          "enum": [
            "babylon",
            "flow",
            "typescript",
            "postcss",
            "json",
            "graphql"
          ],
          "default": "babylon",
          "type": "string"
        },
        "printWidth": {
          "default": 80,
          "type": "integer"
        },
        "semi": {
          "default": true,
          "type": "boolean"
        },
        "singleQuote": {
          "default": false,
          "type": "boolean"
        },
        "tabWidth": {
          "default": 2,
          "type": "integer"
        },
        "trailingComma": {
          "default": "none",
          "enum": ["none", "all", "es5"],
          "type": "string"
        },
        "useTabs": {
          "default": false,
          "type": "boolean"
        }
      }
    },
    "overridesDefinition": {
      "properties": {
        "overrides": {
          "items": {
            "required": ["files"],
            "properties": {
              "excludeFiles": {
                "oneOf": [
                  { "type": "string" },
                  {
                    "items": {
                      "type": "string"
                    },
                    "type": "array"
                  }
                ]
              },
              "files": {
                "oneOf": [
                  { "type": "string" },
                  {
                    "items": {
                      "type": "string"
                    },
                    "type": "array"
                  }
                ]
              },
              "options": {
                "$ref": "#/definitions/optionsDefinition"
              }
            },
            "type": "object"
          }
        }
      }
    }
  },

  "type": "object",
  "allOf": [
    { "$ref": "#/definitions/optionsDefinition" },
    { "$ref": "#/definitions/overridesDefinition" }
  ]
}

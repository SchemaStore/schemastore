{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "JSON schema for Fantomas configuration files",
    "description": "Override the default Fantomas configuration settings using a fantomas-config.json file.",
    "type": "object",
    "properties": {
        "IndentSpaceNum": {
            "type": "integer"
        },
        "PageWidth": {
            "type": "integer"
        },
        "SemicolonAtEndOfLine": {
            "type": "boolean"
        },
        "SpaceBeforeArgument": {
            "type": "boolean"
        },
        "SpaceBeforeColon": {
            "type": "boolean"
        },
        "SpaceAfterComma": {
            "type": "boolean"
        },
        "SpaceAfterSemicolon": {
            "type": "boolean"
        },
        "IndentOnTryWith": {
            "type": "boolean"
        },
        "ReorderOpenDeclaration": {
            "type": "boolean"
        },
        "SpaceAroundDelimiter": {
            "type": "boolean"
        },
        "KeepNewlineAfter": {
            "type": "boolean"
        },
        "MaxIfThenElseShortWidth": {
            "type": "integer"
        },
        "StrictMode": {
            "type": "boolean"
        }
    }    
}
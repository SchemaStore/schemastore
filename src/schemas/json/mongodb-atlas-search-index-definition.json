{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "MongoDBAtlasSearchIndex": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "analyzer": {
          "type": "string"
        },
        "searchAnalyzer": {
          "type": "string"
        },
        "mappings": {
          "$ref": "#/definitions/Mappings"
        },
        "analyzers": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Analyzer"
          }
        },
        "storedSource": {
          "oneOf": [
            {
              "type": "boolean"
            },
            {
              "$ref": "#/definitions/StoredSource"
            }
          ]
        }
      },
      "required": [
        "mappings"
      ]
    },
    "Analyzer": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "charFilters": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/CharFilter"
          }
        },
        "tokenizer": {
          "$ref": "#/definitions/Tokenizer"
        },
        "tokenFilters": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/TokenFilter"
          }
        }
      },
      "required": [
        "name",
        "tokenizer"
      ],
      "title": "Analyzer"
    },
    "Tokenizer": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "enum": [ "edgeGram", "keyword", "nGram", "regexCaptureGroup", "regexSplit", "standard", "uaxUrlEmail", "whitespace" ]
        }
      },
      "required": [
        "type"
      ],
      "title": "Tokenizer"
    },
    "TokenFilter": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "enum": [ "asciiFolding", "daitchMokotoffSoundex", "edgeGram", "icuFolding", "icuNormalizer", "length", "lowercase", "nGram", "regex", "reverse", "shingle", "snowballStemming", "stopword", "trim" ]
        }
      },
      "required": [
        "type"
      ],
      "title": "TokenFilter"
    },
    "CharFilter": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "enum": [ "htmlStrip", "icuNormalize", "mapping", "persian" ]
        }
      },
      "required": [
        "type"
      ],
      "title": "CharFilter"
    },
    "Mappings": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "dynamic": {
          "type": "boolean"
        },
        "fields": {
          "type": "object",
          "patternProperties": {
            "^.*$": {
              "oneOf": [
                {
                  "$ref": "#/definitions/MappingsField"
                },
                {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/MappingsField"
                  }
                }
              ]
            }
          }
        }
      },
      "anyOf": [
        {
          "required": [
            "dynamic"
          ]
        },
        {
          "required": [
            "fields"
          ]
        }
      ],
      "title": "Mappings"
    },
    "MappingsField": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "enum": [ "autocomplete", "boolean", "date", "dateFacet", "document", "embeddedDocuments", "geo", "number", "numberFacet", "objectId", "string", "stringFacet" ]
        }
      }
    },
    "StoredSource": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "include": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "exclude": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "oneOf": [
        {
          "required": [
            "include"
          ]
        },
        {
          "required": [
            "exclude"
          ]
        }
      ],
      "title": "StoredSource"
    }
  },
  "title": "JSON schema for MongoDB Atlas Search index definition",
  "type": "object"
}

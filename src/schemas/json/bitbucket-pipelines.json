{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "JSON schema for Bitbucket Pipelines files",
  "type": "object",
  "definitions": {
    "aws": {
      "type": "object",
      "description": "If the image is hosted by ECR, you can provide the access key and secret key via secure variables.",
      "properties": {
        "access-key": {
          "type": "string",
          "default": "$AWS_ACCESS_KEY"
        },
        "secret-key": {
          "type": "string",
          "default": "$AWS_SECRET_KEY"
        }
      },
      "required": [
        "access-key",
        "secret-key"
      ]
    },
    "pipeline": {
      "description": "Contains the pipeline definition for all branches that don't match a pipeline definition in other sections",
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "object",
            "properties": {
              "parallel": {
                "description": "Parallel steps enable you to build and test faster, by running a set of steps at the same time",
                "type": "array",
                "items": {
                  "type": "object",
                  "$ref": "#/definitions/steps"
                }
              }
            },
            "required": [
              "parallel"
            ]
          },
          {
            "type": "object",
            "$ref": "#/definitions/steps"
          }
        ]
      }
    },
    "pipe": {
      "type": "object",
      "properties": {
        "pipe": {
          "type": "string"
        },
        "variables": {
          "type": "object"
        }
      }
    },
    "definitions": {
      "type": "object",
      "properties": {
        "services": {
          "type": "object",
          "$ref": "#/definitions/services"
        },
        "caches": {
          "type": "object"
        }
      },
      "$ref": "#/definitions/options"
    },
    "services": {
      "type": "object",
      "propertyNames": {
        "pattern": "^[A-Za-z_]*$"
      }
    },
    "clone": {
      "type": "object",
      "properties": {
        "lfs": {
          "type": "boolean"
        },
        "depth": {
          "type": "integer"
        }
      }
    },
    "options": {
      "type": "object",
      "properties": {
        "max-time": {
          "type": "integer"
        },
        "docker": {
          "type": "boolean"
        }
      }
    },
    "branches": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "type": "object",
      "propertyNames": {
        "pattern": "^[A-Za-z_][A-Za-z0-9_]*$"
      },
      "$ref": "#/definitions/steps"
    },
    "steps": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "type": "object",
      "properties": {
        "step": {
          "type": "object",
          "$ref": "#/definitions/step"
        }
      }
    },
    "step": {
      "type": "object",
      "description": "Defines a build execution unit",
      "properties": {
        "size": {
          "type": "string"
        },
        "name": {
          "type": "string",
          "description": "Pipeline step name"
        },
        "variables": {
          "description": "[Custom pipelines only] Contains variables that are supplied when a pipeline is launched.",
          "type": "object"
        },
        "image": {
          "type": "object",
          "$ref": "#/definitions/image"
        },
        "trigger": {
          "type": "string",
          "description": "Specifies whether a step will run automatically or only after someone manually triggers it.",
          "enum": [
            "manual"
          ]
        },
        "deployment": {
          "type": "string"
        },
        "services": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "caches": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "after-script ": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "artifacts": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "script": {
          "type": "array",
          "items": {
            "oneOf": [
              {
                "type": "string"
              },
              {
                "type": "object",
                "$ref": "#/definitions/pipe"
              }
            ]
          }
        }
      },
      "required": [
        "name",
        "script"
      ]
    },
    "image": {
      "title": "JSON schema for Bitbucket Pipelines files",
      "description": "Bitbucket Pipelines uses Docker containers to run your builds.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Docker image used by Bitbucket Pipelines to run your builds."
        },
        "username": {
          "type": "string",
          "default": "$DOCKER_USERNAME"
        },
        "password": {
          "type": "string",
          "default": "$DOCKER_PASSWORD"
        },
        "email": {
          "type": "string",
          "default": "$DOCKER_EMAIL"
        },
        "run-as-user": {
          "type": "integer",
          "description": "An image's default user can be overridden by specifying a user UID as the run-as-user."
        },
        "aws": {
          "type": "object",
          "$ref": "#/definitions/aws"
        }
      },
      "required": [
        "name"
      ]
    }
  },
  "properties": {
    "options": {
      "type": "object",
      "$ref": "#/definitions/options"
    },
    "definitions": {
      "type": "object",
      "$ref": "#/definitions/definitions"
    },
    "clone": {
      "type": "object",
      "$ref": "#/definitions/clone"
    },
    "pipelines": {
      "type": "object",
      "properties": {
        "default": {
          "$ref": "#/definitions/pipeline"
        },
        "branches": {
          "description": "Defines a section for all branch-specific build pipelines.",
          "type": "object",
          "propertyNames": {
            "pattern": "^[A-Za-z_][A-Za-z0-9_]*$"
          },
          "patternProperties": {
            "^[A-Za-z_][A-Za-z0-9_]*$": {
              "type": "array",
              "$ref": "#/definitions/pipeline"
            }
          }
        },
        "tags": {
          "type": "object",
          "description": "Defines all tag-specific build pipelines",
          "propertyNames": {
            "pattern": "^[A-Za-z_][A-Za-z0-9_]*$"
          },
          "patternProperties": {
            "^[A-Za-z_][A-Za-z0-9_]*$": {
              "type": "array",
              "$ref": "#/definitions/pipeline"
            }
          }
        },
        "bookmarks": {
          "type": "object",
          "description": "Defines all bookmark-specific build pipelines",
          "propertyNames": {
            "pattern": "^[A-Za-z_][A-Za-z0-9_]*$"
          },
          "patternProperties": {
            "^[A-Za-z_][A-Za-z0-9_]*$": {
              "type": "array",
              "$ref": "#/definitions/pipeline"
            }
          }
        },
        "pull-requests": {
          "type": "object",
          "description": "A special pipeline that only runs on pull requests initiated from within your repo",
          "propertyNames": {
            "pattern": "^[A-Za-z_][A-Za-z0-9_]*$"
          },
          "patternProperties": {
            "^[A-Za-z_][A-Za-z0-9_]*$": {
              "type": "array",
              "$ref": "#/definitions/pipeline"
            }
          }
        },
        "custom": {
          "description": "Defines pipelines that can only be triggered manually or scheduled from the Bitbucket Cloud interface.",
          "type": "object"
        }
      }
    }
  }
}

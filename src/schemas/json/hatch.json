          "x-taplo": {
            "links": {
              "key": "https://hatch.pypa.io/latest/config/build/#excluding-files-outside-packages"
            }
          },
          "type": "boolean",
          "default": false
        },
        "sources": {
          "title": "Sources",
          "description": "Rewrite relative paths",
          "x-taplo": {
            "links": {
              "key": "https://hatch.pypa.io/latest/config/build/#rewriting-paths"

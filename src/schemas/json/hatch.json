    "Target": {
      "title": "Target",
      "type": "object",
      "properties": {
        "dependencies": {
          "title": "Dependencies",
          "description": "Additional dependencies to install in the environment",
          "x-taplo": {
            "links": {
              "key": "https://hatch.pypa.io/latest/config/build/#dependencies"

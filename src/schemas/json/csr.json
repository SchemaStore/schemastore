{
  "$comment": "JSON Schema for CSR Framework",
  "$schema": "http://json-schema.org/draft-04/schema",
  "definitions": {
    "database": {
      "patternProperties": {
        ".*": {
          "properties": {
            "password": {
              "type": "string"
            },
            "provider": {
              "type": "string"
            },
            "user": {
              "type": "string"
            }
          },
          "required": ["provider"],
          "type": "object"
        }
      },
      "type": "object"
    },
    "log": {
      "properties": {
        "channel": {
          "default": "console",
          "type": "string"
        },
        "path": {
          "default": "../src/logs",
          "type": "string"
        },
        "telegram": {
          "properties": {
            "bot_token": {
              "type": "string"
            },
            "chat_id": {
              "type": "string"
            }
          },
          "required": ["chat_id", "bot_token"],
          "type": "object"
        },
        "template": {
          "properties": {
            "dir": {
              "type": "string"
            },
            "file": {
              "type": "string"
            },
            "message": {
              "type": "string"
            }
          },
          "type": "object"
        }
      },
      "title": "Logger options",
      "type": "object"
    },
    "template": {
      "properties": {
        "cache": {
          "type": "string"
        },
        "path": {
          "type": "string"
        }
      },
      "type": "object"
    }
  },
  "id": "https://json.schemastore.org/csr",
  "properties": {
    "database": {
      "$ref": "#/definitions/database"
    },
    "log": {
      "$ref": "#/definitions/log"
    },
    "template": {
      "$ref": "#/definitions/template"
    }
  },
  "title": "CSR Framework schema",
  "type": "object"
}

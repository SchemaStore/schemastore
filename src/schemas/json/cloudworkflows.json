{
  "$schema": "http://json-schema.org/draft-07/schema#",

  "title": "Google Cloud Workflows config file",
  "description": "Orchestrate Workflows consisting of Google Cloud APIs, SaaS APIs or private API endpoints.",
  "type": "array",
  "minItems": 1,
  "items": {
    "$ref": "#/definitions/step"
  },
  "definitions": {
    "step": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "call": {
          "type": "string",
          "enum": [
            "http.get",
            "http.post",
            "http.request"
          ]
        },
        "args": {
          "type": "object",
          "properties": {
            "url": {
              "type": "string",
              "format": "uri"
            },
            "method": {
              "type": "string",
              "enum": [
                "GET",
                "HEAD",
                "POST",
                "PUT",
                "DELETE",
                "CONNECT",
                "OPTIONS",
                "TRACE",
                "PATCH"
              ]
            },
            "header": {
              "type": "object"
            },
            "body": {
              "type": "object"
            },
            "query": {
              "type": "object"
            },
            "auth": {
              "properties": {
                "type": {
                  "enum": ["OIDC", "OAuth2"]
                }
              }
            },
            "timeout": {
              "type": "number"
            }
          }
        },
        "assign": {
          "type": "object"
        },
        "result": {
          "type": "string"
        },
        "returnValue": {
          "properties": {
            "return": {
              "type": "string"
            }
          }
        },
        "switch": {
          "properties": {
            "steps": {
              "items": {
                "$ref": "#/definitions/step"
              }
            }
          }
        },
        "next": {
          "type": "string"
        },
        "try": {
          "properties": {
            "steps": {
              "items": {
                "$ref": "#/definitions/step"
              }
            }
          }
        },
        "retry": {
          "properties": {
            "predicate": {
              "type": "string"
            },
            "max_retries": {
              "type": "integer"
            },
            "backoff": {
              "properties": {
                "initial_delay": {
                  "type": "integer"
                },
                "max_delay": {
                  "type": "integer"
                },
                "multiplier": {
                  "type": "integer"
                }
              }
            }
          }
        },
        "except": {
          "items": {
            "$ref": "#/definitions/step"
          }
        }
      }
    },
    "as": {
      "type": "string",
      "steps": {
        "items": {
          "$ref": "#/definitions/step"
        }
      }
    },
    "params": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "description": "Settings for project analysis by the Application Inspector",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "BlackBoxSettings": {
      "title": "black box options",
      "description": "Black box and autocheck options",
      "type": ["object", "null"],
      "properties": {
        "AdditionalHttpHeaders": {
          "title": "http headers",
          "description": "Map of additional HTTP headers",
          "type": "object",
          "additionalProperties": {
            "description": "http header",
            "type": "string"
          }
        },
        "Authentication": {
          "title": "authentication options",
          "description": "Authentication options",
          "type": ["object", "null"],
          "properties": {
            "Cookie": {
              "title": "cookie options",
              "type": ["object", "null"],
              "description": "Cookie authentication options",
              "properties": {
                "Cookie": {
                  "description": "A cookie",
                  "type": "string"
                },
                "ValidationAddress": {
                  "description": "A verification address",
                  "type": "string"
                },
                "ValidationTemplate": {
                  "description": "A string to search for",
                  "type": "string"
                }
              },
              "additionalProperties": false,
              "required": ["Cookie", "ValidationAddress", "ValidationTemplate"]
            },
            "Form": {
              "title": "form-based options",
              "description": "Form-based authentication options",
              "type": ["object", "null"],
              "properties": {
                "FormAddress": {
                  "description": "A sign-in form URL",
                  "type": "string"
                },
                "FormXPath": {
                  "description": "A sign-in form XPath",
                  "type": "string"
                },
                "Login": {
                  "description": "A user",
                  "type": "string"
                },
                "LoginKey": {
                  "description": "A user identifier",
                  "type": "string"
                },
                "Password": {
                  "description": "A password",
                  "type": "string"
                },
                "PasswordKey": {
                  "description": "A password identifier",
                  "type": "string"
                },
                "ValidationTemplate": {
                  "description": "A string to search for",
                  "type": "string"
                }
              },
              "additionalProperties": false,
              "required": [
                "FormAddress",
                "FormXPath",
                "Login",
                "LoginKey",
                "Password",
                "PasswordKey",
                "ValidationTemplate"
              ]
            },
            "Http": {
              "title": "http basic options",
              "description": "HTTP Basic authentication options",
              "type": ["object", "null"],
              "properties": {
                "Login": {
                  "description": "A user",
                  "type": "string"
                },
                "Password": {
                  "description": "A password",
                  "type": "string"
                },
                "ValidationAddress": {
                  "description": "A verification address",
                  "type": "string"
                }
              },
              "additionalProperties": false,
              "required": ["Login", "Password", "ValidationAddress"]
            },
            "Type": {
              "description": "A type of authentication",
              "type": "string",
              "enum": ["Form", "Http", "RawCookie", "None"]
            },
            "additionalProperties": false
          },
          "oneOf": [
            {
              "properties": {
                "Type": {
                  "const": "RawCookie"
                },
                "Cookie": {
                  "type": "object"
                }
              },
              "required": ["Cookie", "Type"]
            },
            {
              "properties": {
                "Type": {
                  "const": "Form"
                },
                "Form": {
                  "type": "object"
                }
              },
              "required": ["Form", "Type"]
            },
            {
              "properties": {
                "Type": {
                  "const": "Http"
                },
                "Http": {
                  "type": "object"
                }
              },
              "required": ["Http", "Type"]
            },
            {
              "properties": {
                "Type": {
                  "const": "None"
                }
              },
              "required": ["Type"]
            }
          ]
        },
        "Level": {
          "description": "A search mode",
          "type": "string",
          "enum": ["None", "Fast", "Full", "Normal"]
        },
        "ProxySettings": {
          "title": "proxy options",
          "description": "Proxy server settings",
          "type": ["object", "null"],
          "properties": {
            "Enabled": {
              "description": "Whether proxy is enabled",
              "type": "boolean"
            },
            "Host": {
              "description": "An ddress",
              "type": ["string", "null"]
            },
            "Login": {
              "description": "A user",
              "type": ["string", "null"]
            },
            "Password": {
              "description": "A password",
              "type": ["string", "null"]
            },
            "Port": {
              "description": "A port",
              "type": "integer"
            },
            "Type": {
              "description": "A proxy type",
              "type": "string",
              "enum": ["Http", "Socks4", "Socks5"]
            }
          },
          "additionalProperties": false
        },
        "RunAutocheckAfterScan": {
          "description": "Whether to autocheck vulnerabilities after scanning",
          "type": "boolean"
        },
        "ScanScope": {
          "description": "A scan scope",
          "type": "string",
          "enum": ["Domain", "Folder", "Path"]
        },
        "Site": {
          "description": "A website address",
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "ComponentsSettings": {
      "title": "vulnerability scan options",
      "description": "Vulnerable components scan options",
      "type": ["object", "null"],
      "properties": {
        "UseCustomYaraRules": {
          "description": "Whether to use custom yara rules",
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "CustomParameters": {
      "description": "Custom kernel startup parameters",
      "type": ["string", "null"]
    },
    "DotNetSettings": {
      "title": ".net scan options",
      "description": ".NET scan options",
      "type": ["object", "null"],
      "properties": {
        "ProjectType": {
          "description": "A application type",
          "type": "string",
          "enum": ["None", "Solution", "WebSite"]
        },
        "SolutionFile": {
          "description": "A path to a solution or project",
          "$ref": "https://json.schemastore.org/base.json#/definitions/nullable%2Dpath"
        }
      },
      "additionalProperties": false
    },
    "DownloadDependencies": {
      "description": "Whether to download dependencies",
      "type": "boolean"
    },
    "JavaSettings": {
      "title": "java scan options",
      "description": "Java scan options",
      "type": ["object", "null"],
      "properties": {
        "Parameters": {
          "description": "JVM start options",
          "type": ["string", "null"]
        },
        "UnpackUserPackages": {
          "description": "Whether to unpack custom JAR files",
          "type": "boolean"
        },
        "UserPackagePrefixes": {
          "description": "Prefixes of custom packages",
          "type": ["string", "null"]
        },
        "Version": {
          "description": "A JDK version",
          "type": "string",
          "enum": ["v1_8", "v1_11"]
        }
      },
      "additionalProperties": false
    },
    "ProgrammingLanguage": {
      "description": "An active scanning language",
      "type": "string",
      "enum": [
        "Java",
        "CSharp",
        "VB",
        "Php",
        "JavaScript",
        "Python",
        "ObjectiveC",
        "Swift",
        "CAndCPlusPlus",
        "Go",
        "Kotlin",
        "Sql"
      ]
    },
    "ProjectName": {
      "description": "A project name",
      "type": "string"
    },
    "ScanModules": {
      "description": "Enabled modules",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "description": "A module",
        "type": "string",
        "enum": [
          "Configuration",
          "Components",
          "BlackBox",
          "DataFlowAnalysis",
          "PatternMatching",
          "VulnerableSourceCode"
        ]
      }
    },
    "SkipGitIgnoreFiles": {
      "description": "Whether to exclude from scanning the files from the .gitignore file",
      "type": "boolean"
    },
    "UsePublicAnalysisMethod": {
      "description": "Whether to search from available public and protected methods",
      "type": "boolean"
    },
    "UseSastRules": {
      "description": "Whetehr to enable SAST Analysis rules",
      "type": "boolean"
    },
    "UseSecurityPolicies": {
      "description": "Whether to check for compliance with the security policy",
      "type": "boolean"
    }
  },
  "title": "aiproj",
  "type": "object"
}

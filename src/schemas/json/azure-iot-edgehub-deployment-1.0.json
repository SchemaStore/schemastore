{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "properties": {
    "$edgeHub": {
      "properties": {
        "properties.desired": {
          "properties": {
            "routes": {
              "patternProperties": {
                "^.+$": {
                  "examples": ["FROM /* INTO $upstream"],
                  "pattern": "^.+$",
                  "type": "string"
                }
              },
              "type": "object"
            },
            "schemaVersion": {
              "pattern": "1.0",
              "type": "string"
            },
            "storeAndForwardConfiguration": {
              "properties": {
                "timeToLiveSecs": {
                  "examples": [7200],
                  "type": "integer"
                }
              },
              "required": ["timeToLiveSecs"],
              "type": "object"
            }
          },
          "required": ["schemaVersion", "routes"],
          "type": "object"
        }
      },
      "required": ["properties.desired"],
      "title": "Configuration for the edgeHub module",
      "type": "object"
    }
  },
  "required": ["$edgeHub"],
  "title": "JSON schema for Azure IoT EdgeHub Deployment version 1.0",
  "type": "object"
}

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "properties": {
    "$edgeHub": {
      "type": "object",
      "title": "Configuration for the edgeHub module",
      "required": ["properties.desired"],
      "properties": {
        "properties.desired": {
          "type": "object",
          "required": ["schemaVersion", "routes"],
          "properties": {
            "schemaVersion": {
              "type": "string",
              "pattern": "1.0"
            },
            "routes": {
              "type": "object",
              "patternProperties": {
                "^.+$": {
                  "type": "string",
                  "examples": ["FROM /* INTO $upstream"],
                  "pattern": "^.+$"
                }
              }
            },
            "storeAndForwardConfiguration": {
              "type": "object",
              "required": ["timeToLiveSecs"],
              "properties": {
                "timeToLiveSecs": {
                  "type": "integer",
                  "examples": [7200]
                }
              }
            }
          }
        }
      }
    }
  },
  "required": ["$edgeHub"],
  "title": "JSON schema for Azure IoT EdgeHub Deployment version 1.0",
  "type": "object"
}

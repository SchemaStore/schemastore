{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "additionalProperties": false,
  "definitions": {
    "policy": {
      "items": {
        "additionalProperties": false,
        "properties": {
          "operations": {
            "items": {
              "pattern": "^mqtt:connect$|^mqtt:subscribe$|^mqtt:publish$",
              "type": "string"
            },
            "type": "array"
          },
          "resources": {
            "items": {
              "examples": ["$iothub/clients/+/twin/res/#", "events/alerts"],
              "pattern": "^.+$",
              "type": "string"
            },
            "type": "array"
          }
        },
        "type": "object"
      },
      "type": "array"
    }
  },
  "id": "https://json.schemastore.org/azure-iot-edgehub-deployment-1.2.json",
  "properties": {
    "$edgeHub": {
      "additionalProperties": false,
      "properties": {
        "properties.desired": {
          "additionalProperties": false,
          "properties": {
            "mqttBroker": {
              "additionalProperties": false,
              "properties": {
                "authorizations": {
                  "items": {
                    "additionalProperties": false,
                    "properties": {
                      "allow": {
                        "$ref": "#/definitions/policy"
                      },
                      "deny": {
                        "$ref": "#/definitions/policy"
                      },
                      "identities": {
                        "items": {
                          "examples": [
                            "{{iot:identity}}",
                            "contoso.azure-devices.net/MyLeafDevice1",
                            "contoso.azure-devices.net/MyEdgeDevice/MyModule"
                          ],
                          "pattern": "^.+$",
                          "type": "string"
                        },
                        "type": "array"
                      }
                    },
                    "type": "object"
                  },
                  "type": "array"
                },
                "bridges": {
                  "items": {
                    "additionalProperties": false,
                    "properties": {
                      "endpoint": {
                        "pattern": "\\$upstream",
                        "type": "string"
                      },
                      "settings": {
                        "items": {
                          "additionalProperties": false,
                          "properties": {
                            "direction": {
                              "pattern": "^in$|^out$",
                              "type": "string"
                            },
                            "inPrefix": {
                              "pattern": "^.*$",
                              "type": "string"
                            },
                            "outPrefix": {
                              "pattern": "^.*$",
                              "type": "string"
                            },
                            "topic": {
                              "pattern": "^.*$",
                              "type": "string"
                            }
                          },
                          "type": "object"
                        },
                        "type": "array"
                      }
                    },
                    "type": "object"
                  },
                  "type": "array"
                }
              },
              "type": "object"
            },
            "routes": {
              "additionalProperties": false,
              "patternProperties": {
                "^[^\\.\\$# ]+$": {
                  "anyOf": [
                    {
                      "additionalProperties": false,
                      "properties": {
                        "priority": {
                          "maximum": 9,
                          "minimum": 0,
                          "type": "integer"
                        },
                        "route": {
                          "examples": ["FROM /* INTO $upstream"],
                          "pattern": "^.+$",
                          "type": "string"
                        },
                        "timeToLiveSecs": {
                          "maximum": 4294967295,
                          "minimum": 0,
                          "type": "integer"
                        }
                      },
                      "required": ["route"],
                      "type": "object"
                    },
                    {
                      "examples": ["FROM /* INTO $upstream"],
                      "pattern": "^.+$",
                      "type": "string"
                    }
                  ]
                }
              },
              "type": "object"
            },
            "schemaVersion": {
              "pattern": "1.2",
              "type": "string"
            },
            "storeAndForwardConfiguration": {
              "additionalProperties": false,
              "properties": {
                "timeToLiveSecs": {
                  "examples": [7200],
                  "type": "integer"
                }
              },
              "required": ["timeToLiveSecs"],
              "type": "object"
            }
          },
          "required": ["schemaVersion", "routes"],
          "type": "object"
        }
      },
      "required": ["properties.desired"],
      "title": "Configuration for the edgeHub module",
      "type": "object"
    }
  },
  "required": ["$edgeHub"],
  "title": "JSON schema for Azure IoT EdgeHub Deployment version 1.2",
  "type": "object"
}

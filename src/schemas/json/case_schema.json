{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "api": {
      "title": "api url info",
      "type": "object",
      "properties": {
        "host": {
          "type": "string"
        },
        "uri": {
          "type": "string"
        },
        "method": {
          "type": "string"
        },
        "header": {
          "type": "string",
          "default": "https://dev-api.qiandao.cn"
        }
      }
    },
    "template": {
      "title": "template for all request",
      "type": "object",
      "properties": {
        "header": {
          "type": "object",
          "properties": {
            "authorization": {
              "type": "object",
              "default": "${{get_user_token(18669420998)}}"
            }
          }
        },
        "request_body": {
          "type": "string"
        },
        "provider_data": {
          "type": "array",
          "properties": {
            "provider_type": {
              "type": "string",
              "default": "sql"
            },
            "provider_db": {
              "type": "string"
            },
            "api_id": {
              "type": "string"
            },
            "provider_sql": {
              "type": "string"
            }
          }
        }
      }
    },
    "cases": {
      "title": "cases to test",
      "type": "array",
      "properties": {
        "case_id": {
          "type": "string"
        },
        "describe": {
          "type": "string"
        },
        "assert": {
          "type": "object"
        },
        "request_body": {
          "type": "string"
        },
        "provider_data": {
          "type": "array",
          "properties": {
            "provider_type": {
              "type": "string",
              "default": "sql"
            },
            "provider_db": {
              "type": "string"
            },
            "api_id": {
              "type": "string"
            },
            "provider_sql": {
              "type": "string"
            }
          }
        }
      }
    }
  },
  "description": "a schema for auto api cases",
  "id": "https://json.schemastore.org/case_schema.json",
  "title": "case",
  "type": "object"
}

{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/object1644305096.json",
  "title": "Root",
  "type": "object",
  "required": [
    "version",
    "customElementsVersion",
    "name",
    "type",
    "tagName",
    "description",
    "files"
  ],
  "properties": {
    "version": {
      "$id": "#root/version",
      "title": "Version",
      "type": "number",
      "examples": [0.002],
      "default": 0.0
    },
    "customElementsVersion": {
      "$id": "#root/customElementsVersion",
      "title": "Custom elements version",
      "type": "number",
      "examples": [1],
      "default": 1
    },
    "name": {
      "$id": "#root/name",
      "title": "Name",
      "type": "string",
      "default": "",
      "examples": ["My Component"],
      "pattern": "^.*$"
    },
    "type": {
      "$id": "#root/type",
      "title": "Type",
      "type": "string",
      "default": "",
      "examples": ["my-component"],
      "pattern": "^.*$"
    },
    "tagName": {
      "$id": "#root/tagName",
      "title": "Tag name",
      "type": "string",
      "default": "",
      "examples": ["my-component"],
      "pattern": "^.*$"
    },
    "description": {
      "$id": "#root/description",
      "title": "Description",
      "type": "string",
      "default": "",
      "examples": ["Custom Web Element"],
      "pattern": "^.*$"
    },
    "icon": {
      "$id": "#root/icon",
      "title": "Icon",
      "type": "string",
      "default": "",
      "examples": ["icon.svg"],
      "pattern": "^.*$"
    },
    "files": {
      "$id": "#root/files",
      "title": "Files",
      "type": "object",
      "required": ["js"],
      "properties": {
        "js": {
          "$id": "#root/files/js",
          "title": "Js",
          "type": "array",
          "default": [],
          "items": {
            "$id": "#root/files/js/items",
            "title": "Items",
            "type": "string",
            "default": "",
            "examples": ["component.js"],
            "pattern": "^.*$"
          }
        },
        "css": {
          "$id": "#root/files/css",
          "title": "CSS",
          "type": "array",
          "default": [],
          "items": {
            "$id": "#root/files/js/items",
            "title": "Items",
            "type": "string",
            "default": "",
            "examples": ["component.js"],
            "pattern": "^.*$"
          }
        }
      }
    },
    "attributes": {
      "$id": "#root/attributes",
      "title": "Attributes",
      "type": "array",
      "default": [],
      "items": {
        "$id": "#root/attributes/items",
        "title": "Items",
        "type": "object",
        "required": ["name", "type"],
        "properties": {
          "name": {
            "$id": "#root/attributes/items/name",
            "title": "Name",
            "type": "string",
            "default": "",
            "examples": ["event-name"],
            "pattern": "^.*$"
          },
          "label": {
            "$id": "#root/attributes/items/label",
            "title": "Label",
            "type": "string",
            "default": "",
            "examples": ["Event Name"],
            "pattern": "^.*$"
          },
          "min": {
            "$id": "#root/attributes/items/min",
            "title": "Min",
            "type": "number",
            "default": 0,
            "examples": [0],
            "pattern": "^.*$"
          },
          "max": {
            "$id": "#root/attributes/items/max",
            "title": "Max",
            "type": "number",
            "default": 0,
            "examples": [0],
            "pattern": "^.*$"
          },
          "accept": {
            "$id": "#root/attributes/items/accept",
            "title": "Accept",
            "type": "string",
            "default": "",
            "examples": ["image/*", "*/*", "image/png", "video/*"],
            "pattern": "^.*$"
          },
          "type": {
            "$id": "#root/attributes/items/type",
            "title": "Type",
            "type": "string",
            "default": "",
            "enum": ["string", "boolean", "number", "file", "color"],
            "examples": ["string", "boolean", "number", "file", "color"],
            "pattern": "^.*$"
          },
          "bindable": {
            "$id": "#root/attributes/items/bindable",
            "title": "Bindable",
            "type": "boolean",
            "examples": [true],
            "default": true
          },
          "required": {
            "$id": "#root/attributes/items/required",
            "title": "Required",
            "type": "boolean",
            "examples": [true],
            "default": true
          },
          "defaultValue": {
            "$id": "#root/attributes/items/defaultValue",
            "title": "Default value",
            "type": ["string", "number", "boolean"],
            "default": "",
            "examples": [""],
            "pattern": "^.*$"
          },
          "description": {
            "$id": "#root/attributes/items/description",
            "title": "Description",
            "type": "string",
            "default": "",
            "examples": ["Description of the event"],
            "pattern": "^.*$"
          },
          "gwdSpecific": {
            "$id": "#root/attributes/items/gwdSpecific",
            "title": "Gwdspecific",
            "type": "object",
            "required": ["type", "items"],
            "properties": {
              "type": {
                "$id": "#root/attributes/items/gwdSpecific/type",
                "title": "Type",
                "type": "string",
                "default": "",
                "examples": ["dropdown"],
                "pattern": "^.*$"
              },
              "items": {
                "$id": "#root/attributes/items/gwdSpecific/items",
                "title": "Items",
                "type": "array",
                "default": [],
                "items": {
                  "$id": "#root/attributes/items/gwdSpecific/items/items",
                  "title": "Items",
                  "type": "string",
                  "default": "",
                  "examples": ["Item 1"],
                  "pattern": "^.*$"
                }
              }
            }
          }
        }
      }
    },
    "events": {
      "$id": "#root/events",
      "title": "Events",
      "type": "array",
      "default": [],
      "items": {
        "$id": "#root/events/items",
        "title": "Items",
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "$id": "#root/events/items/name",
            "title": "Name",
            "type": "string",
            "default": "",
            "examples": ["Click"],
            "pattern": "^.*$"
          },
          "label": {
            "$id": "#root/events/items/label",
            "title": "Label",
            "type": "string",
            "default": "",
            "examples": ["onClick"],
            "pattern": "^.*$"
          },
          "description": {
            "$id": "#root/events/items/description",
            "title": "Description",
            "type": "string",
            "default": "",
            "examples": ["Fires when user click or tap on the component."],
            "pattern": "^.*$"
          },
          "parameters": {
            "$id": "#root/events/items/parameters",
            "title": "Parameters",
            "type": "array",
            "default": [],
            "items": {
              "$id": "#root/events/items/parameters/items",
              "title": "Items",
              "type": "string",
              "default": "",
              "examples": ["Event"],
              "pattern": "^.*$"
            }
          },

          "metric": {
            "$id": "#root/events/items/metric",
            "title": "Metric",
            "type": "string",
            "default": "",
            "examples": ["Clicks"],
            "pattern": "^.*$"
          },
          "isCumulative": {
            "$id": "#root/events/items/isCumulative",
            "title": "Is Cumulative",
            "type": "boolean",
            "enum": [true, false],
            "default": true
          },
          "exit": {
            "$id": "#root/events/items/exit",
            "title": "Exit",
            "type": "string",
            "default": "",
            "examples": ["Exit"],
            "pattern": "^.*$"
          }
        }
      }
    },
    "methods": {
      "$id": "#root/methods",
      "title": "Methods",
      "type": "array",
      "default": [],
      "items": {
        "$id": "#root/methods/items",
        "title": "Items",
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "$id": "#root/methods/items/name",
            "title": "Name",
            "type": "string",
            "default": "",
            "examples": ["destroyPlanet"],
            "pattern": "^.*$"
          },
          "label": {
            "$id": "#root/methods/items/label",
            "title": "Label",
            "type": "string",
            "default": "",
            "examples": ["Name that appears in the UI"],
            "pattern": "^.*$"
          },
          "description": {
            "$id": "#root/methods/items/description",
            "title": "Description",
            "type": "string",
            "default": "",
            "examples": ["Example Description"],
            "pattern": "^.*$"
          },
          "parameters": {
            "$id": "#root/methods/items/parameters",
            "title": "Parameters",
            "type": "array",
            "default": [],
            "items": {
              "$id": "#root/methods/items/parameters/items",
              "title": "Items",
              "type": "object",
              "required": ["name"],
              "properties": {
                "name": {
                  "$id": "#root/methods/items/parameters/items/name",
                  "title": "Name",
                  "type": "string",
                  "default": "",
                  "examples": ["color"],
                  "pattern": "^.*$"
                },
                "label": {
                  "$id": "#root/methods/items/parameters/items/label",
                  "title": "Label",
                  "type": "string",
                  "default": "",
                  "examples": ["color"],
                  "pattern": "^.*$"
                },
                "type": {
                  "$id": "#root/methods/items/parameters/items/type",
                  "title": "Type",
                  "type": "string",
                  "default": "",
                  "examples": ["string"],
                  "pattern": "^.*$"
                },
                "optional": {
                  "$id": "#root/methods/items/parameters/items/optional",
                  "title": "Optional",
                  "type": "boolean",
                  "examples": [false],
                  "default": true
                },
                "defaultValue": {
                  "$id": "#root/methods/items/parameters/items/defaultValue",
                  "title": "Default Value",
                  "type": "string",
                  "default": "",
                  "examples": ["#000000"],
                  "pattern": "^.*$"
                }
              }
            }
          }
        }
      }
    },
    "nestable": {
      "$id": "#root/nestable",
      "title": "Nestable",
      "type": "boolean",
      "examples": [false],
      "default": true
    },
    "placeholder": {
      "$id": "#root/placeholder",
      "title": "Placeholder",
      "type": "string",
      "default": "",
      "examples": ["placeholder.png"],
      "pattern": "^.*$"
    },
    "externalScripts": {
      "$id": "#root/externalScripts",
      "title": "External scripts",
      "type": "array",
      "default": [],
      "items": {
        "$id": "#root/externalScripts/items",
        "title": "Items",
        "type": "string",
        "default": "",
        "examples": ["https://example.com/script.js"],
        "pattern": "^.*$"
      }
    }
  }
}

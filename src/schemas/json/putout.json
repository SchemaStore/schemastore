{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "parser": {
      "type": "string"
    },
    "formatter": {
      "type": ["string", "array"]
    },
    "processors": {
      "type": "array",
      "uniqueItems": true
    },
    "ignore": {
      "type": "array",
      "uniqueItems": true
    },
    "match": {
      "type": "object"
    },
    "plugins": {
      "description": "List of plugins to load",
      "type": "array",
      "uniqueItems": true
    },
    "rules": {
      "description": "Names list of rules",
      "type": "object"
    }
  }
}

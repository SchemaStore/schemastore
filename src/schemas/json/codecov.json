{
  "$id": "https://json.schemastore.org/codecov",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "default": {
      "$comment": "See https://docs.codecov.com/docs/commit-status#basic-configuration",
      "properties": {
        "base": {
          "default": "auto",
          "deprecated": true,
          "type": "string"
        },
        "branches": {
          "default": [],
          "type": "array"
        },
        "flag_coverage_not_uploaded_behavior": {
          "enum": ["include", "exclude", "pass"],
          "type": "string"
        },
        "flags": {
          "default": [],
          "type": "array"
        },
        "if_ci_failed": {
          "enum": ["error", "success"],
          "type": "string"
        },
        "if_not_found": {
          "default": "success",
          "enum": ["failure", "success"],
          "type": "string"
        },
        "informational": {
          "default": false,
          "type": "boolean"
        },
        "only_pulls": {
          "default": false,
          "type": "boolean"
        },
        "paths": {
          "default": [],
          "type": ["array", "string"]
        },
        "target": {
          "default": "auto",
          "pattern": "^(([0-9]+\\.?[0-9]*|\\.[0-9]+)%?|auto)$",
          "type": ["string", "number"]
        },
        "threshold": {
          "default": "0%",
          "pattern": "^([0-9]+\\.?[0-9]*|\\.[0-9]+)%?$",
          "type": "string"
        }
      }
    },
    "flag": {
      "properties": {
        "assume": {
          "items": {
            "type": "string"
          },
          "type": ["boolean", "array"]
        },
        "ignore": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "joined": {
          "type": "boolean"
        },
        "paths": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "required": {
          "type": "boolean"
        }
      },
      "type": "object"
    },
    "layout": {
      "anyOf": [
        {},
        {
          "enum": [
            "header",
            "footer",
            "diff",
            "file",
            "files",
            "flag",
            "flags",
            "reach",
            "sunburst",
            "uncovered"
          ]
        }
      ]
    },
    "notification": {
      "properties": {
        "base": {
          "enum": ["parent", "pr", "auto"]
        },
        "branches": {
          "type": "string"
        },
        "flags": {
          "type": "string"
        },
        "message": {
          "type": "string"
        },
        "only_pulls": {
          "type": "boolean"
        },
        "paths": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "threshold": {
          "type": "string"
        },
        "url": {
          "type": "string"
        }
      },
      "type": "object"
    }
  },
  "description": "Schema for codecov.yml files.",
  "properties": {
    "codecov": {
      "description": "See https://docs.codecov.io/docs/codecov-yaml for details",
      "properties": {
        "allow_pseudo_compare": {
          "type": "boolean"
        },
        "archive": {
          "properties": {
            "uploads": {
              "type": "boolean"
            }
          },
          "type": "object"
        },
        "assume_all_flags": {
          "type": "boolean"
        },
        "bot": {
          "description": "Team bot. See https://docs.codecov.io/docs/team-bot for details",
          "type": "string"
        },
        "branch": {
          "type": "string"
        },
        "ci": {
          "description": "Detecting CI services. See https://docs.codecov.io/docs/detecting-ci-services for details.",
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "disable_default_path_fixes": {
          "type": "boolean"
        },
        "max_report_age": {
          "type": ["string", "integer", "boolean"]
        },
        "notify": {
          "properties": {
            "after_n_builds": {
              "type": "integer"
            },
            "countdown": {
              "type": "integer"
            },
            "delay": {
              "type": "integer"
            },
            "wait_for_ci": {
              "type": "boolean"
            }
          },
          "type": "object"
        },
        "require_ci_to_pass": {
          "type": "boolean"
        },
        "slug": {
          "type": "string"
        },
        "strict_yaml_branch": {
          "type": "string"
        },
        "ui": {
          "properties": {
            "hide_complexity": {
              "items": {
                "type": "string"
              },
              "type": ["boolean", "array"]
            },
            "hide_contextual": {
              "type": "boolean"
            },
            "hide_density": {
              "items": {
                "type": "string"
              },
              "type": ["boolean", "array"]
            },
            "hide_search": {
              "type": "boolean"
            },
            "hide_sunburst": {
              "type": "boolean"
            }
          },
          "type": "object"
        },
        "url": {
          "type": "string"
        }
      },
      "type": "object"
    },
    "comment": {
      "description": "Pull request comments. See https://docs.codecov.io/docs/pull-request-comments for details.",
      "oneOf": [
        {
          "properties": {
            "behavior": {
              "enum": ["default", "once", "new", "spammy"]
            },
            "branches": {
              "items": {
                "type": "string"
              },
              "type": "array"
            },
            "flags": {
              "items": {
                "$ref": "#/definitions/flag"
              },
              "type": "array"
            },
            "layout": {
              "$ref": "#/definitions/layout"
            },
            "paths": {
              "items": {
                "type": "string"
              },
              "type": "array"
            },
            "require_base": {
              "type": "boolean"
            },
            "require_changes": {
              "type": "boolean"
            },
            "require_head": {
              "type": "boolean"
            }
          },
          "type": "object"
        },
        {
          "const": false
        }
      ]
    },
    "coverage": {
      "description": "Coverage configuration. See https://docs.codecov.io/docs/coverage-configuration for details.",
      "properties": {
        "notify": {
          "description": "Notifications. See https://docs.codecov.io/docs/notifications for details.",
          "properties": {
            "email": {
              "properties": {
                "+to": {
                  "items": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "base": {
                  "enum": ["parent", "pr", "auto"]
                },
                "branches": {
                  "type": "string"
                },
                "flags": {
                  "type": "string"
                },
                "layout": {
                  "$ref": "#/definitions/layout"
                },
                "message": {
                  "type": "string"
                },
                "only_pulls": {
                  "type": "boolean"
                },
                "paths": {
                  "items": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "threshold": {
                  "type": "string"
                },
                "url": {
                  "type": "string"
                }
              },
              "type": "object"
            },
            "gitter": {
              "description": "Gitter. See https://docs.codecov.io/docs/notifications#section-gitter for details.",
              "properties": {
                "base": {
                  "enum": ["parent", "pr", "auto"]
                },
                "branches": {
                  "type": "string"
                },
                "flags": {
                  "type": "string"
                },
                "message": {
                  "type": "string"
                },
                "only_pulls": {
                  "type": "boolean"
                },
                "paths": {
                  "items": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "threshold": {
                  "type": "string"
                },
                "url": {
                  "type": "string"
                }
              },
              "type": "object"
            },
            "hipchat": {
              "description": "Hipchat. See https://docs.codecov.io/docs/notifications#section-hipchat for details.",
              "properties": {
                "base": {
                  "enum": ["parent", "pr", "auto"]
                },
                "branches": {
                  "type": "string"
                },
                "card": {
                  "type": "boolean"
                },
                "flags": {
                  "type": "string"
                },
                "message": {
                  "type": "string"
                },
                "notify": {
                  "type": "boolean"
                },
                "only_pulls": {
                  "type": "boolean"
                },
                "paths": {
                  "items": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "threshold": {
                  "type": "string"
                },
                "url": {
                  "type": "string"
                }
              },
              "type": "object"
            },
            "irc": {
              "properties": {
                "base": {
                  "enum": ["parent", "pr", "auto"]
                },
                "branches": {
                  "type": "string"
                },
                "channel": {
                  "type": "string"
                },
                "flags": {
                  "type": "string"
                },
                "message": {
                  "type": "string"
                },
                "nickserv_password": {
                  "type": "string"
                },
                "notice": {
                  "type": "boolean"
                },
                "only_pulls": {
                  "type": "boolean"
                },
                "password": {
                  "type": "string"
                },
                "paths": {
                  "items": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "threshold": {
                  "type": "string"
                },
                "url": {
                  "type": "string"
                }
              },
              "type": "object"
            },
            "slack": {
              "description": "Slack. See https://docs.codecov.io/docs/notifications#section-slack for details.",
              "properties": {
                "attachments": {
                  "$ref": "#/definitions/layout"
                },
                "base": {
                  "enum": ["parent", "pr", "auto"]
                },
                "branches": {
                  "type": "string"
                },
                "flags": {
                  "type": "string"
                },
                "message": {
                  "type": "string"
                },
                "only_pulls": {
                  "type": "boolean"
                },
                "paths": {
                  "items": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "threshold": {
                  "type": "string"
                },
                "url": {
                  "type": "string"
                }
              },
              "type": "object"
            },
            "webhook": {
              "properties": {
                "base": {
                  "enum": ["parent", "pr", "auto"]
                },
                "branches": {
                  "type": "string"
                },
                "flags": {
                  "type": "string"
                },
                "message": {
                  "type": "string"
                },
                "only_pulls": {
                  "type": "boolean"
                },
                "paths": {
                  "items": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "threshold": {
                  "type": "string"
                },
                "url": {
                  "type": "string"
                }
              },
              "type": "object"
            }
          },
          "type": "object"
        },
        "precision": {
          "maximum": 5,
          "minimum": 0,
          "type": "integer"
        },
        "range": {
          "type": "string"
        },
        "round": {
          "enum": ["down", "up", "nearest"]
        },
        "status": {
          "additionalProperties": false,
          "description": "Commit status. See https://docs.codecov.io/docs/commit-status for details.",
          "properties": {
            "changes": {
              "$ref": "#/definitions/default",
              "type": ["object", "boolean"]
            },
            "default_rules": {
              "type": "object"
            },
            "patch": {
              "anyOf": [
                {
                  "$ref": "#/definitions/default",
                  "type": "object"
                },
                {
                  "enum": ["off"],
                  "type": "string"
                }
              ]
            },
            "project": {
              "additionalProperties": {
                "$ref": "#/definitions/default",
                "type": ["object", "boolean"]
              },
              "properties": {
                "default": {
                  "$ref": "#/definitions/default",
                  "type": ["object", "boolean"]
                }
              }
            }
          },
          "type": ["boolean", "object"]
        }
      },
      "type": "object"
    },
    "fixes": {
      "description": "Fixing paths. See https://docs.codecov.io/docs/fixing-paths for details.",
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "flags": {
      "description": "Flags. See https://docs.codecov.io/docs/flags for details.",
      "oneOf": [
        {
          "items": {
            "$ref": "#/definitions/flag"
          },
          "type": "array"
        },
        {
          "additionalProperties": {
            "$ref": "#/definitions/flag"
          },
          "type": "object"
        }
      ]
    },
    "ignore": {
      "description": "Ignoring paths. see https://docs.codecov.io/docs/ignoring-paths for details.",
      "items": {
        "type": "string"
      },
      "type": "array"
    }
  },
  "title": "JSON schema for Codecov configuration files",
  "type": "object"
}

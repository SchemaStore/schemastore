{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": ["version"],
    "properties": {
        "version": {
            "type": "integer",
            "default": 2
        }
    },
    "allOf": [
        {
            "if": {
                "properties": {
                    "version": {
                        "const": 3
                    }
                }
            },
            "then": {
                "$ref": "specmatic-3.json"
            },
            "else": {
                "$ref": "specmatic-2.json"
            }
        }
    ]
}
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "#Configuration",
  "$comment": "https://github.com/nestjs/nest-cli/blob/master/lib/configuration/configuration.ts",
  "title": "Nest CLI configuration",
  "type": "object",
  "properties": {
    "language": {
      "type": "string",
      "default": "ts"
    },
    "collection": {
      "type": "string",
      "default": "@nestjs/schematics"
    },
    "sourceRoot": {
      "type": "string",
      "default": "src",
      "description": "The folder where 'nest start', 'nest add' and 'nest generate' search for your code. Default to 'src'.",
      "$comment": "https://github.com/nestjs/nest-cli/blob/master/actions/add.action.ts"
    },
    "entryFile": {
      "type": "string",
      "default": "main",
      "description": "The entry file where 'nest start' work with. Default to 'main'.",
      "$comment": "https://github.com/nestjs/nest-cli/blob/master/actions/start.action.ts"
    },
    "monorepo": {
      "type": "boolean",
      "default": false
    },
    "compilerOptions": {
      "allOf": [
        {
          "$ref": "#/definitions/CompilerOptions"
        },
        {
          "properties": {
            "tsConfigPath": {
              "default": "tsconfig.build.json",
              "type": "string",
              "description": "The tsc configuration file that 'nest build' uses. 'nest build' will not work as expected without this file. Default to 'tsconfig.build.json'.",
              "$comment": "https://github.com/nestjs/nest-cli/blob/master/lib/compiler/defaults/webpac-defaults.ts"
            },
            "webpack": {
              "default": false,
              "type": "boolean",
              "description": "Whether to use webpack to build or start your app. Default to 'false'.",
              "$comment": "https://github.com/nestjs/nest-cli/blob/master/commands/build.command.ts"
            },
            "webpackConfigPath": {
              "default": "webpack.config.js",
              "type": "string",
              "description": "The webpack configuration file that 'nest build' and 'nest start' use. Commands will not work without this file when 'webpack' is enabled. Default to 'webpack.config.js'.",
              "$comment": "https://github.com/nestjs/nest-cli/blob/master/commands/build.command.ts"
            },
            "plugins": {
              "default": [],
              "type": "array"
            },
            "assets": {
              "default": [],
              "type": "array",
              "description": "Files that match these rules will be copied to 'outDir' when building. Default to '[]'."
            }
          }
        }
      ]
    },
    "generateOptions": {
      "$ref": "#/definitions/GenerateOptions",
      "default": {}
    },
    "projects": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/ProjectConfiguration"
      },
      "default": {}
    }
  },
  "definitions": {
    "CompilerOptions": {
      "type": "object",
      "properties": {
        "tsConfigPath": {
          "type": "string"
        },
        "webpack": {
          "type": "boolean"
        },
        "webpackConfigPath": {
          "type": "string"
        },
        "plugins": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "assets": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "deleteOutDir": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "GenerateOptions": {
      "type": "object",
      "properties": {
        "spec": {
          "type": [
            "boolean",
            "object"
          ],
          "additionalProperties": {
            "type": "boolean"
          }
        }
      },
      "additionalProperties": false
    },
    "ProjectConfiguration": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "root": {
          "type": "string"
        },
        "entryFile": {
          "type": "string"
        },
        "sourceRoot": {
          "type": "string"
        },
        "compilerOptions": {
          "$ref": "#/definitions/CompilerOptions"
        }
      },
      "additionalProperties": false
    }
  }
}

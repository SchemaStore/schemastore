              "type": "string"
            }
          }
        },
        "console": {
          "type": "object",
          "properties": {
            "class": {
              "type": "string"
            },
            "disable": {
              "type": "boolean"
            },
            "screen": {
              "type": "string"
            }
          }
        },
        "consolidator": {
          "type": "object",
          "properties": {
            "class": {
              "type": "string"
            },
            "percentiles": {
              "type": "array",
              "items": {
                "type": "number"
              }
            }
          }
        },
        "external-results-loader": {
          "type": "object",
          "properties": {
            "class": {

{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "JSON schema for Markdownlint configuration files",
  "type": "object",
  "properties": {
    "default": {
      "description": "Default state for all rules",
      "type": "boolean",
      "default": true
    },
    "extends": {
      "type": "string"
    },
    "MD001": {
      "description": "Heading levels should only increment by one level at a time",
      "type": "boolean",
      "default": true
    },
    "heading-increment": {
      "$ref": "#/properties/MD001"
    },
    "header-increment": {
      "$ref": "#/properties/MD001"
    },
    "MD002": {
      "description": "First heading should be a top-level heading",
      "default": true,
      "oneOf": [
        {
          "type": "boolean"
        },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "level": {
              "type": "integer",
              "default": 1,
              "description": "Heading level"
            }
          }
        }
      ]
    },
    "first-heading-h1": {
      "$ref": "#/properties/MD002"
    },
    "first-header-h1": {
      "$ref": "#/properties/MD002"
    },
    "MD003": {
      "description": "Heading style",
      "default": true,
      "oneOf": [
        {
          "type": "boolean"
        },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "style": {
              "default": "consistent",
              "enum": [
                "consistent",
                "atx",
                "atx_closed",
                "setext",
                "setext_with_atx",
                "setext_with_atx_closed"
              ],
              "description": "Heading style"
            }
          }
        }
      ]
    },
    "heading-style": {
      "$ref": "#/properties/MD003"
    },
    "header-style": {
      "$ref": "#/properties/MD003"
    },
    "MD004": {
      "description": "Unordered list style",
      "default": true,
      "oneOf": [
        {
          "type": "boolean"
        },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "style": {
              "default": "consistent",
              "enum": ["consistent", "asterisk", "plus", "dash", "sublist"],
              "description": "List style"
            }
          }
        }
      ]
    },
    "ul-style": {
      "$ref": "#/properties/MD004"
    },
    "MD005": {
      "description": "Inconsistent indentation for list items at the same level",
      "type": "boolean",
      "default": true
    },
    "list-indent": {
      "$ref": "#/properties/MD005"
    },
    "MD006": {
      "description": "Consider starting bulleted lists at the beginning of the line",
      "type": "boolean",
      "default": true
    },
    "ul-start-left": {
      "$ref": "#/properties/MD006"
    },
    "MD007": {
      "description": "Unordered list indentation",
      "default": true,
      "oneOf": [
        {
          "type": "boolean"
        },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "indent": {
              "type": "integer",
              "default": 2,
              "description": "Spaces for indent"
            },
            "start_indented": {
              "type": "boolean",
              "default": false,
              "description": "Whether to indent the first level of the list"
            }
          }
        }
      ]
    },
    "ul-indent": {
      "$ref": "#/properties/MD007"
    },
    "MD009": {
      "description": "Trailing spaces",
      "default": true,
      "oneOf": [
        {
          "type": "boolean"
        },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "br_spaces": {
              "type": "integer",
              "default": 2,
              "description": "Spaces for line break"
            },
            "list_item_empty_lines": {
              "type": "boolean",
              "default": false,
              "description": "Allow spaces for empty lines in list items"
            },
            "strict": {
              "type": "boolean",
              "default": false,
              "description": "Include unnecessary breaks"
            }
          }
        }
      ]
    },
    "no-trailing-spaces": {
      "$ref": "#/properties/MD009"
    },
    "MD010": {
      "description": "Hard tabs",
      "default": true,
      "oneOf": [
        {
          "type": "boolean"
        },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "code_blocks": {
              "type": "boolean",
              "default": true,
              "description": "Include code blocks"
            }
          }
        }
      ]
    },
    "no-hard-tabs": {
      "$ref": "#/properties/MD010"
    },
    "MD011": {
      "description": "Reversed link syntax",
      "type": "boolean",
      "default": true
    },
    "no-reversed-links": {
      "$ref": "#/properties/MD011"
    },
    "MD012": {
      "description": "Multiple consecutive blank lines",
      "default": true,
      "oneOf": [
        {
          "type": "boolean"
        },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "maximum": {
              "type": "integer",
              "default": 1,
              "description": "Consecutive blank lines"
            }
          }
        }
      ]
    },
    "no-multiple-blanks": {
      "$ref": "#/properties/MD012"
    },
    "MD013": {
      "description": "Line length",
      "default": true,
      "oneOf": [
        {
          "type": "boolean"
        },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "line_length": {
              "type": "integer",
              "default": 80,
              "description": "Number of characters"
            },
            "heading_line_length": {
              "type": "integer",
              "default": 80,
              "description": "Number of characters for headings"
            },
            "code_block_line_length": {
              "type": "integer",
              "default": 80,
              "description": "Number of characters for code blocks"
            },
            "code_blocks": {
              "type": "boolean",
              "default": true,
              "description": "Include code blocks"
            },
            "headings": {
              "type": "boolean",
              "default": true,
              "description": "Include headings"
            },
            "headers": {
              "type": "boolean",
              "default": true,
              "description": "Include headings"
            },
            "tables": {
              "type": "boolean",
              "default": true,
              "description": "Include tables"
            },
            "strict": {
              "type": "boolean",
              "default": false,
              "description": "Strict length checking"
            },
            "stern": {
              "type": "boolean",
              "default": false,
              "description": "Stern length checking"
            }
          }
        }
      ]
    },
    "line-length": {
      "$ref": "#/properties/MD013"
    },
    "MD014": {
      "description": "Dollar signs used before commands without showing output",
      "type": "boolean",
      "default": true
    },
    "commands-show-output": {
      "$ref": "#/properties/MD014"
    },
    "MD018": {
      "description": "No space after hash on atx style heading",
      "type": "boolean",
      "default": true
    },
    "no-missing-space-atx": {
      "$ref": "#/properties/MD018"
    },
    "MD019": {
      "description": "Multiple spaces after hash on atx style heading",
      "type": "boolean",
      "default": true
    },
    "no-multiple-space-atx": {
      "$ref": "#/properties/MD019"
    },
    "MD020": {
      "description": "No space inside hashes on closed atx style heading",
      "type": "boolean",
      "default": true
    },
    "no-missing-space-closed-atx": {
      "$ref": "#/properties/MD020"
    },
    "MD021": {
      "description": "Multiple spaces inside hashes on closed atx style heading",
      "type": "boolean",
      "default": true
    },
    "no-multiple-space-closed-atx": {
      "$ref": "#/properties/MD021"
    },
    "MD022": {
      "description": "Headings should be surrounded by blank lines",
      "default": true,
      "oneOf": [
        {
          "type": "boolean"
        },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "lines_above": {
              "type": "integer",
              "default": 1,
              "description": "Blank lines above heading"
            },
            "lines_below": {
              "type": "integer",
              "default": 1,
              "description": "Blank lines below heading"
            }
          }
        }
      ]
    },
    "blanks-around-headings": {
      "$ref": "#/properties/MD022"
    },
    "blanks-around-headers": {
      "$ref": "#/properties/MD022"
    },
    "MD023": {
      "description": "Headings must start at the beginning of the line",
      "type": "boolean",
      "default": true
    },
    "heading-start-left": {
      "$ref": "#/properties/MD023"
    },
    "header-start-left": {
      "$ref": "#/properties/MD023"
    },
    "MD024": {
      "description": "Multiple headings with the same content",
      "default": true,
      "oneOf": [
        {
          "type": "boolean"
        },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "siblings_only": {
              "type": "boolean",
              "default": false,
              "description": "Only check sibling headings"
            },
            "allow_different_nesting": {
              "type": "boolean",
              "default": false,
              "description": "Only check sibling headings"
            }
          }
        }
      ]
    },
    "no-duplicate-heading": {
      "$ref": "#/properties/MD024"
    },
    "no-duplicate-header": {
      "$ref": "#/properties/MD024"
    },
    "MD025": {
      "description": "Multiple top-level headings in the same document",
      "default": true,
      "oneOf": [
        {
          "type": "boolean"
        },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "level": {
              "type": "integer",
              "default": 1,
              "description": "Heading level"
            },
            "front_matter_title": {
              "type": "string",
              "description": "RegExp for matching title in front matter"
            }
          }
        }
      ]
    },
    "single-title": {
      "$ref": "#/properties/MD025"
    },
    "single-h1": {
      "$ref": "#/properties/MD025"
    },
    "MD026": {
      "description": "Trailing punctuation in heading",
      "default": true,
      "oneOf": [
        {
          "type": "boolean"
        },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "punctuation": {
              "type": "string",
              "default": ".,;:!。，；：！",
              "description": "Punctuation characters"
            }
          }
        }
      ]
    },
    "no-trailing-punctuation": {
      "$ref": "#/properties/MD026"
    },
    "MD027": {
      "description": "Multiple spaces after blockquote symbol",
      "type": "boolean",
      "default": true
    },
    "no-multiple-space-blockquote": {
      "$ref": "#/properties/MD027"
    },
    "MD028": {
      "description": "Blank line inside blockquote",
      "type": "boolean",
      "default": true
    },
    "no-blanks-blockquote": {
      "$ref": "#/properties/MD028"
    },
    "MD029": {
      "description": "Ordered list item prefix",
      "default": true,
      "oneOf": [
        {
          "type": "boolean"
        },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "style": {
              "enum": ["one", "ordered", "one_or_ordered", "zero"],
              "default": "one_or_ordered",
              "description": "List style"
            }
          }
        }
      ]
    },
    "ol-prefix": {
      "$ref": "#/properties/MD029"
    },
    "MD030": {
      "description": "Spaces after list markers",
      "default": true,
      "oneOf": [
        {
          "type": "boolean"
        },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "ul_single": {
              "type": "integer",
              "default": 1,
              "description": "Spaces for single-line unordered list items"
            },
            "ol_single": {
              "type": "integer",
              "default": 1,
              "description": "Spaces for single-line ordered list items"
            },
            "ul_multi": {
              "type": "integer",
              "default": 1,
              "description": "Spaces for multi-line unordered list items"
            },
            "ol_multi": {
              "type": "integer",
              "default": 1,
              "description": "Spaces for multi-line ordered list items"
            }
          }
        }
      ]
    },
    "list-marker-space": {
      "$ref": "#/properties/MD030"
    },
    "MD031": {
      "description": "Fenced code blocks should be surrounded by blank lines",
      "default": true,
      "oneOf": [
        {
          "type": "boolean"
        },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "list_items": {
              "type": "boolean",
              "default": true,
              "description": "Include list items"
            }
          }
        }
      ]
    },
    "blanks-around-fences": {
      "$ref": "#/properties/MD031"
    },
    "MD032": {
      "description": "Lists should be surrounded by blank lines",
      "type": "boolean",
      "default": true
    },
    "blanks-around-lists": {
      "$ref": "#/properties/MD032"
    },
    "MD033": {
      "description": "Inline HTML",
      "default": true,
      "oneOf": [
        {
          "type": "boolean"
        },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "allowed_elements": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Allowed elements"
            }
          }
        }
      ]
    },
    "no-inline-html": {
      "$ref": "#/properties/MD033"
    },
    "MD034": {
      "description": "Bare URL used",
      "type": "boolean",
      "default": true
    },
    "no-bare-urls": {
      "$ref": "#/properties/MD034"
    },
    "MD035": {
      "description": "Horizontal rule style",
      "default": true,
      "oneOf": [
        {
          "type": "boolean"
        },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "style": {
              "anyOf": [
                {
                  "enum": ["consistent", "---", "***"],
                  "default": "consistent"
                },
                {
                  "type": "string"
                }
              ],
              "description": "Horizontal rule style"
            }
          }
        }
      ]
    },
    "hr-style": {
      "$ref": "#/properties/MD035"
    },
    "MD036": {
      "description": "Emphasis used instead of a heading",
      "default": true,
      "oneOf": [
        {
          "type": "boolean"
        },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "punctuation": {
              "type": "string",
              "default": ".,;:!。，；：！",
              "description": "Punctuation characters"
            }
          }
        }
      ]
    },
    "no-emphasis-as-heading": {
      "$ref": "#/properties/MD036"
    },
    "no-emphasis-as-header": {
      "$ref": "#/properties/MD036"
    },
    "MD037": {
      "description": "Spaces inside emphasis markers",
      "type": "boolean",
      "default": true
    },
    "no-space-in-emphasis": {
      "$ref": "#/properties/MD037"
    },
    "MD038": {
      "description": "Spaces inside code span elements",
      "default": true,
      "type": "boolean"
    },
    "no-space-in-code": {
      "$ref": "#/properties/MD038"
    },
    "MD039": {
      "description": "Spaces inside link text",
      "type": "boolean",
      "default": true
    },
    "no-space-in-links": {
      "$ref": "#/properties/MD039"
    },
    "MD040": {
      "description": "Fenced code blocks should have a language specified",
      "type": "boolean",
      "default": true
    },
    "fenced-code-language": {
      "$ref": "#/properties/MD040"
    },
    "MD041": {
      "description": "First line in a file should be a top-level heading",
      "default": true,
      "oneOf": [
        {
          "type": "boolean"
        },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "level": {
              "type": "integer",
              "default": 1,
              "description": "Heading level"
            },
            "front_matter_title": {
              "type": "string",
              "description": "RegExp for matching title in front matter"
            }
          }
        }
      ]
    },
    "first-line-heading": {
      "$ref": "#/properties/MD041"
    },
    "first-line-h1": {
      "$ref": "#/properties/MD041"
    },
    "MD042": {
      "description": "No empty links",
      "type": "boolean",
      "default": true
    },
    "no-empty-links": {
      "$ref": "#/properties/MD042"
    },
    "MD043": {
      "description": "Required heading structure",
      "default": true,
      "oneOf": [
        {
          "type": "boolean"
        },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "headings": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "List of headings"
            },
            "headers": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "List of headings"
            }
          }
        }
      ]
    },
    "required-headings": {
      "$ref": "#/properties/MD043"
    },
    "required-headers": {
      "$ref": "#/properties/MD043"
    },
    "MD044": {
      "description": "Proper names should have the correct capitalization",
      "default": true,
      "oneOf": [
        {
          "type": "boolean"
        },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "names": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "List of proper names"
            },
            "code_blocks": {
              "type": "boolean",
              "default": true,
              "description": "Include code blocks"
            }
          }
        }
      ]
    },
    "proper-names": {
      "$ref": "#/properties/MD044"
    },
    "MD045": {
      "description": "Images should have alternate text (alt text)",
      "type": "boolean",
      "default": true
    },
    "no-alt-text": {
      "$ref": "#/properties/MD045"
    },
    "MD046": {
      "description": "Code block style",
      "default": true,
      "oneOf": [
        {
          "type": "boolean"
        },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "style": {
              "enum": ["consistent", "fenced", "indented"],
              "default": "consistent",
              "description": "Block style"
            }
          }
        }
      ]
    },
    "code-block-style": {
      "$ref": "#/properties/MD046"
    },
    "MD047": {
      "description": "Files should end with a single newline character",
      "type": "boolean",
      "default": true
    },
    "single-trailing-newline": {
      "$ref": "#/properties/MD047"
    },
    "MD048": {
      "description": "Code fence style",
      "default": true,
      "oneOf": [
        {
          "type": "boolean"
        },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "style": {
              "enum": ["consistent", "tilde", "backtick"],
              "default": "consistent",
              "description": "Code fence syle"
            }
          }
        }
      ]
    },
    "code-fence-style": {
      "$ref": "#/properties/MD048"
    },
    "headings": {
      "description": "headings - MD001, MD002, MD003, MD018, MD019, MD020, MD021, MD022, MD023, MD024, MD025, MD026, MD036, MD041, MD043",
      "type": "boolean",
      "default": true
    },
    "headers": {
      "description": "headers - MD001, MD002, MD003, MD018, MD019, MD020, MD021, MD022, MD023, MD024, MD025, MD026, MD036, MD041, MD043",
      "type": "boolean",
      "default": true
    },
    "bullet": {
      "description": "bullet - MD004, MD005, MD006, MD007, MD032",
      "type": "boolean",
      "default": true
    },
    "ul": {
      "description": "ul - MD004, MD005, MD006, MD007, MD030, MD032",
      "type": "boolean",
      "default": true
    },
    "indentation": {
      "description": "indentation - MD005, MD006, MD007, MD027",
      "type": "boolean",
      "default": true
    },
    "whitespace": {
      "description": "whitespace - MD009, MD010, MD012, MD027, MD028, MD030, MD037, MD038, MD039",
      "type": "boolean",
      "default": true
    },
    "hard_tab": {
      "description": "hard_tab - MD010",
      "type": "boolean",
      "default": true
    },
    "links": {
      "description": "links - MD011, MD034, MD039, MD042",
      "type": "boolean",
      "default": true
    },
    "blank_lines": {
      "description": "blank_lines - MD012, MD022, MD031, MD032, MD047",
      "type": "boolean",
      "default": true
    },
    "line_length": {
      "description": "line_length - MD013",
      "type": "boolean",
      "default": true
    },
    "code": {
      "description": "code - MD014, MD031, MD038, MD040, MD046, MD048",
      "type": "boolean",
      "default": true
    },
    "atx": {
      "description": "atx - MD018, MD019",
      "type": "boolean",
      "default": true
    },
    "spaces": {
      "description": "spaces - MD018, MD019, MD020, MD021, MD023",
      "type": "boolean",
      "default": true
    },
    "atx_closed": {
      "description": "atx_closed - MD020, MD021",
      "type": "boolean",
      "default": true
    },
    "blockquote": {
      "description": "blockquote - MD027, MD028",
      "type": "boolean",
      "default": true
    },
    "ol": {
      "description": "ol - MD029, MD030, MD032",
      "type": "boolean",
      "default": true
    },
    "html": {
      "description": "html - MD033",
      "type": "boolean",
      "default": true
    },
    "url": {
      "description": "url - MD034",
      "type": "boolean",
      "default": true
    },
    "hr": {
      "description": "hr - MD035",
      "type": "boolean",
      "default": true
    },
    "emphasis": {
      "description": "emphasis - MD036, MD037",
      "type": "boolean",
      "default": true
    },
    "language": {
      "description": "language - MD040",
      "type": "boolean",
      "default": true
    },
    "spelling": {
      "description": "spelling - MD044",
      "type": "boolean",
      "default": true
    },
    "accessibility": {
      "description": "accessibility - MD045",
      "type": "boolean",
      "default": true
    },
    "images": {
      "description": "images - MD045",
      "type": "boolean",
      "default": true
    }
  },
  "additionalProperties": {
    "default": true,
    "oneOf": [
      {
        "type": "boolean"
      },
      {
        "type": "object"
      }
    ]
  }
}

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["root"],
  "properties": {
    "root": { "$ref": "#/definitions/node" }
  },
  "definitions": {
    "node": {
      "anyOf": [
        { "$ref": "#/definitions/scalar_node" },
        { "$ref": "#/definitions/sequence_node" },
        { "$ref": "#/definitions/mapping_node" }
      ]
    },
    "node_or_alias": {
      "anyOf": [
        { "$ref": "#/definitions/node" },
        { "$ref": "#/definitions/alias_node" }
      ]
    },
    "scalar_node": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind", "tag", "value"],
      "properties": {
        "anchor": { "type": "string" },
        "kind": { "const": "scalar"},
        "tag": { "type": "string"},
        "value": { "type": "string" }
      }
    },
    "sequence_node": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind", "tag", "value"],
      "properties": {
        "anchor": { "type": "string" },
        "kind": { "const": "sequence"},
        "tag": { "type": "string" },
        "value": { "type": "array", "items": { "$ref": "#/definitions/node_or_alias" } }
      }
    },
    "mapping_node": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind", "tag", "value"],
      "properties": {
        "anchor": { "type": "string" },
        "kind": { "const": "mapping"},
        "tag": { "type": "string" },
        "value": { "type": "array", "items": { "type": "object", "properties": { "key": { "$ref": "#/definitions/node_or_alias" }, "value": { "$ref": "#/definitions/node_or_alias" } } } }
      }
    },
    "alias_node": {
      "type": "object",
      "additionalProperties": false,
      "required": ["anchor"],
      "properties": {
        "anchor": { "type": "string" }
      }
    }
  }
}

            "additionalProperties": true,
            "properties": {
              "plan": {
                "$id": "#/properties/addons/items/anyOf/1/properties/plan",
                "type": "string",
                "title": "The plan schema",
                "description": "An explanation about the purpose of this instance.",
                "default": "",
                "examples": [
                  "mongolab:shared-single-small"
                ]
              },
              "as": {
                "$id": "#/properties/addons/items/anyOf/1/properties/as",
                "type": "string",
                "title": "The as schema",
                "description": "An explanation about the purpose of this instance.",
                "default": "",
                "examples": [
                  "MONGO"
                ]
              }
            }
          },
          {
            "$id": "#/properties/addons/items/anyOf/2",
            "type": "object",
            "title": "The third anyOf schema",
            "description": "An explanation about the purpose of this instance.",
            "default": {},
            "examples": [
              {
                "plan": "heroku-postgresql",
                "options": {
                  "version": "9.5"
                }
              }
            ],
            "required": [
              "plan",
              "options"
            ],
            "additionalProperties": true,
            "properties": {
              "plan": {
                "$id": "#/properties/addons/items/anyOf/2/properties/plan",
                "type": "string",
                "title": "The plan schema",
                "description": "An explanation about the purpose of this instance.",
                "default": "",
                "examples": [
                  "heroku-postgresql"
                ]
              },
              "options": {
                "$id": "#/properties/addons/items/anyOf/2/properties/options",
                "type": "object",
                "title": "The options schema",
                "description": "An explanation about the purpose of this instance.",
                "default": {},
                "examples": [
                  {
                    "version": "9.5"
                  }
                ],
                "required": [
                  "version"
                ],
                "additionalProperties": true,
                "properties": {
                  "version": {
                    "$id": "#/properties/addons/items/anyOf/2/properties/options/properties/version",
                    "type": "string",
                    "title": "The version schema",
                    "description": "An explanation about the purpose of this instance.",
                    "default": "",
                    "examples": [
                      "9.5"
                    ]
                  }
                }
              }
            }
          }
        ],
        "$id": "#/properties/addons/items"
      }
    },
    "buildpacks": {
      "$id": "#/properties/buildpacks",
      "type": "array",
      "title": "The buildpacks schema",
      "description": "An explanation about the purpose of this instance.",
      "default": [],
      "examples": [
        [
          {
            "url": "https://github.com/stomita/heroku-buildpack-phantomjs"
          }
        ]
      ],
      "additionalItems": true,
      "items": {
        "anyOf": [
          {
            "$id": "#/properties/buildpacks/items/anyOf/0",
            "type": "object",
            "title": "The first anyOf schema",
            "description": "An explanation about the purpose of this instance.",
            "default": {},
            "examples": [
              {
                "url": "https://github.com/stomita/heroku-buildpack-phantomjs"
              }
            ],
            "required": [
              "url"
            ],
            "additionalProperties": true,
            "properties": {
              "url": {
                "$id": "#/properties/buildpacks/items/anyOf/0/properties/url",
                "type": "string",
                "title": "The url schema",
                "description": "An explanation about the purpose of this instance.",
                "default": "",
                "examples": [
                  "https://github.com/stomita/heroku-buildpack-phantomjs"
                ]
              }
            }
          }
        ],
        "$id": "#/properties/buildpacks/items"
      }
    },
    "environments": {
      "$id": "#/properties/environments",
      "type": "object",
      "title": "The environments schema",
      "description": "An explanation about the purpose of this instance.",
      "default": {},
      "examples": [
        {
          "test": {
            "scripts": {
              "test": "bundle exec rake test"
            }
          }
        }
      ],
      "required": [
        "test"
      ],
      "additionalProperties": true,
      "properties": {
        "test": {
          "$id": "#/properties/environments/properties/test",
          "type": "object",
          "title": "The test schema",
          "description": "An explanation about the purpose of this instance.",
          "default": {},
          "examples": [
            {
              "scripts": {
                "test": "bundle exec rake test"

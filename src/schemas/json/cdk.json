{
  "$schema": "http://json-schema.org/draft-04/schema",
  "properties": {
    "app": {
      "minLength": 1,
      "type": "string"
    },
    "build": {
      "type": "string"
    },
    "context": {
      "type": "object"
    },
    "versionReporting": {
      "type": "boolean"
    },
    "watch": {
      "properties": {
        "exclude": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "include": {
          "items": {
            "type": "string"
          },
          "type": "array"
        }
      },
      "type": "object"
    }
  },
  "title": "Schema for AWS CDK context files (cdk.json)",
  "type": "object"
}

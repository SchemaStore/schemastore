{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "definitions": {
    "avroArray": {
      "description": "An array",
      "properties": {
        "aliases": {
          "items": {
            "$ref": "#/definitions/name"
          },
          "type": "array"
        },
        "doc": {
          "type": "string"
        },
        "items": {
          "$ref": "#/definitions/types"
        },
        "name": {
          "$ref": "#/definitions/name"
        },
        "namespace": {
          "$ref": "#/definitions/namespace"
        },
        "type": {
          "enum": ["array"],
          "type": "string"
        }
      },
      "required": ["type", "items"],
      "title": "Array",
      "type": "object"
    },
    "avroEnum": {
      "description": "An enumeration",
      "properties": {
        "aliases": {
          "items": {
            "$ref": "#/definitions/name"
          },
          "type": "array"
        },
        "doc": {
          "type": "string"
        },
        "name": {
          "$ref": "#/definitions/name"
        },
        "namespace": {
          "$ref": "#/definitions/namespace"
        },
        "symbols": {
          "items": {
            "$ref": "#/definitions/name"
          },
          "type": "array"
        },
        "type": {
          "enum": ["enum"],
          "type": "string"
        }
      },
      "required": ["type", "name", "symbols"],
      "title": "Enum",
      "type": "object"
    },
    "avroField": {
      "description": "A field within a Record",
      "properties": {
        "aliases": {
          "items": {
            "$ref": "#/definitions/name"
          },
          "type": "array"
        },
        "default": {},
        "doc": {
          "type": "string"
        },
        "name": {
          "$ref": "#/definitions/name"
        },
        "order": {
          "enum": ["ascending", "descending", "ignore"]
        },
        "type": {
          "$ref": "#/definitions/types"
        }
      },
      "required": ["name", "type"],
      "title": "Field",
      "type": "object"
    },
    "avroFixed": {
      "description": "A fixed sized array of bytes",
      "properties": {
        "aliases": {
          "items": {
            "$ref": "#/definitions/name"
          },
          "type": "array"
        },
        "doc": {
          "type": "string"
        },
        "name": {
          "$ref": "#/definitions/name"
        },
        "namespace": {
          "$ref": "#/definitions/namespace"
        },
        "size": {
          "type": "number"
        },
        "type": {
          "enum": ["fixed"],
          "type": "string"
        }
      },
      "required": ["type", "name", "size"],
      "title": "Fixed",
      "type": "object"
    },
    "avroMap": {
      "description": "A map of values",
      "properties": {
        "aliases": {
          "items": {
            "$ref": "#/definitions/name"
          },
          "type": "array"
        },
        "doc": {
          "type": "string"
        },
        "name": {
          "$ref": "#/definitions/name"
        },
        "namespace": {
          "$ref": "#/definitions/namespace"
        },
        "type": {
          "enum": ["map"],
          "type": "string"
        },
        "values": {
          "$ref": "#/definitions/types"
        }
      },
      "required": ["type", "values"],
      "title": "Map",
      "type": "object"
    },
    "avroRecord": {
      "description": "A Record",
      "properties": {
        "aliases": {
          "items": {
            "$ref": "#/definitions/name"
          },
          "type": "array"
        },
        "doc": {
          "type": "string"
        },
        "fields": {
          "items": {
            "$ref": "#/definitions/avroField"
          },
          "type": "array"
        },
        "name": {
          "$ref": "#/definitions/name"
        },
        "namespace": {
          "$ref": "#/definitions/namespace"
        },
        "type": {
          "enum": ["record"],
          "type": "string"
        }
      },
      "required": ["type", "name", "fields"],
      "title": "Record",
      "type": "object"
    },
    "avroSchema": {
      "description": "Root Schema",
      "oneOf": [
        {
          "$ref": "#/definitions/types"
        }
      ],
      "title": "Avro Schema"
    },
    "avroUnion": {
      "description": "A Union of types",
      "items": {
        "$ref": "#/definitions/avroSchema"
      },
      "minItems": 1,
      "title": "Union",
      "type": "array"
    },
    "customTypeReference": {
      "description": "Reference to a ComplexType",
      "not": {
        "$ref": "#/definitions/primitiveType"
      },
      "pattern": "^[A-Za-z_][A-Za-z0-9_]*(\\.[A-Za-z_][A-Za-z0-9_]*)*$",
      "title": "Custom Type",
      "type": "string"
    },
    "name": {
      "pattern": "^[A-Za-z_][A-Za-z0-9_]*$",
      "type": "string"
    },
    "namespace": {
      "pattern": "^([A-Za-z_][A-Za-z0-9_]*(\\.[A-Za-z_][A-Za-z0-9_]*)*)*$",
      "type": "string"
    },
    "primitiveType": {
      "description": "Basic type primitives.",
      "enum": [
        "null",
        "boolean",
        "int",
        "long",
        "float",
        "double",
        "bytes",
        "string"
      ],
      "title": "Primitive Type",
      "type": "string"
    },
    "primitiveTypeWithMetadata": {
      "description": "A primitive type with metadata attached.",
      "properties": {
        "type": {
          "$ref": "#/definitions/primitiveType"
        }
      },
      "required": ["type"],
      "title": "Primitive Type With Metadata",
      "type": "object"
    },
    "types": {
      "description": "Allowed Avro types",
      "oneOf": [
        {
          "$ref": "#/definitions/primitiveType"
        },
        {
          "$ref": "#/definitions/primitiveTypeWithMetadata"
        },
        {
          "$ref": "#/definitions/customTypeReference"
        },
        {
          "$ref": "#/definitions/avroRecord"
        },
        {
          "$ref": "#/definitions/avroEnum"
        },
        {
          "$ref": "#/definitions/avroArray"
        },
        {
          "$ref": "#/definitions/avroMap"
        },
        {
          "$ref": "#/definitions/avroFixed"
        },
        {
          "$ref": "#/definitions/avroUnion"
        }
      ],
      "title": "Avro Types"
    }
  },
  "description": "Json-Schema definition for Avro AVSC files.",
  "oneOf": [
    {
      "$ref": "#/definitions/avroSchema"
    }
  ],
  "title": "Avro Schema Definition"
}

{
  "checks": {
    "argument-count": {
      "enabled": true,
      "config": {
        "threshold": 5
      }
    },
    "file-lines": {
      "enabled": true,
      "config": {
        "threshold": 300
      }
    },
    "method-complexity": {
      "enabled": true,
      "config": {
        "threshold": 15
      }
    },
    "method-count": {
      "enabled": true,
      "config": {
        "threshold": 50
      }
    },
    "method-lines": {
      "enabled": true,
      "config": {
        "threshold": 30
      }
    }
  },
  "exclude_patterns": [
    "*.*",
    ".*",
    "Gemfile",
    "LICENSE",
    "Rakefile",
    "benchmark/",
    "docs/",
    "exe/",
    "features/",
    "rake/",
    "rubocop/",
    "script/",
    "spec/",
    "test/",
    "vendor/",
    "lib/blank_template/",
    "lib/site_template/",
    "lib/theme_template/",
    "lib/jekyll/mime.types",
    "lib/jekyll/commands/serve/livereload_assets/livereload.js"
  ],
  "plugins": {
    "fixme": {
      "enabled": false
    },
    "rubocop": {
      "enabled": true,
      "channel": "rubocop-0-60"
    }
  },
  "version": "2"
}

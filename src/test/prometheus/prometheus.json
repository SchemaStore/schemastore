{
  "global": {
    "scrape_interval": "15s",
    "evaluation_interval": "30s",
    "external_labels": {
      "monitor": "codelab",
      "foo": "bar"
    }
  },
  "rule_files": [
    "first.rules",
    "my/*.rules"
  ],
  "remote_write": [
    {
      "url": "http://remote1/push",
      "write_relabel_configs": [
        {
          "source_labels": [
            "__name__"
          ],
          "regex": "expensive.*",
          "action": "drop"
        }
      ]
    },
    {
      "url": "http://remote2/push",
      "tls_config": {
        "cert_file": "valid_cert_file",
        "key_file": "valid_key_file"
      }
    }
  ]
}
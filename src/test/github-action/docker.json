{
  "name": "Test Docker action",
  "description": "A container-based action",
  "inputs": {
    "who-to-greet": {
      "description": "Who to greet",
      "required": false,
      "default": "World"
    }
  },
  "runs": {
    "using": "docker",
    "image": "Dockerfile",
    "args": ["bzz"],
    "env": {
      "FOO": "bar"
    },
    "pre-entrypoint": "setup.sh",
    "pre-if": "always()",
    "entrypoint": "main.sh",
    "post-entrypoint": "cleanup.sh",
    "post-if": "success()"
  },
  "branding": {
    "icon": "award",
    "color": "green"
  }
}

{
  "$schema": "https://json.schemastore.org/docfx",
  "build": {
    "content": [
      {
        "files": ["**/*.yml"],
        "cwd": "obj/api",
        "dest": "api"
      },
      {
        "files": ["articles/**/*.md", "*.md", "toc.yml", "restapi/**"]
      }
    ],
    "resource": [
      {
        "files": ["articles/images/**"]
      }
    ],
    "overwrite": "specs/*.md",
    "globalMetadata": {
      "_appTitle": "docfx seed website",
      "_enableSearch": true
    },
    "dest": "_site"
  },
  "metadata": [
    {
      "src": [
        {
          "files": ["**/*.sln"],
          "exclude": ["**/bin/**", "**/obj/**"],
          "cwd": "src"
        }
      ],
      "dest": "obj/api"
    }
  ]
}

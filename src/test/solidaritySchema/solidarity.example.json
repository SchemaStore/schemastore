{
  "$schema": "http://json.schemastore.org/solidaritySchema",
  "config": {
    "output": "moderate"
  },
  "requirements": {
    "Android": [
      {
        "binary": "emulator",
        "rule": "cli"
      },
      {
        "binary": "android",
        "rule": "cli"
      },
      {
        "error": "The ANDROID_HOME environment variable must be set to your local SDK.  Refer to getting started docs for help.",
        "rule": "env",
        "variable": "ANDROID_HOME"
      }
    ],
    "Cocoapods": [
      {
        "binary": "pod",
        "rule": "cli",
        "semver": "1.2.1"
      }
    ],
    "Git email": [
      {
        "command": "git config user.email",
        "match": ".+@.+",
        "rule": "shell"
      }
    ],
    "NPM": [
      {
        "binary": "npm",
        "rule": "cli"
      }
    ],
    "Node": [
      {
        "binary": "node",
        "rule": "cli",
        "semver": "8.5.0"
      }
    ],
    "Package.json": [
      {
        "location": "./package.json",
        "rule": "file"
      }
    ],
    "React Native": [
      {
        "binary": "react-native",
        "rule": "cli",
        "semver": "~2.0.1"
      },
      {
        "binary": "react-native",
        "line": 2,
        "rule": "cli",
        "semver": ">0.0.1"
      }
    ],
    "Watchman": [
      {
        "binary": "watchman",
        "error": "install watchman `brew install watchman`",
        "platform": "darwin",
        "rule": "cli"
      }
    ],
    "Xcode": [
      {
        "binary": "xcodebuild",
        "platform": "darwin",
        "rule": "cli",
        "semver": "9.0"
      },
      {
        "binary": "xcrun",
        "platform": "darwin",
        "rule": "cli",
        "semver": "35"
      }
    ],
    "Yarn": [
      {
        "binary": "yarn",
        "rule": "cli",
        "semver": "^1.0.1",
        "version": "--version"
      }
    ]
  }
}

{
  "groups": [
    {
      "name": "my-group-name",
      "rules": [
        {
          "alert": "InstanceDown",
          "annotations": {
            "description": "stuff's happening with {{ $labels.service }}"
          },
          "expr": "up == 0",
          "for": "1m",
          "keep_firing_for": "2m",
          "labels": {
            "severity": "critical"
          }
        },
        {
          "alert": "InstanceDown",
          "annotations": {
            "description": "stuff's happening with {{ $labels.service }}"
          },
          "expr": "up == 0",
          "for": "1m30s",
          "keep_firing_for": "2m30s",
          "labels": {
            "severity": "critical"
          }
        }
      ]
    }
  ]
}

{
    "name": "Node.js Package",
    "on": {
        "release": {
            "types": [
                "created"
            ]
        }
    },
    "permissions": {
        "contents": "read",
        "pull-requests": "write"
    },
    "jobs": {
        "build": {
            "runs-on": "ubuntu-latest",
            "steps": [
                {
                    "uses": "actions/checkout@v2"
                },
                {
                    "uses": "actions/setup-node@v2",
                    "with": {
                        "node-version": 12
                    }
                },
                {
                    "run": "npm ci"
                },
                {
                    "run": "npm test"
                }
            ]
        },
        "publish-npm": {
            "needs": "build",
            "runs-on": "ubuntu-latest",
            "steps": [
                {
                    "uses": "actions/checkout@v2"
                },
                {
                    "uses": "actions/setup-node@v2",
                    "with": {
                        "node-version": 12,
                        "registry-url": "https://registry.npmjs.org/"
                    }
                },
                {
                    "run": "npm ci"
                },
                {
                    "run": "npm publish",
                    "env": {
                        "NODE_AUTH_TOKEN": "${{secrets.npm_token}}"
                    }
                }
            ]
        },
        "publish-gpr": {
            "needs": "build",
            "runs-on": "ubuntu-latest",
            "permissions": {
                "contents": "read",
                "packages": "write"
            },
            "steps": [
                {
                    "uses": "actions/checkout@v2"
                },
                {
                    "uses": "actions/setup-node@v2",
                    "with": {
                        "node-version": 12,
                        "registry-url": "https://npm.pkg.github.com/"
                    }
                },
                {
                    "run": "npm ci"
                },
                {
                    "run": "npm publish",
                    "env": {
                        "NODE_AUTH_TOKEN": "${{secrets.GITHUB_TOKEN}}"
                    }
                }
            ]
        }
    }
}

{
  "name": "publish on release",
  "on": {
    "release": {
      "types": [
        "published"
      ]
    }
  },
  "jobs": {
    "build-and-publish": {
      "uses": "exampleowner/example/.github/workflows/build_and_publish.yaml@v1",
      "secrets": {
        "api_token": "${{ secrets.API_TOKEN }}"
      },
      "concurrency": "build-${{ github.ref }}"
    },
    "inherit-secrets": {
      "uses": "exampleowner/example/.github/workflows/build_and_publish.yaml@v1",
      "secrets": "inherit",
      "concurrency": "build-${{ github.ref }}"
    }
  }
}

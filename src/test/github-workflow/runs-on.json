    "self-hosted": {
      "runs-on": "self-hosted",
      "steps": [
        {
          "run": "echo 'Hello from self-hosted ${{ runner.os }}'"
        }
      ]
    },
    "self-hosted-array": {
      "runs-on": ["self-hosted"],

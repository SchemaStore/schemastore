    "matrix": {
      "runs-on": "${{ matrix.os }}",
      "strategy": {
        "matrix": {
          "os": ["ubuntu-20.04", "ubuntu-18.04", "ubuntu-16.04"]
        }
      },
      "steps": [
        {
          "run": "echo 'Hello from ${{ runner.os }}'"
        }
      ]

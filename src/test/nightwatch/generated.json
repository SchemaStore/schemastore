{
  "src_folders": [],
  "test_settings": {
    "default": {
      "launch_url": "https://nightwatchjs.org"
    },
    "safari": {
      "desiredCapabilities": {
        "browserName": "safari",
        "alwaysMatch": {
          "acceptInsecureCerts": false
        }
      },
      "webdriver": {
        "port": 4445,
        "start_process": true,
        "server_path": "/usr/bin/safaridriver"
      }
    },
    "firefox": {
      "desiredCapabilities": {
        "browserName": "firefox"
      },
      "webdriver": {
        "start_process": true,
        "port": 4444,
        "server_path": "require('geckodriver').path"
      }
    }
  }
}

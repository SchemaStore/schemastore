{
  "src_folders": [],

  "webdriver": {
    "start_process": true,
    "port": 4444,
    "server_path": "...",
    "cli_args": [
      "-vv"
    ]
  },

  "test_settings": {
    "default": {
      "launch_url": "https://nightwatchjs.org",
      "desiredCapabilities" : {
        "browserName" : "firefox",
        "alwaysMatch": {
          "moz:firefoxOptions": {
            "args": [
               "-headless",
               "-verbose"
            ]
          }
        }
      }
    }
  }
}

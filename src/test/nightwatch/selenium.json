{
  "src_folders": [],
  "test_settings": {
    "default": {
      "launch_url": "https://nightwatchjs.org"
    },
    "selenium": {
      "selenium": {
        "cli_args": {
          "webdriver.chrome.driver": "require('chromedriver').path",
          "webdriver.gecko.driver": "require('geckodriver').path",
          "webdriver.ie.driver": "require('iedriver').path"
        },
        "port": 4444,
        "server_path": "require('selenium-server').path",
        "start_process": true
      },
      "webdriver": {
        "start_process": false
      }
    },
    "selenium.chrome": {
      "desiredCapabilities": {
        "browserName": "chrome",
        "chromeOptions": {
          "w3c": false
        }
      },
      "extends": "selenium"
    },
    "selenium.firefox": {
      "desiredCapabilities": {
        "browserName": "firefox"
      },
      "extends": "selenium"
    },
    "selenium.ie": {
      "desiredCapabilities": {
        "browserName": "internet explorer"
      },
      "extends": "selenium"
    }
  }
}

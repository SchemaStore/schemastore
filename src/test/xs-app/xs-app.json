{
  "welcomeFile": "comsap4kidsresourcelocator/",
  "sessionTimeout": 150,
  "authenticationMethod": "route",
  "logout": {
    "logoutEndpoint": "/do/logout"
  },
  "routes": [
    {
      "source": "^/odata/(.*)$",
      "target": "$1",
      "authenticationType": "xsuaa",
      "destination": "SAP4KidsService",
      "csrfProtection": true
    },
    {
      "source": "^/public/(.*)$",
      "target": "$1",
      "authenticationType": "none",
      "destination": "SAP4KidsService"
    },
    {
      "source": "^/dataadmin/(.*)$",
      "target": "$1",
      "authenticationType": "xsuaa",
      "destination": "SAP4KidsService",
      "csrfProtection": true,
      "scope": [
        "$XSAPPNAME.admin"
      ]
    }
  ]
}

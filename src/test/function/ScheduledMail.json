{
  "bindings": [
    {
      "direction": "in",
      "name": "myTimer",
      "schedule": "0 0 23 * * *",
      "type": "timerTrigger"
    },
    {
      "apiKey": "SendGridApiKey",
      "direction": "out",
      "from": "Azure Functions <samples@functions.com>",
      "name": "$return",
      "to": "user@host.com",
      "type": "sendGrid"
    }
  ]
}

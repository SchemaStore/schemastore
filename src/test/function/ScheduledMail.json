{
    "bindings": [
        {
            "type": "timerTrigger",
            "name": "myTimer",
            "schedule": "0 0 23 * * *",
            "direction": "in"
        },
        {
            "type": "sendGrid",
            "name": "$return",
            "direction": "out",
            "apiKey": "SendGridApiKey",
            "from": "Azure Functions <samples@functions.com>",
            "to": "user@host.com"
        }
    ]
}

{
  "jobs": {
    "include": [
      {
        "stage": "As single string",
        "addons": {
          "snaps": "hugo"
        }
      },
      {
        "stage": "As array of strings",
        "addons": {
          "snaps": [
            "hugo",
            "mosquitto"
          ]
        }
      },
      {
        "stage": "As mixed array of strings and object",
        "addons": {
          "snaps": [
            "hugo",
            {
              "name": "classic is deprecated",
              "channel": "latest/edge",
              "classic": true
            },
            {
              "name": "aws-cli_1",
              "channel": "latest/edge",
              "confinement": "classic"
            },
            {
              "name": "aws-cli_2",
              "channel": "latest/edge",
              "confinement": "devmode"
            },
            "mosquitto"
          ]
        }
      }
    ]
  }
}

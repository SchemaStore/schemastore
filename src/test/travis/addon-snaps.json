{
  "jobs": {
    "include": [
      {
        "stage": "As single string",
        "addons": {
          "snaps": "hugo"
        }
      },
      {
        "stage": "As array of strings",
        "addons": {
          "snaps": [
            "hugo",
            "mosquitto"
          ]
        }
      },
      {
        "stage": "As mixed array of strings and object",
        "addons": {
          "snaps": [
            "hugo",
            {
              "name": "aws-cli",
              "classic": true,
              "channel": "latest/edge"
            },
            "mosquitto"
          ]
        }
      }
    ]
  }
}

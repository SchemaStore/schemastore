{
  "version": 2,
  "updates": [
    {
      "package-ecosystem": "npm",
      "directory": "/1",
      "schedule": {
        "interval": "daily"
      },
      "groups": {
        "NPM dependencies": {
          "update-types": ["major"]
        }
      }
    },
    {
      "package-ecosystem": "npm",
      "directory": "/2",
      "schedule": {
        "interval": "daily"
      },
      "groups": {
        "NPM dependencies": {
          "update-types": ["major", "minor", "patch"]
        }
      }
    }
  ]
}

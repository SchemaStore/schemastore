{
  "version": 2,
  "updates": [
    {
      "package-ecosystem": "npm",
      "directory": "/",
      "schedule": {
        "interval": "daily"
      },
      "allow": [
        {
          "dependency-name": "lodash"
        }
      ]
    },
    {
      "package-ecosystem": "composer",
      "directory": "/",
      "schedule": {
        "interval": "daily"
      },
      "allow": [
        {
          "dependency-type": "all"
        }
      ]
    },
    {
      "package-ecosystem": "pip",
      "directory": "/",
      "schedule": {
        "interval": "daily"
      },
      "allow": [
        {
          "dependency-name": "django*",
          "dependency-type": "direct"
        }
      ]
    }
  ]
}

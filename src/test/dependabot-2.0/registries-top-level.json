{
  "registries": {
    "my-custom-registry": {
      "password": "${{ secrets.password }}",
      "type": "npm-registry",
      "url": "https://example.example",
      "username": "success"
    }
  },
  "updates": [
    {
      "directory": "/1",
      "package-ecosystem": "npm",
      "registries": ["my-custom-registry"],
      "schedule": {
        "interval": "daily"
      }
    },
    {
      "directory": "/2",
      "package-ecosystem": "npm",
      "registries": "*",
      "schedule": {
        "interval": "daily"
      }
    }
  ],
  "version": 2
}

{
  "apiVersions": ["example/v1"],
  "bases": ["environments.yaml", "defaults.yaml", "templates.yaml"],
  "environments": {
    "default": {
      "values": [
        "environments/default/values.yaml",
        {
          "myChartVer": "1.0.0-dev"
        }
      ]
    },
    "production": {
      "values": [
        "environment/production/values.yaml",
        {
          "myChartVer": "1.0.0"
        },
        {
          "vault": {
            "enabled": false
          }
        }
      ],
      "secrets": ["environment/production/secrets.yaml"],
      "missingFileHandler": "Error"
    }
  },
  "helmDefaults": {
    "tillerNamespace": "tiller-namespace",
    "tillerless": false,
    "kubeContext": "kube-context",
    "cleanupOnFail": false,
    "args": ["--set k=v"],
    "verify": true,
    "wait": true,
    "waitForJobs": true,
    "hooks": [
      {
        "events": ["prepare", "cleanup"],
        "showlogs": true,
        "command": "echo",
        "args": ["{{`{{.Environment.Name}}`}}", "{{`{{.HelmfileCommand}}`}}"]
      }
    ],
    "timeout": 600,
    "recreatePods": true,
    "force": false,
    "tls": true,
    "tlsCACert": "path/to/ca.pem",
    "tlsCert": "path/to/cert.pem",
    "tlsKey": "path/to/key.pem",
    "historyMax": 10,
    "createNamespace": true
  },
  "helmfiles": [
    {
      "path": "path/to/subhelmfile.yaml",
      "selectors": ["name=prometheus"],
      "values": [
        "additional.values.yaml",
        {
          "key1": "val1"
        }
      ]
    },
    {
      "path": "path/to/mycrd.helmfile.yaml"
    },
    {
      "path": "git::https://github.com/cloudposse/helmfiles.git@releases/kiam.yaml?ref=0.40.0"
    }
  ],
  "missingFileHandler": "Error",
  "releases": [
    {
      "name": "vault",
      "namespace": "vault",
      "createNamespace": true,
      "labels": {
        "foo": "bar"
      },
      "chart": "roboll/vault-secret-manager",
      "version": "~1.24.1",
      "condition": "vault.enabled",
      "missingFileHandler": "Warn",
      "values": [
        "vault.yaml",
        {
          "address": "https://vault.example.com"
        },
        {
          "image": {
            "tag": "string"
          },
          "db": {
            "username": "string",
            "password": "string"
          },
          "proxy": {
            "domain": "string",
            "scheme": "string"
          }
        }
      ],
      "set": [
        {
          "name": "foo.config",
          "file": "path/to/file"
        },
        {
          "name": "bar[0]",
          "values": [1, 2]
        },
        {
          "name": "namespace",
          "value": "namespace"
        }
      ],
      "secrets": ["vault_secret.yaml"],
      "verify": true,
      "wait": true,
      "timeout": 60,
      "recreatePods": true,
      "force": false,
      "installed": true,
      "atomic": true,
      "cleanupOnFail": false,
      "tillerNamespace": "vault",
      "tillerless": false,
      "tls": true,
      "tlsCACert": "path/to/ca.pem",
      "tlsCert": "path/to/cert.pem",
      "tlsKey": "path/to/key.pem",
      "kubeContext": "kube-context",
      "historyMax": 10
    },
    {
      "name": "grafana",
      "namespace": "another",
      "chart": "../my-charts/grafana",
      "values": [
        "../../my-values/grafana/values.yaml",
        "./values/{{ requiredEnv \"PLATFORM_ENV\" }}/config.yaml",
        {
          "key": "value"
        }
      ],
      "wait": true
    }
  ],
  "repositories": [
    {
      "name": "stable",
      "url": "https://kubernetes-charts.storage.googleapis.com"
    },
    {
      "name": "incubator",
      "url": "https://kubernetes-charts-incubator.storage.googleapis.com"
    },
    {
      "name": "polaris",
      "url": "git+https://github.com/reactiveops/polaris@deploy/helm?ref=master"
    },
    {
      "name": "roboll",
      "url": "https://roboll.io/charts",
      "certFile": "optional_client_cert",
      "keyFile": "optional_client_key",
      "username": "optional_username",
      "password": "optional_password"
    },
    {
      "name": "insecure",
      "url": "https://charts.my-insecure-domain.com",
      "caFile": "optional_ca_crt"
    }
  ]
}

{
  "tosca_definitions_version": "cloudify_dsl_1_3",
  "imports": [
    "http://www.getcloudify.org/spec/cloudify/5.0.5/types.yaml",
    "plugin:cloudify-kubernetes-plugin"
  ],
  "inputs": {
    "resource_path": {
      "type": "string"
    },
    "kubernetes_master": {
      "type": "string"
    },
    "validate_status": {
      "type": "boolean",
      "default": false
    },
    "resource_template_variables": {
      "default": {}
    },
    "allow_node_redefinition": {
      "type": "boolean",
      "default": true
    }
  },
  "node_templates": {
    "resource": {
      "type": "cloudify.kubernetes.resources.FileDefinedResource",
      "properties": {
        "client_config": {
          "authentication": {
            "gcp_service_account": {
              "get_secret": "gcp_credentials"
            }
          },
          "configuration": {
            "api_options": {
              "host": {
                "get_input": "kubernetes_master"
              },
              "verify_ssl": false,
              "debug": false
            }
          }
        },
        "validate_resource_status": {
          "get_input": "validate_status"
        },
        "allow_node_redefinition": {
          "get_input": "allow_node_redefinition"
        },
        "file": {
          "resource_path": {
            "get_input": "resource_path"
          },
          "template_variables": {
            "get_input": "resource_template_variables"
          }
        }
      }
    }
  }
}
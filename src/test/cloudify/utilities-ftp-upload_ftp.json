{
  "tosca_definitions_version": "cloudify_dsl_1_3",
  "imports": [
    "http://www.getcloudify.org/spec/cloudify/5.0.0/types.yaml",
    "plugin.yaml"
  ],
  "inputs": {
    "ftp_ip": {
      "type": "string",
      "description": "ftp server ip\n",
      "default": "127.0.0.1"
    },
    "ftp_user": {
      "type": "string",
      "description": "ftp server user\n",
      "default": "clouduser"
    },
    "ftp_password": {
      "type": "string",
      "description": "ftp server user password\n",
      "default": "clouduser"
    },
    "ftp_port": {
      "type": "integer",
      "description": "ftp server port, by default 21\n",
      "default": 21
    }
  },
  "node_templates": {
    "ftp_impl": {
      "type": "cloudify.nodes.ftp",
      "interfaces": {
        "cloudify.interfaces.lifecycle": {
          "create": {
            "inputs": {
              "resource_config": {
                "user": {
                  "get_input": "ftp_user"
                },
                "password": {
                  "get_input": "ftp_password"
                },
                "ip": {
                  "get_input": "ftp_ip"
                },
                "port": {
                  "get_input": "ftp_port"
                },
                "ignore_host": true,
                "tls": false
              },
              "raw_files": {
                "blueprint.yaml": "upload_ftp.yaml"
              },
              "files": {
                "new_file.yaml": "yaml_file: abcd"
              }
            }
          },
          "delete": {
            "inputs": {
              "resource_config": {
                "user": {
                  "get_input": "ftp_user"
                },
                "password": {
                  "get_input": "ftp_password"
                },
                "ip": {
                  "get_input": "ftp_ip"
                },
                "port": {
                  "get_input": "ftp_port"
                },
                "ignore_host": true,
                "tls": false
              }
            }
          }
        }
      }
    }
  }
}
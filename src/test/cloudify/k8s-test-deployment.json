{
  "tosca_definitions_version": "cloudify_dsl_1_3",
  "imports": [
    "http://www.getcloudify.org/spec/cloudify/5.0.5/types.yaml",
    "plugin:cloudify-kubernetes-plugin"
  ],
  "inputs": {
    "kubernetes_master": {
      "type": "string"
    }
  },
  "node_templates": {
    "deployment": {
      "type": "cloudify.kubernetes.resources.Deployment",
      "properties": {
        "client_config": {
          "authentication": {
            "gcp_service_account": {
              "get_secret": "gcp_credentials"
            }
          },
          "configuration": {
            "api_options": {
              "host": {
                "get_input": "kubernetes_master"
              },
              "verify_ssl": false,
              "debug": false
            }
          }
        },
        "definition": {
          "apiVersion": "apps/v1",
          "kind": "Deployment",
          "metadata": {
            "name": "nginx-deployment",
            "labels": {
              "app": "nginx"
            }
          },
          "spec": {
            "replicas": 3,
            "selector": {
              "matchLabels": {
                "app": "nginx"
              }
            },
            "template": {
              "metadata": {
                "labels": {
                  "app": "nginx"
                }
              },
              "spec": {
                "containers": [
                  {
                    "name": "nginx",
                    "image": "nginx:1.7.9",
                    "ports": [
                      {
                        "containerPort": 80
                      }
                    ]
                  }
                ]
              }
            }
          }
        }
      }
    }
  }
}
{
  "tosca_definitions_version": "cloudify_dsl_1_3",
  "description": "Create an Example Azure Network.\n",
  "imports": [
    "http://cloudify.co/spec/cloudify/5.0.5/types.yaml",
    "plugin:cloudify-azure-plugin"
  ],
  "inputs": {
    "subscription_id": {
      "type": "string",
      "default": {
        "get_secret": "azure_subscription_id"
      }
    },
    "tenant_id": {
      "type": "string",
      "default": {
        "get_secret": "azure_tenant_id"
      }
    },
    "client_id": {
      "type": "string",
      "default": {
        "get_secret": "azure_client_id"
      }
    },
    "client_secret": {
      "type": "string",
      "default": {
        "get_secret": "azure_client_secret"
      }
    },
    "endpoint_resource": {
      "default": "https://management.core.windows.net/"
    },
    "endpoints_resource_manager": {
      "default": "https://management.azure.com"
    },
    "endpoint_verify": {
      "default": true
    },
    "endpoint_storage": {
      "type": "string",
      "default": "core.windows.net"
    },
    "endpoints_active_directory": {
      "type": "string",
      "default": "https://login.microsoftonline.com"
    },
    "location": {
      "type": "string",
      "description": "Your Azure Region.",
      "default": "eastus2"
    },
    "retry_after": {
      "default": 5
    },
    "resource_prefix": {
      "default": "cfy"
    },
    "resource_suffix": {
      "default": 0
    },
    "public_subnet_cidr": {
      "default": "10.10.2.0/24"
    },
    "private_subnet_cidr": {
      "default": "10.10.3.0/24"
    },
    "network_api_version": {
      "description": "API Version for Network\n",
      "default": "2015-06-15"
    }
  },
  "dsl_definitions": {
    "client_config": {
      "subscription_id": {
        "get_input": "subscription_id"
      },
      "tenant_id": {
        "get_input": "tenant_id"
      },
      "client_id": {
        "get_input": "client_id"
      },
      "client_secret": {
        "get_input": "client_secret"
      },
      "endpoint_resource": {
        "get_input": "endpoint_resource"
      },
      "endpoints_resource_manager": {
        "get_input": "endpoints_resource_manager"
      },
      "endpoint_verify": {
        "get_input": "endpoint_verify"
      },
      "endpoints_active_directory": {
        "get_input": "endpoints_active_directory"
      }
    }
  },
  "node_templates": {
    "resource_group": {
      "type": "cloudify.azure.nodes.ResourceGroup",
      "properties": {
        "azure_config": {
          "subscription_id": {
            "get_input": "subscription_id"
          },
          "tenant_id": {
            "get_input": "tenant_id"
          },
          "client_id": {
            "get_input": "client_id"
          },
          "client_secret": {
            "get_input": "client_secret"
          },
          "endpoint_resource": {
            "get_input": "endpoint_resource"
          },
          "endpoints_resource_manager": {
            "get_input": "endpoints_resource_manager"
          },
          "endpoint_verify": {
            "get_input": "endpoint_verify"
          },
          "endpoints_active_directory": {
            "get_input": "endpoints_active_directory"
          }
        },
        "name": {
          "concat": [
            {
              "get_input": "resource_prefix"
            },
            "resource_group",
            {
              "get_input": "resource_suffix"
            }
          ]
        },
        "location": {
          "get_input": "location"
        }
      }
    },
    "network": {
      "type": "cloudify.azure.nodes.network.VirtualNetwork",
      "properties": {
        "azure_config": {
          "subscription_id": {
            "get_input": "subscription_id"
          },
          "tenant_id": {
            "get_input": "tenant_id"
          },
          "client_id": {
            "get_input": "client_id"
          },
          "client_secret": {
            "get_input": "client_secret"
          },
          "endpoint_resource": {
            "get_input": "endpoint_resource"
          },
          "endpoints_resource_manager": {
            "get_input": "endpoints_resource_manager"
          },
          "endpoint_verify": {
            "get_input": "endpoint_verify"
          },
          "endpoints_active_directory": {
            "get_input": "endpoints_active_directory"
          }
        },
        "api_version": {
          "get_input": "network_api_version"
        },
        "name": {
          "concat": [
            {
              "get_input": "resource_prefix"
            },
            "vnet",
            {
              "get_input": "resource_suffix"
            }
          ]
        },
        "location": {
          "get_input": "location"
        },
        "retry_after": {
          "get_input": "retry_after"
        }
      },
      "relationships": [
        {
          "type": "cloudify.azure.relationships.contained_in_resource_group",
          "target": "resource_group"
        }
      ]
    },
    "subnet": {
      "type": "cloudify.azure.nodes.network.Subnet",
      "properties": {
        "azure_config": {
          "subscription_id": {
            "get_input": "subscription_id"
          },
          "tenant_id": {
            "get_input": "tenant_id"
          },
          "client_id": {
            "get_input": "client_id"
          },
          "client_secret": {
            "get_input": "client_secret"
          },
          "endpoint_resource": {
            "get_input": "endpoint_resource"
          },
          "endpoints_resource_manager": {
            "get_input": "endpoints_resource_manager"
          },
          "endpoint_verify": {
            "get_input": "endpoint_verify"
          },
          "endpoints_active_directory": {
            "get_input": "endpoints_active_directory"
          }
        },
        "api_version": {
          "get_input": "network_api_version"
        },
        "name": {
          "concat": [
            {
              "get_input": "resource_prefix"
            },
            "vsubnet",
            {
              "get_input": "resource_suffix"
            }
          ]
        },
        "location": {
          "get_input": "location"
        },
        "retry_after": {
          "get_input": "retry_after"
        },
        "resource_config": {
          "addressPrefix": {
            "get_input": "public_subnet_cidr"
          }
        }
      },
      "relationships": [
        {
          "type": "cloudify.azure.relationships.contained_in_virtual_network",
          "target": "network"
        }
      ]
    }
  },
  "capabilities": {
    "resource_group": {
      "value": {
        "get_attribute": [
          "resource_group",
          "name"
        ]
      }
    },
    "virtual_network": {
      "value": {
        "get_attribute": [
          "network",
          "name"
        ]
      }
    },
    "public_subnet": {
      "value": {
        "get_attribute": [
          "subnet",
          "name"
        ]
      }
    },
    "location": {
      "value": {
        "get_input": "location"
      }
    }
  }
}
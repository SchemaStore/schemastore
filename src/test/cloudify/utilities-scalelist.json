          "delete": {
            "inputs": {
              "defined_in_inputs": {
                "get_attribute": [
                  "three",
                  "resource_id"
                ]
              }
            }
          }
        }
      },
      "relationships": [
        {
          "type": "cloudify.relationships.connected_to",
          "target": "two"
        },
        {
          "type": "cloudify.relationships.contained_in",
          "target": "three"
        }
      ]
    },
    "six": {
      "type": "scale_example_node",
      "properties": {
        "resource_name": "six0",
        "_transaction_id": "two_precreated"
      },
      "interfaces": {
        "cloudify.interfaces.lifecycle": {
          "create": {
            "inputs": {
              "defined_in_inputs": {
                "get_attribute": [
                  "four",
                  "resource_id"
                ]
              }
            }

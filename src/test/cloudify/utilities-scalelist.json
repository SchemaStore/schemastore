      "relationships": [
        {
          "type": "cloudify.relationships.connected_to",
          "target": "four"
        }
      ]
    }
  },
  "groups": {
    "full_scale": {
      "members": [
        "two",
        "four",
        "six",
        "five"
      ]
    },
    "two_scale": {
      "members": [
        "two"
      ]
    },
    "four_scale": {
      "members": [
        "three",
        "four",
        "six"
      ]
    },
    "five_scale": {
      "members": [
        "five"
      ]
    }
  },
  "policies": {
    "two_scaling_policy": {
      "type": "cloudify.policies.scaling",
      "properties": {
        "default_instances": 1
      },
      "targets": [
        "two_scale"
      ]
    },
    "four_scaling_policy": {
      "type": "cloudify.policies.scaling",
      "properties": {
        "default_instances": 1
      },
      "targets": [
        "four_scale"
      ]
    },
    "five_scaling_policy": {
      "type": "cloudify.policies.scaling",
      "properties": {

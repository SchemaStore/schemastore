              }
            }
          }
        }
      },
      "relationships": [
        {
          "type": "cloudify.relationships.connected_to",
          "target": "four"
        },
        {
          "type": "cloudify.relationships.depends_on",
          "target": "two"
        }
      ]
    },
    "five": {
      "type": "scale_example_node",
      "properties": {
        "resource_name": "five0",
        "_transaction_id": "five_precreated"
      },
      "interfaces": {
        "cloudify.interfaces.lifecycle": {
          "create": {
            "inputs": {
              "defined_in_inputs": {
                "get_attribute": [
                  "four",
                  "resource_id"
                ]
              }
            }
          },
          "delete": {
            "inputs": {
              "defined_in_inputs": {
                "get_attribute": [
                  "four",
                  "resource_id"
                ]

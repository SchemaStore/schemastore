{
  "tosca_definitions_version": "cloudify_dsl_1_3",
  "description": "Scale List Workflows checks\n",
  "imports": [
    "http://www.getcloudify.org/spec/cloudify/5.0.0/types.yaml",
    "plugin:cloudify-utilities-plugin"
  ],
  "node_types": {
    "scale_example_node": {
      "derived_from": "cloudify.nodes.Root",
      "properties": {
        "predefined": {
          "description": "Value have used with install workflow\n",
          "default": ""
        },
        "resource_name": {
          "description": "Value have used with install workflow\n",
          "default": ""
        },
        "_transaction_id": {
          "description": "Used for remove instances precreted on install\n",
          "default": ""
        }
      },
      "interfaces": {
        "cloudify.interfaces.lifecycle": {
          "create": {
            "implementation": "scripts/create.py",
            "executor": "central_deployment_agent",
            "inputs": {
              "defined_in_inputs": {
                "description": "Value have used in any of workflows\n",
                "default": ""
              }
            }
          },
          "update": {
            "implementation": "scripts/update.py",
            "executor": "central_deployment_agent",
            "inputs": {}
          },
          "delete": {
            "implementation": "scripts/delete.py",
            "executor": "central_deployment_agent",
            "inputs": {
              "defined_in_inputs": {
                "description": "Value have used in any of workflows\n",
                "default": ""
              }
            }
          }
        }
      }
    },
    "scale_example_compute": {
      "derived_from": "cloudify.nodes.Compute",
      "properties": {
        "predefined": {
          "description": "Value have used with install workflow\n",
          "default": ""
        },
        "agent_config": {
          "default": {
            "install_method": "none"
          }
        },
        "resource_name": {
          "description": "Value have used with install workflow\n",
          "default": ""
        },
        "_transaction_id": {
          "description": "Used for remove instances precreted on install\n",
          "default": ""
        }
      },
      "interfaces": {
        "cloudify.interfaces.lifecycle": {
          "create": {
            "implementation": "scripts/create.py",
            "executor": "central_deployment_agent",
            "inputs": {
              "defined_in_inputs": {
                "description": "Value have used in any of workflows\n",
                "default": ""
              }
            }
          },
          "update": {
            "implementation": "scripts/update.py",
            "executor": "central_deployment_agent",
            "inputs": {}
          },
          "delete": {
            "implementation": "scripts/delete.py",
            "executor": "central_deployment_agent",
            "inputs": {
              "defined_in_inputs": {
                "description": "Value have used in any of workflows\n",
                "default": ""
              }
            }
          }
        }
      }
    }
  },
  "node_templates": {
    "one": {
      "type": "scale_example_node",
      "properties": {
        "resource_name": "one0"
      }
    },
    "two": {
      "type": "scale_example_node",
      "properties": {
        "resource_name": "two0",
        "_transaction_id": "two_precreated"
      },
      "interfaces": {
        "cloudify.interfaces.lifecycle": {
          "create": {
            "inputs": {
              "defined_in_inputs": {
                "get_attribute": [
                  "one",
                  "resource_id"
                ]
              }
            }
          },
          "delete": {
            "inputs": {
              "defined_in_inputs": {
                "get_attribute": [
                  "one",
                  "resource_id"
                ]
              }
            }
          }
        }
      }
    },
    "three": {
      "type": "scale_example_compute",
      "properties": {
        "resource_name": "three0",
        "_transaction_id": "two_precreated"
      },
      "relationships": [
        {
          "type": "cloudify.relationships.connected_to",
          "target": "two"
        }
      ]
    },
    "four": {
      "type": "scale_example_node",
      "properties": {
        "resource_name": "four0",

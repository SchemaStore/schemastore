{
  "stages": [
    "build",
    "test",
    "deploy",
    "random"
  ],
  "image": "foo:latest",
  "services": ["sql:latest"],
  "before_script": ["echo test", "echo test2"],
  "after_script": [],
  "cache": {
    "key": "asd",
    "paths": [
      "dist/",
      ".foo"
    ],
    "untracked": false,
    "policy": "pull"
  },
  "variables": {
    "STAGE": "yep",
    "PROD": "nope"
  },
  "include": "/path-to-file.yml",

  "build": {
    "image": {
      "name": "node:latest"
    },
    "services": [],
    "stage": "build",
    "script": "npm run build",
    "before_script": ["npm install"],
    "cache": {
      "key": "$CI_COMMIT_REF_NAME",
      "paths": [
        "node_modules/"
      ],
      "policy": "pull-push"
    },
    "artifacts": {
      "paths": [
        "dist/"
      ],
      "name": "bundles",
      "when": "on_success",
      "expire_in": "1 week",
      "reports": {
        "junit": "result.xml"
      }
    },
    "variables": {
      "FOO_BAR": "..."
    },
    "only": {
      "kubernetes": "active",
      "variables": [
        "$FOO_BAR == '...'"
      ]
    },
    "except": [
      "master",
      "tags"
    ],
    "tags": [
      "docker"
    ],
    "allow_failure": true,
    "when": "manual"
  },
  ".test_base": {
    "image": {
      "name": "node:latest",
      "entrypoint": [""]
    },
    "stage": "test",
    "script": "npm test"
  },
  "test": {
    "stage": "test",
    "coverage": "/Cycles: \\d+\\.\\d+$/",
    "dependencies": [],
    "extends": ".test_base"
  },
  "deploy": {
    "services": [
      {
        "name": "sql:latest",
        "entrypoint": [""],
        "command": ["/usr/bin/super-sql", "run"],
        "alias": "super-sql"
      },
      "sql:latest",
      {
        "name": "sql:latest",
        "alias": "default-sql"
      }
    ],
    "script": "dostuff",
    "stage": "deploy",
    "environment": {
      "name": "prod",
      "url": "http://example.com",
      "on_stop": "stop-deploy"
    },
    "only": [
      "master"
    ]
  }
}

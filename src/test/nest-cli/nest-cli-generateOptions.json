{
  "collection": "@nestjs/schematics",
  "compilerOptions": {
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "classValidatorShim": true,
          "controllerFileNameSuffix": ".controller.ts",
          "controllerKeyOfComment": "description",
          "dtoFileNameSuffix": [],
          "dtoKeyOfComment": "description",
          "introspectComments": true
        }
      },
      {
        "name": "@nestjs/graphql",
        "options": {
          "introspectComments": true,
          "typeFileNameSuffix": []
        }
      }
    ],
    "tsConfigPath": "apps/my-project/tsconfig.app.json",
    "webpack": true
  },
  "defaultLibraryPrefix": "@app",
  "generateOptions": {
    "flat": false,
    "spec": {
      "co": false,
      "config": true,
      "configuration": true,
      "controller": false
    }
  },
  "monorepo": true,
  "projects": {
    "my-app": {
      "compilerOptions": {
        "tsConfigPath": "apps/my-app/tsconfig.app.json"
      },
      "entryFile": "main",
      "generateOptions": {
        "baseDir": "modules",
        "flat": true,
        "spec": {
          "co": true,
          "config": false,
          "configuration": false,
          "controller": true
        }
      },
      "root": "apps/my-app",
      "sourceRoot": "apps/my-app/src",
      "type": "application"
    },
    "my-project": {
      "compilerOptions": {
        "tsConfigPath": "apps/my-project/tsconfig.app.json"
      },
      "entryFile": "main",
      "root": "apps/my-project",
      "sourceRoot": "apps/my-project/src",
      "type": "application"
    }
  },
  "root": "apps/my-project",
  "sourceRoot": "apps/my-project/src"
}

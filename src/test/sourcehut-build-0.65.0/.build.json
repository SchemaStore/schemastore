{
  "image": "archlinux",
  "arch": "x86_64",
  "packages": [
    "meson",
    "scdoc",
    "wayland-protocols",
    "wlroots-git",
    "wayland",
    "libxkbcommon",
    "cairo",
    "pango",
    "gdk-pixbuf2",
    "pixman",
    "libinput",
    "xorg-server-xwayland"
  ],
  "repositories": {
    "example": "https://example#abc"
  },
  "artifacts": [
    "build.tar.gz"
  ],
  "shell": false,
  "sources": [
    "https://github.com/swaywm/sway"
  ],
  "tasks": [
    {
      "setup": "cd sway\nmeson build\n"
    },
    {
      "build": "cd sway\nninja -C build\n"
    }
  ],
  "triggers": [
    {
      "action": "email",
      "condition": "always",
      "to": "foo@example.com"
    }
  ],
  "environment": {
    "site": "your-username.srht.site"
  },
  "secrets": [
    "46f739e5-4538-45dd-a79f-bf173b7a2ed9"
  ],
  "oauth": "pages.sr.ht/PAGES:RW"
}

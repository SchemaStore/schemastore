{
    "NLog": {
      "throwConfigExceptions": true,
      "targets": {
        "logfile": {
          "type": "File",
          "fileName": "c:/temp/nlog-${shortdate}.log"
        },
        "logconsole": {
          "type": "Console"
        }
      },
      "rules": [
        {
          "logger": "*",
          "minLevel": "Info",
          "writeTo": "logconsole"
        },
        {
          "logger": "*",
          "minLevel": "Debug",
          "writeTo": "logfile"
        }
      ]
    }
  }
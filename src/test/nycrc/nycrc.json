{
  "extends": "@istanbuljs/nyc-config-typescript",
  "include": ["**/*.js"],
  "exclude": [
    "coverage/**",
    "test/**",
    "test{,-*}.js",
    "**/*.test.js",
    "**/__tests__/**",
    "**/node_modules/**",
    "**/*.spec.js"
  ],
  "reporter": ["lcov", "text"],
  "check-coverage": true,
  "per-file": false
}

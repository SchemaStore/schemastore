{
    "arrowParens": "always",
    "bracketSpacing": true,
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": false,
    "jsxBracketSameLine": false,
    "jsxSingleQuote": false,
    "overrides": [
        {
            "files": ["*/*.Rmd"],
            "options": {
                "parser": "markdown"
            }
        },
        {
            "files": ["*/*.type"],
            "options": {
                "parser": "custom"
            }
        }
    ],
    "printWidth": 80,
    "proseWrap": "preserve",
    "quoteProps": "as-needed",
    "requirePragma": false,
    "semi": true,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
}

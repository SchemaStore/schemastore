{
  "bases": ["wordpress", "mysql"],
  "namePrefix": "demo-",
  "patches": [
    {
      "target": {
        "group": "apps",
        "version": "v1",
        "kind": "Deployment",
        "name": "myDeployment"
      },
      "path": "deploy-patch.yaml"
    },
    {
      "path": "patch.yaml"
    },
    {
      "patch": "- op: add \n  path: /spec/rules/0/host\n  value: mynewhost.example.com",
      "target": {
        "kind": "Ingress",
        "namespace": "test",
        "labelSelector": "env=dev",
        "annotationSelector": "zone=west"
      }
    }
  ],
  "vars": [
    {
      "name": "WORDPRESS_SERVICE",
      "objref": {
        "kind": "Service",
        "name": "wordpress",
        "apiVersion": "v1"
      }
    },
    {
      "name": "MYSQL_SERVICE",
      "objref": {
        "kind": "Service",
        "name": "mysql",
        "apiVersion": "v1"
      }
    }
  ]
}

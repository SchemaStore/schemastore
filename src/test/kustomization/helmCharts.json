{
  "apiVersion": "kustomize.config.k8s.io/v1beta1",
  "helmCharts": [
    {
      "includeCRDs": false,
      "name": "minecraft",
      "releaseName": "moria",
      "repo": "https://itzg.github.io/minecraft-server-charts",
      "valuesInline": {
        "minecraftServer": {
          "difficulty": "hard",
          "eula": true,
          "rcon": {
            "enabled": true
          }
        }
      },
      "version": "3.1.3"
    }
  ],
  "helmGlobals": {
    "chartHome": "/path/to/charts/",
    "configHome": "/path/to/configs/"
  },
  "kind": "Kustomization"
}

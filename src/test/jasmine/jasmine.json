{
  "$schema": "https://json.schemastore.org/jasmine.json",
  "spec_dir": "specs",
  "spec_files": [
    "**/*.spec.js"
  ],
  "helpers": [
    "helpers/*.js"
  ],
  "env": {
    "failSpecWithNoExpectations": true,
    "stopSpecOnExpectationFailure": false,
    "stopOnSpecFailure": true,
    "random": false
  }
}

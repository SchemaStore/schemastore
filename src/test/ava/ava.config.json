{
  "cache": true,
  "concurrency": 0,
  "environmentVariables": {
    "USE_FEATURE_FLAGS": "true"
  },
  "failFast": true,
  "extensions": ["js", "mjs", "cjs"],
  "files": ["./**/*.js"],
  "failWithoutAssertions": false,
  "ignoredByWatcher": ["xpto"],
  "workerThreads": false,
  "verbose": true,
  "tap": true,
  "match": ["**/*.js"],
  "nodeArguments": ["--someNodeArg"],
  "require": ["../path-to-mod.js"],
  "timeout": "10s",
  "snapshotDir": "./snapshots",
  "utilizeParallelBuilds": false
}

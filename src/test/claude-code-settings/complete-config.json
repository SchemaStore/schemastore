{
  "apiKeyHelper": "/usr/local/bin/claude-auth",
  "cleanupPeriodDays": 30,
  "env": {
    "DEBUG_MODE": "true",
    "EDITOR": "vim"
  },
  "includeCoAuthoredBy": false,
  "model": "sonnet",
  "permissions": {
    "allow": [
      "Read(~/.zshrc)",
      "Bash(ls:*)",
      "Bash(git log:*)",
      "WebFetch(domain:anthropic.com)"
    ],
    "ask": ["Write(//tmp/**)", "WebFetch(domain:trusted.example.com)"],
    "deny": [
      "Bash(rm:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "WebFetch(domain:bad.actor.com)"
    ]
  }
}

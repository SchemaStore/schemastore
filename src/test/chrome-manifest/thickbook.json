{
  "$schema": "https://json.schemastore.org/manifest",
  "content_scripts": [
    {
      "matches": ["http://www.amazon.com/*"],
      "js": ["js/content.js"],
      "css": ["style.css"],
      "run_at": "document_end"
    }
  ],
  "description": "How thick is that book?",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "manifest_version": 2,
  "name": "Thickbook",
  "permissions": ["contentSettings", "http://www.amazon.com/*"],
  "version": "0.0.1",
  "web_accessible_resources": ["paperclip.svg", "style.css", "bg.png"]
}

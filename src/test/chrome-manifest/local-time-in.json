{
	"$schema": "https://json.schemastore.org/manifest",

	"name": "Local Time In",
	"version": "2.0.0",
	"manifest_version": 2,
	"description": "See what time it is anywhere in the world - and what people in that country are doing right now.",
	"icons": {
		"16": "app/icons/big_icon.png",
		"48": "app/icons/big_icon.png",
		"128": "app/icons/big_icon.png"
	},
	"browser_action": {
		"default_icon": "app/icons/icon.png",
		"default_popup": "app/index.html"
	},
	"content_security_policy": "script-src 'self' https://maps.google.com https://*.gstatic.com https://*.googleapis.com 'unsafe-eval'; object-src 'self' "
}

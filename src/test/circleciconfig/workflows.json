{
  "version": 2.1,
  "workflows": {
    "workflow-with-when": {
      "when": "<<pipeline.parameters.rollback>>",
      "jobs": ["rollback-job"]
    },
    "workflow-with-unless": {
      "unless": "<<pipeline.parameters.run_rollback_wf>>",
      "jobs": [
        "test",
        "coverage",
        "lint",
        "verify_generated",
        "test_windows",
        {
          "job-with-name": {
            "name": "name-of-this-job"
          }
        },
        {
          "job-with-parameters": {
            "parameter-1": "value 1",
            "parameter-2": "value 2"
          }
        },
        "simple-job",
        {
          "job-with-context": {
            "context": "org-global"
          }
        },
        {
          "job-with-requires": {
            "requires": [
              "simple-job"
            ]
          }
        }
      ]
    },
    "workflow-with-logical-when": {
      "when": {
        "and": [
          "<<pipeline.parameters.rollback>>",
          true,
          {
            "not": false
          },
          {
            "or": [ 0, "123" ]
          }
        ]
      }
    }
  }
}

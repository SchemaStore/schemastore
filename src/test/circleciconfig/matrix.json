{
  "version": 2.1,
  "workflows": {
    "my-workflow": {
      "jobs": [
        {
          "simple-matrix": {
            "matrix": {
              "parameters": {
                "version": [
                  "0.1",
                  "0.2",
                  "0.3"
                ],
                "platform": [
                  "macos",
                  "windows",
                  "linux"
                ]
              }
            }
          }
        },
        {
          "matrix-with-exclude": {
            "matrix": {
              "parameters": {
                "a": [1, 2, 3],
                "b": [4, 5, 6]
              },
              "exclude": [
                {
                  "a": 3,
                  "b": 5
                }
              ]
            }
          }
        },
        {
          "matrix-with-alias": {
            "matrix": {
              "parameters": {
                "a": [1, 2, 3],
                "b": [4, 5, 6]
              },
              "alias": "my-matrix"
            }
          }
        }
      ]
    }
  }
}

{
  "version": 2.1,
  "commands": {
    "build-image": {
      "description": "Build Docker image, push to Google Container Registry",
      "parameters": {
        "gcloud_service_key": {
          "type": "string"
        }
      },
      "steps": [
        {
          "run": "apk add docker"
        }
      ]
    }
  },
  "workflows": {
    "version": 2,
    "chromeless": {
      "jobs": [
        "build_node_6",
        "build_node_8",
        {
          "release": {
            "requires": ["build_node_6", "build_node_8"],
            "filters": {
              "branches": {
                "only": "master"
              }
            }
          }
        }
      ]
    }
  },
  "restore_cache": {
    "restore_cache": {
      "keys": ["npm-cache-{{ checksum \"package-lock.json\" }}"]
    }
  },
  "save_cache": {
    "save_cache": {
      "key": "npm-cache-{{ checksum \"package-lock.json\" }}",
      "paths": ["~/.npm"]
    }
  },
  "codecov": {
    "run": {
      "name": "Codecov",
      "command": "node_modules/.bin/nyc report --reporter=json && bash <(curl -s https://codecov.io/bash) -f coverage/coverage-final.json"
    }
  },
  "jobs": {
    "build_node_6": {
      "working_directory": "~/chromeless",
      "docker": [
        {
          "image": "circleci/node:6"
        },
        {
          "image": "yukinying/chrome-headless-browser"
        }
      ],
      "steps": [
        {
          "run": "sudo npm install -g npm@5 --quiet --no-progress --depth 0"
        },
        {
          "run": "node -v; npm -v"
        },
        "checkout",
        "setup_remote_docker",
        {
          "restore_cache": {
            "keys": ["npm-cache-{{ checksum \"package-lock.json\" }}"]
          }
        },
        {
          "run": "npm install"
        },
        {
          "save_cache": {
            "key": "npm-cache-{{ checksum \"package-lock.json\" }}",
            "paths": ["~/.npm"]
          }
        },
        {
          "run": "npm test"
        },
        {
          "run": {
            "name": "Codecov",
            "command": "node_modules/.bin/nyc report --reporter=json && bash <(curl -s https://codecov.io/bash) -f coverage/coverage-final.json"
          }
        },
        {
          "build-image": {
            "gcloud-service-key": "SERVICE_KEY_STRING"
          }
        }
      ]
    },
    "build_node_8": {
      "working_directory": "~/chromeless",
      "docker": [
        {
          "image": "circleci/node:8"
        },
        {
          "image": "yukinying/chrome-headless-browser"
        }
      ],
      "steps": [
        {
          "run": "node -v; npm -v"
        },
        "checkout",
        {
          "setup_remote_docker": {
            "docker_layer_caching": true
          }
        },
        {
          "restore_cache": {
            "keys": ["npm-cache-{{ checksum \"package-lock.json\" }}"]
          }
        },
        {
          "run": "npm install"
        },
        {
          "save_cache": {
            "key": "npm-cache-{{ checksum \"package-lock.json\" }}",
            "paths": ["~/.npm"]
          }
        },
        {
          "run": "npm test"
        },
        {
          "run": {
            "name": "Codecov",
            "command": "node_modules/.bin/nyc report --reporter=json && bash <(curl -s https://codecov.io/bash) -f coverage/coverage-final.json"
          }
        }
      ]
    },
    "release": {
      "working_directory": "~/chromeless",
      "docker": [
        {
          "image": "circleci/node:8"
        }
      ],
      "steps": [
        {
          "run": "node -v; npm -v"
        },
        {
          "checkout": {
            "name": "Check out repository",
            "path": "~/chromeless/test"
          }
        },
        {
          "setup_remote_docker": {
            "name": "Setup docker",
            "version": "17.11.0-ce"
          }
        },
        {
          "restore_cache": {
            "name": "Restore npm cache",
            "keys": ["npm-cache-{{ checksum \"package-lock.json\" }}"]
          }
        },
        {
          "run": "npm install"
        },
        {
          "save_cache": {
            "name": "Save npm cache",
            "key": "npm-cache-{{ checksum \"package-lock.json\" }}",
            "paths": ["~/.npm"]
          }
        },
        {
          "run": "npm run semantic-release"
        }
      ]
    }
  }
}

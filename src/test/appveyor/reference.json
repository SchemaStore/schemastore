{
  "version": "1.0.{build}",
  "branches": {
    "only": ["master", "production"],
    "except": ["gh-pages"]
  },
  "skip_tags": true,
  "skip_non_tags": true,
  "skip_commits": {
    "message": "/Created.*\\.(png|jpg|jpeg|bmp|gif)/",
    "author": "John"
  },
  "only_commits": {
    "message": "/build/",
    "author": "jack@company.com"
  },
  "skip_branch_with_pr": true,
  "max_jobs": 1,
  "image": "Visual Studio 2015",
  "init": ["git config --global core.autocrlf input"],
  "clone_folder": "c:\\projects\\myproject",
  "shallow_clone": true,
  "clone_depth": 5,
  "hosts": {
    "queue-server": "127.0.0.1",
    "db.server.com": "127.0.0.2"
  },
  "environment": {
    "my_var1": "value1",
    "my_var2": "value2",
    "my_secure_var1": {
      "secure": "FW3tJ3fMncxvs58/ifSP7w=="
    }
  },
  "matrix": {
    "fast_finish": true,
    "allow_failures": [
      {
        "platform": "x86",
        "configuration": "Debug"
      },
      {
        "platform": "x64",
        "configuration": "Release"
      }
    ],
    "exclude": [
      {
        "platform": "x86",
        "configuration": "Debug"
      }
    ]
  },
  "cache": [
    "packages -> **\\packages.config",
    "projectA\\libs",
    "node_modules",
    "%LocalAppData%\\NuGet\\Cache",
    "%LocalAppData%\\NuGet\\v3-cache"
  ],
  "services": [
    "mssql2014",
    "mssql2014rs",
    "mssql2012sp1",
    "mssql2012sp1rs",
    "mssql2008r2sp2",
    "mssql2008r2sp2rs",
    "mysql",
    "postgresql",
    "iis",
    "msmq",
    "mongodb"
  ],
  "install": [
    "echo This is batch",
    {
      "ps": "Write-Host 'This is PowerShell'"
    },
    {
      "cmd": "echo This is batch again"
    },
    {
      "cmd": "set MY_VAR=12345"
    },
    {
      "pwsh": "Write-Host 'This is PowerShell Core'"
    },
    {
      "sh": "printf 'this is bash'"
    }
  ],
  "assembly_info": {
    "patch": true,
    "file": "AssemblyInfo.*",
    "assembly_version": "2.2.{build}",
    "assembly_file_version": "{version}",
    "assembly_informational_version": "{version}"
  },
  "nuget": {
    "account_feed": true,
    "project_feed": true,
    "disable_publish_on_pr": true
  },
  "platform": "Any CPU",
  "configuration": "Release",
  "build": {
    "parallel": true,
    "project": "MyTestAzureCS.sln",
    "publish_wap": true,
    "publish_wap_xcopy": true,
    "publish_azure": true,
    "publish_nuget": true,
    "publish_nuget_symbols": true,
    "include_nuget_references": true,
    "verbosity": "quiet"
  },
  "before_build": ["before build"],
  "before_package": ["before package"],
  "after_build": ["after build"],
  "build_script": ["build script"],
  "test": {
    "assemblies": {
      "only": ["asm1.dll", "asm2.dll"]
    },
    "categories": {
      "only": ["UI", "E2E"]
    }
  },
  "before_test": [
    "echo script1",
    {
      "ps": "Write-Host \"script1\""
    }
  ],
  "after_test": ["after test"],
  "test_script": ["echo This is my custom test script"],
  "artifacts": [
    {
      "path": "test.zip"
    },
    {
      "path": "MyProject\\bin\\$(configuration)",
      "name": "myapp"
    },
    {
      "path": "logs"
    },
    {
      "path": "**\\*.nupkg"
    }
  ],
  "deploy": [
    {
      "provider": "FTP",
      "protocol": "ftp|ftps|sftp",
      "host": "ftp.myserver.com",
      "username": "admin",
      "password": {
        "secure": "eYKZKFkkEvFYWX6NfjZIVw=="
      },
      "folder": null,
      "application": null,
      "active_mode": false,
      "beta": true,
      "debug": true
    },
    {
      "provider": "S3",
      "access_key_id": {
        "secure": "ABcd=="
      },
      "secret_access_key": {
        "secure": "ABcd=="
      },
      "bucket": "my_bucket",
      "folder": null,
      "artifact": null,
      "set_public": false
    },
    {
      "provider": "AzureBlob",
      "storage_account_name": {
        "secure": "ABcd=="
      },
      "storage_access_key": {
        "secure": "ABcd=="
      },
      "container": "my_container",
      "folder": null,
      "artifact": null
    },
    {
      "provider": "WebDeploy",
      "server": "http://www.deploy.com/myendpoint",
      "website": "mywebsite",
      "username": "user",
      "password": {
        "secure": "eYKZKFkkEvFYWX6NfjZIVw=="
      },
      "ntlm": false,
      "remove_files": false,
      "app_offline": false,
      "do_not_use_checksum": true,
      "sync_retry_attempts": 2,
      "sync_retry_interval": 2000,
      "aspnet_core": true,
      "aspnet_core_force_restart": true,
      "skip_dirs": "\\\\App_Data",
      "skip_files": "web.config",
      "true": {
        "branch": "release",
        "platform": "x86",
        "configuration": "debug"
      }
    },
    {
      "provider": "AzureCS",
      "subscription_id": {
        "secure": "fjZIVw=="
      },
      "subscription_certificate": {
        "secure": "eYKZKFkkEv...FYWX6NfjZIVw=="
      },
      "storage_account_name": "my_storage",
      "storage_access_key": {
        "secure": "ABcd=="
      },
      "service": "my_service",
      "slot": "Production",
      "target_profile": "Cloud",
      "artifact": "MyPackage.cspkg"
    },
    {
      "provider": "NuGet",
      "server": "https://my.nuget.server/feed",
      "api_key": {
        "secure": "FYWX6NfjZIVw=="
      },
      "skip_symbols": false,
      "symbol_server": "https://your.symbol.server/feed",
      "artifact": "MyPackage.nupkg"
    },
    {
      "provider": "GitHub",
      "artifact": "/.*\\.nupkg/",
      "draft": false,
      "prerelease": false,
      "true": {
        "branch": "master",
        "appveyor_repo_tag": true
      }
    },
    {
      "provider": "Environment",
      "name": "staging",
      "true": {
        "branch": "staging",
        "env_var1": "value1",
        "env_var2": "value2"
      }
    }
  ],
  "before_deploy": ["do something"],
  "after_deploy": ["do something"],
  "deploy_script": ["do something"],
  "on_success": ["do something"],
  "on_failure": ["do something"],
  "on_finish": ["do something"],
  "notifications": [
    {
      "provider": "Email",
      "to": ["user1@email.com", "user2@email.com"],
      "subject": "Build {{status}}",
      "message": "{{message}}, {{commitId}}, ...",
      "on_build_status_changed": true
    },
    {
      "provider": "HipChat",
      "auth_token": {
        "secure": "RbOnSMSFKYzxzFRrxM1+XA=="
      },
      "room": "ProjectA",
      "template": "{message}, {commitId}, ..."
    },
    {
      "provider": "Slack",
      "incoming_webhook": "http://incoming-webhook-url"
    },
    {
      "provider": "Slack",
      "auth_token": {
        "secure": "kBl9BlxvRMr9liHmnBs14A=="
      },
      "channel": "development",
      "template": "{message}, {commitId}, ..."
    },
    {
      "provider": "Campfire",
      "account": "appveyor",
      "auth_token": {
        "secure": "RifLRG8Vfyol+sNhj9u2JA=="
      },
      "room": "ProjectA",
      "template": "{message}, {commitId}, ..."
    },
    {
      "provider": "Webhook",
      "url": "http://www.myhook2.com",
      "headers": {
        "User-Agent": "myapp 1.0",
        "Authorization": {
          "secure": "GhD+5xhLz/tkYY6AO3fcfQ=="
        }
      },
      "on_build_success": false,
      "on_build_failure": true,
      "on_build_status_changed": true
    }
  ]
}

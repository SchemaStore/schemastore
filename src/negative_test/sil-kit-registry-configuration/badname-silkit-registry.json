{
  "$schema": "RegistryConfiguration.schema.json",
  "Description": "This is a registry configuration description",
  "ListenUri": "silkit://0.0.0.0:8501",
  "Logging": {
    "Sinks": [
      {
        "Level": "Trace",
        "LogName": "Trace",
        "Type": "File"
      },
      {
        "Level": "Info",
        "Type": "Stdout"
      },
      {
        "Level": "Error",
        "Type": "Remote"
      }
    ],
    "LogFromRemotes": true,
    "FlushLevel": "Warn"
  }
}

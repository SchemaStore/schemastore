{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Patient Medical Record",
  "description": "Schema for a critical system: medical records.",
  "type": "object",
  "properties": {
    "patientID": {
      "description": "Unique identifier for the patient.",
      "type": "string",
      "pattern": "^[A-Z]{3}-[0-9]{4}$"
    },
    "fullName": {
      "type": "string",
      "minLength": 5
    },
    "birthDate": {
      "type": "string",
      "format": "date"
    },
    "bloodType": {
      "type": "string",
      "enum": ["A+", "A-", "B+", "B-", "O+", "O-", "AB+", "AB-"]
    },
    "allergies": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "medicalHistory": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date-time"
          },
          "condition": {
            "type": "string"
          },
          "treatment": {
            "type": "string"
          }
        },
        "required": ["date", "condition"]
      }
    }
  },
  "required": ["patientID", "fullName", "birthDate", "bloodType"]
}
